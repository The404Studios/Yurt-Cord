<Application x:Class="VeaMarketplace.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:VeaMarketplace.Client.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/TextStyles.xaml"/>
                <ResourceDictionary Source="Styles/Animations.xaml"/>
                <ResourceDictionary Source="Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:AudioLevelConverter x:Key="AudioLevelConverter"/>
            <converters:AudioLevelToHeightConverter x:Key="AudioLevelToHeightConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:TimeAgoConverter x:Key="TimeAgoConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:NullToVisibilityInverseConverter x:Key="NullToVisibilityInverseConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
            <converters:BanTypeConverter x:Key="BanTypeConverter"/>
            <converters:TimestampConverter x:Key="TimestampConverter"/>
            <converters:SliderWidthConverter x:Key="SliderWidthConverter"/>
            <converters:RoleToColorConverter x:Key="RoleToColorConverter"/>
            <converters:RankToBadgeConverter x:Key="RankToBadgeConverter"/>
            <converters:DefaultAvatarConverter x:Key="DefaultAvatarConverter"/>
            <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <converters:CountToVisibilityInverseConverter x:Key="CountToVisibilityInverseConverter"/>
            <converters:PositiveToVisibilityConverter x:Key="PositiveToVisibilityConverter"/>
            <converters:PositiveToBoolConverter x:Key="PositiveToBoolConverter"/>
            <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
            <converters:EqualityConverter x:Key="EqualityConverter"/>
            <converters:EqualityMultiConverter x:Key="EqualityMultiConverter"/>
            <converters:GreaterThanOneToVisibilityConverter x:Key="GreaterThanOneToVisibilityConverter"/>

            <!-- Converter Aliases for backward compatibility -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
            <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibility"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
            <converters:PositiveToVisibilityConverter x:Key="PositiveToVisibility"/>
            <converters:PositiveToBoolConverter x:Key="PositiveToBool"/>
            <converters:BoolToTextConverter x:Key="BoolToText"/>
            <converters:BoolToColorConverter x:Key="BoolToColor"/>
            <converters:PercentageToWidthConverter x:Key="PercentageToWidth"/>
            <converters:GreaterThanOneToVisibilityConverter x:Key="GreaterThanOneToVisibility"/>
            <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibility"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
