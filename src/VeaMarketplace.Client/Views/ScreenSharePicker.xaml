<Window x:Class="VeaMarketplace.Client.Views.ScreenSharePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Share Your Screen"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#2B2D31" CornerRadius="8" BorderBrush="#1E1F22" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1E1F22" CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock Text="Select What to Share" FontSize="16" FontWeight="SemiBold"
                               Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <Button x:Name="CloseBtn" Content="âœ•" Click="Close_Click"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Margin="0,0,12,0" Width="32" Height="32"
                            Background="Transparent" Foreground="#B5BAC1" BorderThickness="0"
                            FontSize="16" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#ED4245"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>
                    <!-- Screens Section -->
                    <TextBlock Text="SCREENS" FontSize="12" FontWeight="Bold"
                               Foreground="#B5BAC1" Margin="0,0,0,12"/>

                    <ItemsControl x:Name="DisplaysItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="DisplayBorder" Background="#1E1F22" CornerRadius="8"
                                        Margin="0,0,12,12" Padding="8" Cursor="Hand"
                                        BorderThickness="2" BorderBrush="Transparent"
                                        MouseLeftButtonDown="Display_Click">
                                    <StackPanel Width="180">
                                        <!-- Preview (placeholder) -->
                                        <Border Background="#36393F" CornerRadius="4" Height="100" Margin="0,0,0,8">
                                            <Grid>
                                                <TextBlock Text="ðŸ–¥ï¸" FontSize="32"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <Border Background="#5865F2" CornerRadius="2" Padding="4,2"
                                                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                                        Visibility="{Binding IsPrimary, Converter={StaticResource BoolToVis}}">
                                                    <TextBlock Text="Primary" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Display Name -->
                                        <TextBlock Text="{Binding FriendlyName}" FontSize="13" FontWeight="Medium"
                                                   Foreground="White" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="11" Foreground="#B5BAC1">
                                            <Run Text="{Binding Width}"/><Run Text=" Ã— "/><Run Text="{Binding Height}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter TargetName="DisplayBorder" Property="BorderBrush" Value="#5865F2"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Audio Options -->
                    <TextBlock Text="AUDIO OPTIONS" FontSize="12" FontWeight="Bold"
                               Foreground="#B5BAC1" Margin="0,20,0,12"/>

                    <Border Background="#1E1F22" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <CheckBox x:Name="ShareAudioCheckbox" IsChecked="False" Margin="0,0,0,8">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="CheckBox">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border x:Name="CheckBorder" Width="20" Height="20"
                                                                CornerRadius="4" Background="#36393F"
                                                                BorderBrush="#5865F2" BorderThickness="2"
                                                                Margin="0,0,10,0">
                                                            <TextBlock x:Name="CheckMark" Text="âœ“" FontSize="12"
                                                                       Foreground="White" HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center" Visibility="Collapsed"/>
                                                        </Border>
                                                        <ContentPresenter VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="CheckBorder" Property="Background" Value="#5865F2"/>
                                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </CheckBox.Style>
                                <StackPanel>
                                    <TextBlock Text="Share Audio" FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Share system audio along with your screen"
                                               FontSize="11" Foreground="#B5BAC1"/>
                                </StackPanel>
                            </CheckBox>
                        </StackPanel>
                    </Border>

                    <!-- Quality Settings -->
                    <TextBlock Text="STREAM QUALITY" FontSize="12" FontWeight="Bold"
                               Foreground="#B5BAC1" Margin="0,20,0,12"/>

                    <Border Background="#1E1F22" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Resolution" FontSize="13" Foreground="#B5BAC1" Margin="0,0,0,8"/>
                            <ComboBox x:Name="ResolutionCombo" SelectedIndex="1">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#36393F"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBoxItem Content="720p (1280Ã—720)" Tag="720"/>
                                <ComboBoxItem Content="1080p (1920Ã—1080)" Tag="1080"/>
                                <ComboBoxItem Content="Source (Native Resolution)" Tag="0"/>
                            </ComboBox>

                            <TextBlock Text="Frame Rate" FontSize="13" Foreground="#B5BAC1" Margin="0,16,0,8"/>
                            <ComboBox x:Name="FrameRateCombo" SelectedIndex="1">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#36393F"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBoxItem Content="15 FPS" Tag="15"/>
                                <ComboBoxItem Content="30 FPS" Tag="30"/>
                                <ComboBoxItem Content="60 FPS" Tag="60"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#1E1F22" CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0">
                    <Button x:Name="CancelBtn" Content="Cancel" Click="Cancel_Click"
                            Width="96" Height="38" Margin="0,0,12,0"
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            FontSize="14" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#36393F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="ShareBtn" Content="Go Live" Click="Share_Click"
                            Width="96" Height="38"
                            Background="#5865F2" Foreground="White" BorderThickness="0"
                            FontSize="14" FontWeight="SemiBold" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#4752C4"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
