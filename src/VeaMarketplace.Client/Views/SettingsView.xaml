<UserControl x:Class="VeaMarketplace.Client.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:VeaMarketplace.Client.ViewModels"
             xmlns:converters="clr-namespace:VeaMarketplace.Client.Converters"
             Background="{StaticResource TertiaryDarkBrush}"
             KeyDown="UserControl_KeyDown">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:SliderWidthConverter x:Key="SliderWidthConverter"/>
        <converters:AudioLevelConverter x:Key="AudioLevelConverter"/>

        <!-- Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Background="{StaticResource PrimaryDarkBrush}"
                                    Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                            <Border Background="{StaticResource AccentBrush}"
                                    Height="4" CornerRadius="2" VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Converter={StaticResource SliderWidthConverter}}"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="16" Height="16"
                                                         Fill="{StaticResource AccentBrush}"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Background" Width="44" Height="24"
                                    CornerRadius="12" Background="{StaticResource QuaternaryDarkBrush}"/>
                            <Ellipse x:Name="Indicator" Width="18" Height="18"
                                     Fill="White" HorizontalAlignment="Left"
                                     Margin="3,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="{StaticResource AccentGreenBrush}"/>
                                <Setter TargetName="Indicator" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Indicator" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style for Dark Theme -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}"
                                    CornerRadius="4" BorderThickness="2" BorderBrush="Transparent">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="v" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom" AllowsTransparency="True">
                                <Border Background="{StaticResource SecondaryDarkBrush}"
                                        CornerRadius="4" Margin="0,4,0,0"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource QuaternaryDarkBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Navigation Button Style -->
        <Style x:Key="SidebarNavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource QuaternaryDarkBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Color Picker Button Style -->
        <Style x:Key="ColorPickerBtn" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="18" BorderThickness="3" BorderBrush="Transparent">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Settings Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SecondaryDarkBrush}">
            <StackPanel Margin="12,16">
                <TextBlock Text="USER SETTINGS" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextMutedBrush}" Margin="12,0,0,12"/>

                <Button x:Name="AccountNavButton" Content="ðŸ‘¤  My Account"
                        Style="{StaticResource SidebarNavButton}" Click="NavButton_Click" Tag="Account"/>
                <Button x:Name="ProfileNavButton" Content="ðŸŽ¨  Profile"
                        Style="{StaticResource SidebarNavButton}" Click="NavButton_Click" Tag="Profile"/>
                <Button x:Name="PrivacyNavButton" Content="ðŸ”’  Privacy &amp; Safety"
                        Style="{StaticResource SidebarNavButton}" Click="NavButton_Click" Tag="Privacy"/>

                <Rectangle Height="1" Fill="{StaticResource QuaternaryDarkBrush}" Margin="12,16"/>

                <TextBlock Text="APP SETTINGS" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextMutedBrush}" Margin="12,0,0,12"/>

                <Button x:Name="AppearanceNavButton" Content="ðŸ–¼ï¸  Appearance"
                        Style="{StaticResource SidebarNavButton}" Click="NavButton_Click" Tag="Appearance"/>
                <Button x:Name="NotificationsNavButton" Content="ðŸ””  Notifications"
                        Style="{StaticResource SidebarNavButton}" Click="NavButton_Click" Tag="Notifications"/>
                <Button x:Name="VoiceNavButton" Content="ðŸŽ™ï¸  Voice &amp; Audio"
                        Style="{StaticResource SidebarNavButton}" Click="NavButton_Click" Tag="Voice"
                        Background="{StaticResource QuaternaryDarkBrush}"/>
                <Button x:Name="KeybindsNavButton" Content="âŒ¨ï¸  Keybinds"
                        Style="{StaticResource SidebarNavButton}" Click="NavButton_Click" Tag="Keybinds"/>

                <Rectangle Height="1" Fill="{StaticResource QuaternaryDarkBrush}" Margin="12,16"/>

                <TextBlock x:Name="AdminSectionHeader" Text="ADMIN" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextMutedBrush}" Margin="12,0,0,12"
                           Visibility="Collapsed"/>

                <Button x:Name="ModerationNavButton" Content="ðŸ›¡ï¸  Moderation"
                        Style="{StaticResource SidebarNavButton}" Click="Moderation_Click"
                        Visibility="Collapsed"/>

                <Rectangle x:Name="AdminDivider" Height="1" Fill="{StaticResource QuaternaryDarkBrush}" Margin="12,16"
                           Visibility="Collapsed"/>

                <Button Content="ðŸšª  Log Out" Style="{StaticResource SidebarNavButton}"
                        Click="LogOut_Click" Foreground="{StaticResource AccentRedBrush}"/>
            </StackPanel>
        </Border>

        <!-- Settings Content Area -->
        <Grid Grid.Column="1">
            <!-- Header -->
            <Border Height="48" VerticalAlignment="Top"
                    BorderBrush="{StaticResource PrimaryDarkBrush}" BorderThickness="0,0,0,1">
                <Grid Margin="16,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="SettingsHeader" Text="Voice &amp; Audio" FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- All Settings Panels -->
            <ScrollViewer Margin="0,48,0,0" VerticalScrollBarVisibility="Auto"
                          Style="{StaticResource ModernScrollViewer}">
                <Grid>
                    <!-- Account Settings Panel -->
                    <StackPanel x:Name="AccountPanel" Visibility="Collapsed" Margin="24" MaxWidth="800">
                        <TextBlock Text="MY ACCOUNT" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="80" Height="80" CornerRadius="40" Margin="0,0,20,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#5865F2" Offset="0"/>
                                            <GradientStop Color="#EB459E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="Y" FontSize="32" FontWeight="Bold" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock x:Name="AccountUsername" Text="Username" FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="AccountEmail" Text="email@example.com" FontSize="13"
                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="2" Content="Edit Profile" Style="{StaticResource PrimaryButton}"
                                        VerticalAlignment="Center" Click="EditProfile_Click"/>
                            </Grid>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Password" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock Text="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" FontSize="14" Foreground="{StaticResource TextMutedBrush}"/>
                                <Button Content="Change Password" Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Left" Margin="0,12,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Two-Factor Authentication" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                                <TextBlock Text="Add an extra layer of security to your account"
                                           FontSize="12" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,12"/>
                                <Button Content="Enable 2FA" Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Profile Settings Panel -->
                    <StackPanel x:Name="ProfilePanel" Visibility="Collapsed" Margin="24" MaxWidth="800">
                        <TextBlock Text="PROFILE CUSTOMIZATION" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Display Name" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                <TextBox x:Name="DisplayNameBox" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="About Me" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                <TextBox x:Name="AboutMeBox" Style="{StaticResource ModernTextBox}"
                                         AcceptsReturn="True" Height="100" TextWrapping="Wrap"/>
                                <TextBlock Text="0/190" FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                           HorizontalAlignment="Right" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Banner Color" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                <WrapPanel>
                                    <Button Width="36" Height="36" Margin="4" Background="#5865F2" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#57F287" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#EB459E" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#FAA61A" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#ED4245" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#00D4FF" Style="{StaticResource ColorPickerBtn}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Appearance Settings Panel -->
                    <StackPanel x:Name="AppearancePanel" Visibility="Collapsed" Margin="24" MaxWidth="800">
                        <TextBlock Text="APPEARANCE" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Theme" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton x:Name="DarkTheme" Content="Dark" IsChecked="True"
                                                 Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,24,0"/>
                                    <RadioButton x:Name="LightTheme" Content="Light"
                                                 Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,24,0"/>
                                    <RadioButton x:Name="SystemTheme" Content="System"
                                                 Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Accent Color" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                <WrapPanel>
                                    <Button Width="36" Height="36" Margin="4" Background="#5865F2" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#3BA55C" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#FAA61A" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#ED4245" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#EB459E" Style="{StaticResource ColorPickerBtn}"/>
                                    <Button Width="36" Height="36" Margin="4" Background="#00D4FF" Style="{StaticResource ColorPickerBtn}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Compact Mode" FontSize="14" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Make elements smaller for more content"
                                               FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                                <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Notifications Settings Panel -->
                    <StackPanel x:Name="NotificationsPanel" Visibility="Collapsed" Margin="24" MaxWidth="800">
                        <TextBlock Text="NOTIFICATIONS" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <StackPanel>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Desktop Notifications" FontSize="14" FontWeight="Medium"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Show notifications on your desktop"
                                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}" IsChecked="True" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Message Sounds" FontSize="14" FontWeight="Medium"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Play a sound for new messages"
                                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}" IsChecked="True" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Friend Request Notifications" FontSize="14" FontWeight="Medium"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Get notified when someone sends a friend request"
                                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}" IsChecked="True" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Privacy Settings Panel -->
                    <StackPanel x:Name="PrivacyPanel" Visibility="Collapsed" Margin="24" MaxWidth="800">
                        <TextBlock Text="PRIVACY &amp; SAFETY" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Who can send you friend requests" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                <RadioButton Content="Everyone" IsChecked="True"
                                             Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                <RadioButton Content="Friends of Friends"
                                             Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                <RadioButton Content="No One"
                                             Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Show Online Status" FontSize="14" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Let others see when you're online"
                                               FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                                <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}" IsChecked="True" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Allow Direct Messages from Server Members" FontSize="14" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="People in the same servers can message you"
                                               FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                                <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}" IsChecked="True" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Blocked Users" FontSize="14" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Manage users you have blocked"
                                               FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="View Blocked" Style="{StaticResource SecondaryButton}"
                                        Click="BlockedUsers_Click" Padding="16,8" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Keybinds Panel -->
                    <StackPanel x:Name="KeybindsPanel" Visibility="Collapsed" Margin="24" MaxWidth="800">
                        <TextBlock Text="KEYBINDS" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Push to Talk" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="V" Style="{StaticResource SecondaryButton}"/>
                            </Grid>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Toggle Mute" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="M" Style="{StaticResource SecondaryButton}"/>
                            </Grid>
                        </Border>

                        <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Toggle Deafen" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="D" Style="{StaticResource SecondaryButton}"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Voice & Audio Panel (Original) -->
                    <StackPanel x:Name="VoicePanel" Visibility="Visible" Margin="24" MaxWidth="800">
                        <!-- Voice & Audio Section -->
                <TextBlock Text="VOICE &amp; AUDIO" FontSize="12" FontWeight="Bold"
                           Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,16"/>

                <!-- Input Device -->
                <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8"
                        Padding="20" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Input Device" FontSize="14" FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <ComboBox x:Name="InputDeviceCombo" Style="{StaticResource DarkComboBox}"
                                  ItemsSource="{Binding InputDevices}"
                                  SelectedItem="{Binding SelectedInputDevice, Mode=TwoWay}"
                                  DisplayMemberPath="Name"/>

                        <!-- Microphone Volume -->
                        <TextBlock Text="Input Volume" FontSize="13" Margin="0,16,0,8"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="0" Maximum="2"
                                    Value="{Binding MicrophoneVolume, Mode=TwoWay}"
                                    VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding MicrophoneVolume, StringFormat='{}{0:P0}'}"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Audio Level Meter -->
                        <TextBlock Text="Microphone Test" FontSize="13" Margin="0,16,0,8"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <Grid Height="8" Margin="0,0,0,8">
                            <Border Background="{StaticResource PrimaryDarkBrush}" CornerRadius="4"/>
                            <Border x:Name="AudioLevelIndicator" Background="{StaticResource AccentGreenBrush}"
                                    CornerRadius="4" HorizontalAlignment="Left">
                                <Border.Width>
                                    <MultiBinding Converter="{StaticResource AudioLevelConverter}">
                                        <Binding Path="TestAudioLevel"/>
                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                                    </MultiBinding>
                                </Border.Width>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Output Device -->
                <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8"
                        Padding="20" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Output Device" FontSize="14" FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <ComboBox x:Name="OutputDeviceCombo" Style="{StaticResource DarkComboBox}"
                                  ItemsSource="{Binding OutputDevices}"
                                  SelectedItem="{Binding SelectedOutputDevice, Mode=TwoWay}"
                                  DisplayMemberPath="Name"/>

                        <!-- Output Volume -->
                        <TextBlock Text="Output Volume" FontSize="13" Margin="0,16,0,8"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="0" Maximum="2"
                                    Value="{Binding Volume, Mode=TwoWay}"
                                    VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Volume, StringFormat='{}{0:P0}'}"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Voice Mode Section -->
                <TextBlock Text="VOICE MODE" FontSize="12" FontWeight="Bold"
                           Foreground="{StaticResource TextMutedBrush}" Margin="0,24,0,16"/>

                <!-- Push to Talk / Voice Activity -->
                <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8"
                        Padding="20" Margin="0,0,0,12">
                    <StackPanel>
                        <!-- Voice Mode Toggle -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Push to Talk" FontSize="14" FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Transmit voice only when holding a key"
                                           FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}"
                                      IsChecked="{Binding PushToTalkEnabled, Mode=TwoWay}"
                                      VerticalAlignment="Center"/>
                        </Grid>

                        <!-- PTT Key Binding -->
                        <StackPanel Visibility="{Binding PushToTalkEnabled, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Push to Talk Key" FontSize="13" Margin="0,0,0,8"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <Button x:Name="PttKeyButton" Click="PttKeyButton_Click"
                                    Style="{StaticResource SecondaryButton}" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Key: " Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding PushToTalkKeyDisplay}"
                                               FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                            </Button>
                            <TextBlock Text="Click to change, then press a new key"
                                       FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                       Margin="0,8,0,0"
                                       Visibility="{Binding IsRecordingPttKey, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- Voice Activity Sensitivity (when not PTT) -->
                        <StackPanel Visibility="{Binding PushToTalkEnabled, Converter={StaticResource InverseBoolToVis}}">
                            <TextBlock Text="Voice Activity Sensitivity" FontSize="13" Margin="0,0,0,8"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Minimum="0.001" Maximum="0.2"
                                        Value="{Binding VoiceActivityThreshold, Mode=TwoWay}"
                                        VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding VoiceActivityThreshold, StringFormat='Threshold: {0:F3}'}"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="11" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="Lower = more sensitive, Higher = less sensitive"
                                       FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Audio Processing -->
                <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="8"
                        Padding="20" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Audio Processing" FontSize="14" FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <!-- Noise Suppression -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Noise Suppression" FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="Reduces background noise"
                                           FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}"
                                      IsChecked="{Binding NoiseSuppression, Mode=TwoWay}"
                                      VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Echo Cancellation -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Echo Cancellation" FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="Prevents echo from speakers"
                                           FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitch}"
                                      IsChecked="{Binding EchoCancellation, Mode=TwoWay}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Refresh Devices Button -->
                <Button Content="Refresh Audio Devices" Style="{StaticResource SecondaryButton}"
                        Command="{Binding RefreshDevicesCommand}" HorizontalAlignment="Left"
                        Margin="0,8,0,0"/>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
