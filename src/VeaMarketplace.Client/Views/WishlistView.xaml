<UserControl x:Class="VeaMarketplace.Client.Views.WishlistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource PrimaryDark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryDark}" Padding="24" BorderBrush="{StaticResource TertiaryDark}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ’ My Wishlist" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding WishlistItems.Count, StringFormat='{}{0} items saved'}"
                               FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ComboBox Width="150" Margin="0,0,10,0" SelectedIndex="0">
                        <ComboBoxItem Content="All Items"/>
                        <ComboBoxItem Content="Price Drops"/>
                        <ComboBoxItem Content="In Stock"/>
                        <ComboBoxItem Content="Out of Stock"/>
                    </ComboBox>
                    <Button Content="Clear All" Style="{StaticResource DangerButton}"
                            Command="{Binding ClearWishlistCommand}" Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Wishlist Items -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <ItemsControl ItemsSource="{Binding WishlistItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource SecondaryDark}"
                                CornerRadius="10" Padding="16" Margin="0,0,0,16"
                                BorderBrush="{StaticResource TertiaryDark}" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Product Image -->
                                <Border Grid.Column="0" Width="100" Height="100" CornerRadius="8"
                                        BorderBrush="{StaticResource TertiaryDark}" BorderThickness="1">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding Product.ImageUrl}" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>

                                <!-- Product Info -->
                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Product.Title}" FontSize="16" FontWeight="SemiBold"
                                               Foreground="White" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Product.SellerUsername, StringFormat='by {0}'}"
                                               FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <!-- Stock Status -->
                                        <Border Background="{StaticResource Green}" CornerRadius="4" Padding="8,4"
                                                Visibility="{Binding Product.InStock, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="In Stock" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                        <Border Background="{StaticResource Red}" CornerRadius="4" Padding="8,4"
                                                Visibility="{Binding Product.InStock, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                            <TextBlock Text="Out of Stock" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Price Drop Indicator -->
                                        <Border Background="{StaticResource Orange}" CornerRadius="4" Padding="8,4" Margin="8,0,0,0"
                                                Visibility="{Binding HasPriceDropped, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="{Binding PriceDropPercent, StringFormat='ðŸ”¥ {0}% OFF'}"
                                                       FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Notes -->
                                    <TextBlock Text="{Binding Notes}" FontSize="12" Foreground="{StaticResource TextSecondary}"
                                               FontStyle="Italic" Margin="0,8,0,0" TextWrapping="Wrap"
                                               Visibility="{Binding Notes, Converter={StaticResource NullToVisibilityConverter}}"/>

                                    <TextBlock Text="{Binding AddedAt, StringFormat='Added on {0:MMM dd, yyyy}'}"
                                               FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Price Info -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="16,0">
                                    <TextBlock Text="{Binding Product.Price, StringFormat='${0:F2}'}"
                                               FontSize="24" FontWeight="Bold" Foreground="{StaticResource Blurple}"
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding PriceWhenAdded, StringFormat='Was ${0:F2}'}"
                                               FontSize="12" Foreground="{StaticResource TextSecondary}"
                                               HorizontalAlignment="Right" TextDecorations="Strikethrough"
                                               Visibility="{Binding HasPriceDropped, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <!-- Rating -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                        <TextBlock Text="â˜…" FontSize="14" Foreground="{StaticResource Blurple}"/>
                                        <TextBlock Text="{Binding Product.AverageRating, StringFormat='{}{0:F1}'}"
                                                   FontSize="13" Foreground="White" Margin="4,0,0,0"/>
                                        <TextBlock Text="{Binding Product.ReviewCount, StringFormat='({0})'}"
                                                   FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Actions -->
                                <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <Button Content="Add to Cart" Style="{StaticResource AccentButton}"
                                            Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="20,10" FontSize="13" Margin="0,0,0,8"/>
                                    <Button Content="View Details" Style="{StaticResource SecondaryButton}"
                                            Command="{Binding DataContext.ViewProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding Product.Id}"
                                            Padding="20,10" FontSize="13" Margin="0,0,0,8"/>
                                    <Button Content="ðŸ—‘ï¸ Remove" Style="{StaticResource DangerButton}"
                                            Command="{Binding DataContext.RemoveFromWishlistCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="20,10" FontSize="13"/>

                                    <!-- Notification Options -->
                                    <StackPanel Margin="0,12,0,0">
                                        <CheckBox Content="Price drop alerts"
                                                  IsChecked="{Binding NotifyOnPriceChange}"
                                                  Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                                        <CheckBox Content="Back in stock alerts"
                                                  IsChecked="{Binding NotifyWhenAvailable}"
                                                  Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding IsWishlistEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="ðŸ’" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
            <TextBlock Text="Your wishlist is empty" FontSize="20" FontWeight="SemiBold"
                       Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,16,0,8"/>
            <TextBlock Text="Save items you love for later" FontSize="14"
                       Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
            <Button Content="Browse Marketplace" Style="{StaticResource AccentButton}"
                    Command="{Binding BrowseMarketplaceCommand}"
                    HorizontalAlignment="Center" Margin="0,24,0,0" Padding="30,12"/>
        </StackPanel>
    </Grid>
</UserControl>
