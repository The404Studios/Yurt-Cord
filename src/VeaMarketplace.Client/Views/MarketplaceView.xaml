<UserControl x:Class="VeaMarketplace.Client.Views.MarketplaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls;assembly=YurtCord"
             Background="{StaticResource TertiaryDarkBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="60"/>
            <!-- Filters -->
            <RowDefinition Height="Auto"/>
            <!-- Products Grid -->
            <RowDefinition Height="*"/>
            <!-- Pagination -->
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource TertiaryDarkBrush}"
                BorderBrush="{StaticResource PrimaryDarkBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="24,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ›’" FontSize="28" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Marketplace" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Buy and sell anything â€¢ $1.50 listing fee"
                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="+ Create Listing" Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Click="CreateListingButton_Click"/>
            </Grid>
        </Border>

        <!-- Search and Filters -->
        <Border Grid.Row="1" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0" Background="{StaticResource PrimaryDarkBrush}"
                        CornerRadius="4" Margin="0,0,16,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" Margin="12,0"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="SearchBox" Grid.Column="1"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 CaretBrush="{StaticResource TextPrimaryBrush}"
                                 FontSize="14" Padding="8,12"
                                 KeyDown="SearchBox_KeyDown"/>
                    </Grid>
                </Border>

                <!-- Category Filters -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="All" Style="{StaticResource SecondaryButton}"
                            Tag="" Click="CategoryFilter_Click" Margin="0,0,8,0"/>
                    <Button Content="Software" Style="{StaticResource SecondaryButton}"
                            Tag="Software" Click="CategoryFilter_Click" Margin="0,0,8,0"/>
                    <Button Content="Games" Style="{StaticResource SecondaryButton}"
                            Tag="Games" Click="CategoryFilter_Click" Margin="0,0,8,0"/>
                    <Button Content="Services" Style="{StaticResource SecondaryButton}"
                            Tag="Services" Click="CategoryFilter_Click" Margin="0,0,8,0"/>
                    <Button Content="Digital" Style="{StaticResource SecondaryButton}"
                            Tag="Digital" Click="CategoryFilter_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Products Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource ModernScrollViewer}">
            <ItemsControl x:Name="ProductsItemsControl" Margin="16,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:ProductCard Margin="8" Click="ProductCard_Click"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Pagination -->
        <Border Grid.Row="3" Background="{StaticResource SecondaryDarkBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="PrevPageButton" Content="â† Previous"
                        Style="{StaticResource SecondaryButton}"
                        Click="PrevPage_Click" Margin="0,0,16,0"/>
                <TextBlock x:Name="PageInfoText" Text="Page 1 of 1"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center" FontSize="14"/>
                <Button x:Name="NextPageButton" Content="Next â†’"
                        Style="{StaticResource SecondaryButton}"
                        Click="NextPage_Click" Margin="16,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Create Listing Modal -->
        <Border x:Name="CreateListingModal" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#80000000">
            <Border Background="{StaticResource SecondaryDarkBrush}"
                    CornerRadius="8" Width="500" Padding="24"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Create New Listing" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="TITLE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="NewTitleBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>

                    <TextBlock Text="DESCRIPTION" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="NewDescriptionBox" Style="{StaticResource ModernTextBox}"
                             AcceptsReturn="True" Height="80" TextWrapping="Wrap" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="PRICE ($)" FontSize="11" FontWeight="Bold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            <TextBox x:Name="NewPriceBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="CATEGORY" FontSize="11" FontWeight="Bold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            <ComboBox x:Name="NewCategoryBox" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Software" Tag="Software"/>
                                <ComboBoxItem Content="Games" Tag="Games"/>
                                <ComboBoxItem Content="Accounts" Tag="Accounts"/>
                                <ComboBoxItem Content="Services" Tag="Services"/>
                                <ComboBoxItem Content="Digital" Tag="Digital"/>
                                <ComboBoxItem Content="Graphics" Tag="Graphics"/>
                                <ComboBoxItem Content="Other" Tag="Other" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="TAGS (comma separated)" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="NewTagsBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>

                    <TextBlock Text="IMAGE URL (optional)" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="NewImageBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>

                    <!-- Fee Notice -->
                    <Border Background="{StaticResource QuaternaryDarkBrush}"
                            CornerRadius="4" Padding="12" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’°" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="Listing fee: "/>
                                <Run Text="$1.50" Foreground="{StaticResource AccentYellowBrush}" FontWeight="Bold"/>
                                <Run Text=" â€¢ Accepts PayPal and Bitcoin"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Error Message -->
                    <Border x:Name="CreateErrorBorder" Visibility="Collapsed"
                            Background="#ED4245" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                        <TextBlock x:Name="CreateErrorText" Foreground="White" TextWrapping="Wrap"/>
                    </Border>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Cancel"
                                Style="{StaticResource SecondaryButton}"
                                Click="CancelCreateListing_Click" Margin="0,0,8,0"/>
                        <Button Grid.Column="1" Content="Create Listing"
                                Style="{StaticResource PrimaryButton}"
                                Click="ConfirmCreateListing_Click" Margin="8,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>

        <!-- Product Detail Modal -->
        <Border x:Name="ProductDetailModal" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#80000000">
            <Border Background="{StaticResource SecondaryDarkBrush}"
                    CornerRadius="8" Width="600" MaxHeight="600" Padding="24"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Grid>
                            <TextBlock x:Name="DetailTitleText" FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       TextWrapping="Wrap"/>
                            <Button Content="âœ•" Style="{StaticResource IconButton}"
                                    HorizontalAlignment="Right" Click="CloseDetail_Click"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,16">
                            <TextBlock x:Name="DetailSellerText"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <Border x:Name="DetailSellerBadge" CornerRadius="3"
                                    Padding="6,2" Margin="8,0,0,0" Visibility="Collapsed">
                                <TextBlock x:Name="DetailSellerBadgeText"
                                           FontSize="10" FontWeight="Bold" Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <!-- Product Image -->
                        <Border x:Name="DetailImageBorder" Height="200" CornerRadius="4"
                                Margin="0,0,0,16" Background="{StaticResource PrimaryDarkBrush}"
                                Visibility="Collapsed">
                            <Image x:Name="DetailImage" Stretch="Uniform"/>
                        </Border>

                        <TextBlock Text="DESCRIPTION" FontSize="11" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="DetailDescriptionText"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" Margin="0,0,0,20"/>

                        <!-- Tags -->
                        <WrapPanel x:Name="DetailTagsPanel" Margin="0,0,0,20">
                        </WrapPanel>

                        <!-- Price and Buy Section -->
                        <Border Background="{StaticResource QuaternaryDarkBrush}"
                                CornerRadius="4" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="DetailPriceText" FontSize="28" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGreenBrush}"/>
                                    <TextBlock Text="Pay with PayPal or Bitcoin"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="12"/>
                                </StackPanel>

                                <Button Grid.Column="1" Content="ðŸ›’ Buy Now"
                                        Style="{StaticResource PrimaryButton}"
                                        Click="BuyNow_Click"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#80000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="50" Height="50" CornerRadius="25"
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="4"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <RotateTransform x:Name="LoadingSpinner"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                </Border>
                <TextBlock Text="Loading..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
