<UserControl x:Class="VeaMarketplace.Client.Views.MarketplaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls"
             Background="{StaticResource TertiaryDarkBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="60"/>
            <!-- Filters -->
            <RowDefinition Height="Auto"/>
            <!-- Products Grid -->
            <RowDefinition Height="*"/>
            <!-- Pagination -->
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource TertiaryDarkBrush}"
                BorderBrush="{StaticResource PrimaryDarkBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="24,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ›’" FontSize="28" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Marketplace" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Buy and sell anything â€¢ $1.50 listing fee"
                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="MyListingsBtn" Content="ðŸ“¦ My Listings" Style="{StaticResource SecondaryButton}"
                            Margin="0,0,12,0" Click="MyListingsButton_Click"/>
                    <Button Content="+ Create Listing" Style="{StaticResource PrimaryButton}"
                            Click="CreateListingButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search and Filters -->
        <Border Grid.Row="1" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0" Background="{StaticResource PrimaryDarkBrush}"
                        CornerRadius="4" Margin="0,0,16,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" Margin="12,0"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="SearchBox" Grid.Column="1"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 CaretBrush="{StaticResource TextPrimaryBrush}"
                                 FontSize="14" Padding="8,12"
                                 KeyDown="SearchBox_KeyDown"/>
                    </Grid>
                </Border>

                <!-- Category Filters -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="All" Style="{StaticResource SecondaryButton}"
                            Tag="" Click="CategoryFilter_Click" Margin="0,0,8,0"/>
                    <Button Content="Software" Style="{StaticResource SecondaryButton}"
                            Tag="Software" Click="CategoryFilter_Click" Margin="0,0,8,0"/>
                    <Button Content="Games" Style="{StaticResource SecondaryButton}"
                            Tag="Games" Click="CategoryFilter_Click" Margin="0,0,8,0"/>
                    <Button Content="Services" Style="{StaticResource SecondaryButton}"
                            Tag="Services" Click="CategoryFilter_Click" Margin="0,0,8,0"/>
                    <Button Content="Digital" Style="{StaticResource SecondaryButton}"
                            Tag="Digital" Click="CategoryFilter_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Products Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource ModernScrollViewer}">
            <ItemsControl x:Name="ProductsItemsControl" Margin="16,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:ProductCard Margin="8" Click="ProductCard_Click"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Pagination -->
        <Border Grid.Row="3" Background="{StaticResource SecondaryDarkBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="PrevPageButton" Content="â† Previous"
                        Style="{StaticResource SecondaryButton}"
                        Click="PrevPage_Click" Margin="0,0,16,0"/>
                <TextBlock x:Name="PageInfoText" Text="Page 1 of 1"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center" FontSize="14"/>
                <Button x:Name="NextPageButton" Content="Next â†’"
                        Style="{StaticResource SecondaryButton}"
                        Click="NextPage_Click" Margin="16,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Create Listing Modal -->
        <Border x:Name="CreateListingModal" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#80000000">
            <Border Background="{StaticResource SecondaryDarkBrush}"
                    CornerRadius="8" Width="500" Padding="24"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Create New Listing" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="TITLE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="NewTitleBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>

                    <TextBlock Text="DESCRIPTION" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="NewDescriptionBox" Style="{StaticResource ModernTextBox}"
                             AcceptsReturn="True" Height="80" TextWrapping="Wrap" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="PRICE ($)" FontSize="11" FontWeight="Bold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            <TextBox x:Name="NewPriceBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="CATEGORY" FontSize="11" FontWeight="Bold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            <ComboBox x:Name="NewCategoryBox" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Software" Tag="Software"/>
                                <ComboBoxItem Content="Games" Tag="Games"/>
                                <ComboBoxItem Content="Accounts" Tag="Accounts"/>
                                <ComboBoxItem Content="Services" Tag="Services"/>
                                <ComboBoxItem Content="Digital" Tag="Digital"/>
                                <ComboBoxItem Content="Graphics" Tag="Graphics"/>
                                <ComboBoxItem Content="Other" Tag="Other" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="TAGS (comma separated)" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="NewTagsBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>

                    <TextBlock Text="IMAGE URL (optional)" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox x:Name="NewImageBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>

                    <!-- Fee Notice -->
                    <Border Background="{StaticResource QuaternaryDarkBrush}"
                            CornerRadius="4" Padding="12" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’°" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="Listing fee: "/>
                                <Run Text="$1.50" Foreground="{StaticResource AccentYellowBrush}" FontWeight="Bold"/>
                                <Run Text=" â€¢ Accepts PayPal and Bitcoin"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Error Message -->
                    <Border x:Name="CreateErrorBorder" Visibility="Collapsed"
                            Background="#ED4245" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                        <TextBlock x:Name="CreateErrorText" Foreground="White" TextWrapping="Wrap"/>
                    </Border>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Cancel"
                                Style="{StaticResource SecondaryButton}"
                                Click="CancelCreateListing_Click" Margin="0,0,8,0"/>
                        <Button Grid.Column="1" Content="Create Listing"
                                Style="{StaticResource PrimaryButton}"
                                Click="ConfirmCreateListing_Click" Margin="8,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>

        <!-- Product Detail Modal -->
        <Border x:Name="ProductDetailModal" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#80000000">
            <Border Background="{StaticResource SecondaryDarkBrush}"
                    CornerRadius="8" Width="600" MaxHeight="600" Padding="24"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Grid>
                            <TextBlock x:Name="DetailTitleText" FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       TextWrapping="Wrap"/>
                            <Button Content="âœ•" Style="{StaticResource IconButton}"
                                    HorizontalAlignment="Right" Click="CloseDetail_Click"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,16">
                            <TextBlock x:Name="DetailSellerText"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <Border x:Name="DetailSellerBadge" CornerRadius="3"
                                    Padding="6,2" Margin="8,0,0,0" Visibility="Collapsed">
                                <TextBlock x:Name="DetailSellerBadgeText"
                                           FontSize="10" FontWeight="Bold" Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <!-- Product Image -->
                        <Border x:Name="DetailImageBorder" Height="200" CornerRadius="4"
                                Margin="0,0,0,16" Background="{StaticResource PrimaryDarkBrush}"
                                Visibility="Collapsed">
                            <Image x:Name="DetailImage" Stretch="Uniform"/>
                        </Border>

                        <TextBlock Text="DESCRIPTION" FontSize="11" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="DetailDescriptionText"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" Margin="0,0,0,20"/>

                        <!-- Tags -->
                        <WrapPanel x:Name="DetailTagsPanel" Margin="0,0,0,20">
                        </WrapPanel>

                        <!-- Price and Buy Section -->
                        <Border Background="{StaticResource QuaternaryDarkBrush}"
                                CornerRadius="4" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="DetailPriceText" FontSize="28" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGreenBrush}"/>
                                    <TextBlock Text="Pay with PayPal or Bitcoin"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="12"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="ðŸ›’ Buy Now"
                                            Style="{StaticResource PrimaryButton}"
                                            Click="BuyNow_Click" Margin="0,0,8,0"/>
                                    <Button Content="ðŸ›’" Style="{StaticResource SecondaryButton}"
                                            ToolTip="Add to Cart" Click="AddToCart_Click"
                                            Width="40" Padding="0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Action Buttons -->
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Style="{StaticResource SecondaryButton}"
                                    Click="ShareProduct_Click" Margin="0,0,4,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”—" Margin="0,0,6,0"/>
                                    <TextBlock Text="Share"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="1" Style="{StaticResource SecondaryButton}"
                                    Click="AddToWishlist_Click" Margin="4,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="WishlistIcon" Text="ðŸ¤" Margin="0,0,6,0"/>
                                    <TextBlock Text="Wishlist"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="2" Style="{StaticResource SecondaryButton}"
                                    Click="ViewSeller_Click" Margin="4,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘¤" Margin="0,0,6,0"/>
                                    <TextBlock Text="Seller"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="3" Style="{StaticResource SecondaryButton}"
                                    Click="ReportProduct_Click" Margin="4,0,0,0"
                                    Foreground="{StaticResource AccentRedBrush}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âš " Margin="0,0,6,0"/>
                                    <TextBlock Text="Report"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#80000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="50" Height="50" CornerRadius="25"
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="4"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <RotateTransform x:Name="LoadingSpinner"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                </Border>
                <TextBlock Text="Loading..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- Share Dialog -->
        <Border x:Name="ShareDialog" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#80000000" MouseDown="ShareDialogOverlay_MouseDown">
            <controls:ShareContentDialog x:Name="ShareContentDialogControl"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          CloseRequested="ShareContentDialog_CloseRequested"
                                          ContentSharedToFriend="ShareContentDialog_SharedToFriend"
                                          ContentSharedToGroup="ShareContentDialog_SharedToGroup"
                                          LinkCopied="ShareContentDialog_LinkCopied"/>
        </Border>

        <!-- My Listings Panel -->
        <Border x:Name="MyListingsPanel" Grid.RowSpan="4" Visibility="Collapsed"
                Background="#80000000" MouseDown="MyListingsOverlay_MouseDown">
            <Border Background="{StaticResource SecondaryDarkBrush}"
                    CornerRadius="8" Width="700" MaxHeight="600" Padding="24"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¦" FontSize="24" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="My Listings" FontSize="18" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="MyListingsCountText" Text="0 active listings"
                                           FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </StackPanel>
                        <Button Content="âœ•" Style="{StaticResource IconButton}"
                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                Click="CloseMyListings_Click"/>
                    </Grid>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MyListingsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource QuaternaryDarkBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Product Image -->
                                            <Border Grid.Column="0" Width="60" Height="60"
                                                    CornerRadius="4" Margin="0,0,12,0"
                                                    Background="{StaticResource PrimaryDarkBrush}">
                                                <TextBlock Text="ðŸ“¦" FontSize="24"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Product Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}"
                                                               Foreground="{StaticResource AccentGreenBrush}"
                                                               FontWeight="Bold" Margin="0,0,12,0"/>
                                                    <TextBlock Text="{Binding Category}"
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               FontSize="12"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="ðŸ‘" FontSize="11" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding ViewCount}" FontSize="11"
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               Margin="0,0,12,0"/>
                                                    <TextBlock Text="â­" FontSize="11" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding AverageRating, StringFormat='{}{0:F1}'}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource TextMutedBrush}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Stats -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center"
                                                        Margin="0,0,16,0">
                                                <TextBlock Text="{Binding SalesCount, StringFormat='{}{0} sales'}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           HorizontalAlignment="Right"/>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <Button Content="âœï¸" Style="{StaticResource IconButton}"
                                                        Width="32" Height="32" Margin="0,0,4,0"
                                                        ToolTip="Edit" Tag="{Binding}"
                                                        Click="EditListing_Click"/>
                                                <Button Content="ðŸ”—" Style="{StaticResource IconButton}"
                                                        Width="32" Height="32" Margin="0,0,4,0"
                                                        ToolTip="Share" Tag="{Binding}"
                                                        Click="ShareListing_Click"/>
                                                <Button Content="ðŸ—‘ï¸" Style="{StaticResource IconButton}"
                                                        Width="32" Height="32" ToolTip="Delete"
                                                        Tag="{Binding}" Click="DeleteListing_Click"
                                                        Foreground="{StaticResource AccentRedBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel x:Name="NoListingsPanel" Grid.Row="1"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="ðŸ“­" FontSize="48" HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="You don't have any listings yet"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center"/>
                        <Button Content="+ Create Your First Listing"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,16,0,0" Click="CreateListingButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Toast Notification -->
        <Border x:Name="ToastNotification" Grid.RowSpan="4"
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="0,0,0,80" Visibility="Collapsed">
            <Border Background="{StaticResource QuaternaryDarkBrush}"
                    CornerRadius="8" Padding="16,12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âœ“" FontSize="16" Foreground="{StaticResource AccentGreenBrush}"
                               Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ToastText" FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- Quick Actions Toolbar -->
        <controls:QuickActionsToolbar x:Name="QuickActionsToolbar" Grid.RowSpan="4"
                                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                       Margin="0,0,24,24"
                                       ScrollTopRequested="QuickActions_ScrollTopRequested"
                                       RefreshRequested="QuickActions_RefreshRequested"
                                       FilterRequested="QuickActions_FilterRequested"
                                       CreateListingRequested="QuickActions_CreateListingRequested"/>
    </Grid>
</UserControl>
