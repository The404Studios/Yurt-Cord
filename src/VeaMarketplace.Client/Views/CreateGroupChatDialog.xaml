<Window x:Class="VeaMarketplace.Client.Views.CreateGroupChatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls"
        Title="Create Group Chat"
        Width="450" Height="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="{StaticResource PrimaryDarkBrush}"
            CornerRadius="12"
            Effect="{StaticResource WindowShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource SecondaryDarkBrush}"
                    CornerRadius="12,12,0,0" Padding="20,16">
                <Grid>
                    <TextBlock Text="Create Group Chat"
                               FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Left"/>
                    <Button x:Name="CloseButton" Style="{StaticResource IconButton}"
                            Content="âœ•" FontSize="14"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Group Info Section -->
            <StackPanel Grid.Row="1" Margin="20,16,20,0">
                <!-- Group Icon -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,16">
                    <Border x:Name="GroupIconBorder" Width="80" Height="80"
                            CornerRadius="40" Background="{StaticResource AccentBrush}"
                            Cursor="Hand" MouseLeftButtonDown="GroupIcon_Click">
                        <Grid>
                            <TextBlock x:Name="GroupIconInitials" Text="GC"
                                       FontSize="28" FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <Image x:Name="GroupIconImage" Visibility="Collapsed"
                                   Stretch="UniformToFill"/>
                        </Grid>
                    </Border>
                    <Border Width="28" Height="28" CornerRadius="14"
                            Background="{StaticResource AccentBrush}"
                            HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Margin="0,0,-4,-4" Cursor="Hand"
                            MouseLeftButtonDown="GroupIcon_Click">
                        <TextBlock Text="ðŸ“·" FontSize="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Group Name -->
                <TextBlock Text="GROUP NAME" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="GroupNameTextBox"
                         Style="{StaticResource DarkTextBox}"
                         MaxLength="100"
                         TextChanged="GroupNameTextBox_TextChanged"/>
                <TextBlock x:Name="NameCharCount" Text="0/100"
                           FontSize="10" Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Right" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Friend Search -->
            <StackPanel Grid.Row="2" Margin="20,16,20,0">
                <TextBlock Text="ADD FRIENDS" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,6"/>
                <Border Background="{StaticResource SecondaryDarkBrush}"
                        CornerRadius="6" Padding="10,8">
                    <Grid>
                        <TextBlock x:Name="SearchPlaceholder" Text="Search friends to add..."
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="13" VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                        <TextBox x:Name="FriendSearchBox"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 FontSize="13"
                                 TextChanged="FriendSearchBox_TextChanged"/>
                    </Grid>
                </Border>

                <!-- Selected Friends -->
                <ItemsControl x:Name="SelectedFriendsControl" Margin="0,8,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource AccentBrush}"
                                    CornerRadius="12" Padding="8,4" Margin="0,0,6,6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}" FontSize="12"
                                               Foreground="White" VerticalAlignment="Center"/>
                                    <Button Style="{StaticResource IconButton}"
                                            Content="âœ•" FontSize="10"
                                            Width="16" Height="16" Margin="6,0,0,0"
                                            Click="RemoveSelectedFriend_Click"
                                            Tag="{Binding Id}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Friends List -->
            <Border Grid.Row="3" Margin="20,8,20,0"
                    Background="{StaticResource SecondaryDarkBrush}"
                    CornerRadius="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="FriendsListControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        Padding="12,8" Cursor="Hand"
                                        MouseLeftButtonDown="FriendItem_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background"
                                                            Value="{StaticResource TertiaryDarkBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Border Grid.Column="0" Width="36" Height="36"
                                                CornerRadius="18" Margin="0,0,12,0">
                                            <Ellipse Width="36" Height="36">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding AvatarUrl}"
                                                                Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Border>

                                        <!-- Name and Status -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Username, StringFormat=@{0}}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                        </StackPanel>

                                        <!-- Selection Indicator -->
                                        <Border Grid.Column="2" Width="20" Height="20"
                                                CornerRadius="10"
                                                BorderThickness="2"
                                                BorderBrush="{StaticResource TextMutedBrush}"
                                                VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="Background"
                                                                    Value="{StaticResource AccentBrush}"/>
                                                            <Setter Property="BorderBrush"
                                                                    Value="{StaticResource AccentBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="âœ“" FontSize="12" FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Actions -->
            <Grid Grid.Row="4" Margin="20,16,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CancelButton" Grid.Column="0"
                        Content="Cancel" Style="{StaticResource SecondaryButton}"
                        Margin="0,0,8,0" Padding="0,12"
                        Click="CancelButton_Click"/>
                <Button x:Name="CreateButton" Grid.Column="1"
                        Content="Create Group" Style="{StaticResource PrimaryButton}"
                        Margin="8,0,0,0" Padding="0,12"
                        IsEnabled="False"
                        Click="CreateButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
