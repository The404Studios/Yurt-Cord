<Window x:Class="VeaMarketplace.Client.Views.CreateOutletRoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Room"
        Height="700" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1F22"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#2B2D31" CornerRadius="12" BorderBrush="#40444B" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1E1F22" CornerRadius="12,12,0,0" Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Create Your Room" FontSize="24" FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Set up a new outlet room for your community"
                                   FontSize="13" Foreground="#B9BBBE" Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" Style="{StaticResource IconButton}"
                            Width="32" Height="32" Click="Close_Click" VerticalAlignment="Top">
                        <TextBlock Text="X" FontSize="16" Foreground="#B9BBBE"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                          Style="{StaticResource ModernScrollViewer}">
                <StackPanel Margin="24,16">

                    <!-- Room Icon/Banner Section -->
                    <Border Background="#1E1F22" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Room Icon -->
                            <Border Grid.Column="0" Width="80" Height="80" CornerRadius="16"
                                    Background="#5865F2" Cursor="Hand"
                                    x:Name="RoomIconBorder" MouseLeftButtonDown="SelectIcon_Click">
                                <Grid>
                                    <TextBlock x:Name="RoomIconPlaceholder" Text="+"
                                               FontSize="36" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Image x:Name="RoomIconImage" Stretch="UniformToFill" Visibility="Collapsed"/>
                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Room Icon" FontSize="14" FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Click to upload an icon (recommended: 128x128)"
                                           FontSize="12" Foreground="#B9BBBE" Margin="0,4,0,8"/>
                                <Button Content="Upload Icon" Style="{StaticResource SecondaryButton}"
                                        Padding="12,6" Click="SelectIcon_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Room Name -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="ROOM NAME" FontSize="11" FontWeight="Bold"
                                   Foreground="#B9BBBE" Margin="0,0,0,8"/>
                        <TextBox x:Name="RoomNameTextBox" Style="{StaticResource ModernTextBox}"
                                 Height="44" FontSize="14" MaxLength="100"/>
                        <TextBlock Text="This is the name people will see when browsing rooms."
                                   FontSize="11" Foreground="#72767D" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Room Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="DESCRIPTION" FontSize="11" FontWeight="Bold"
                                   Foreground="#B9BBBE" Margin="0,0,0,8"/>
                        <TextBox x:Name="RoomDescriptionTextBox" Style="{StaticResource ModernTextBox}"
                                 Height="80" FontSize="14" TextWrapping="Wrap"
                                 AcceptsReturn="True" MaxLength="500"
                                 VerticalContentAlignment="Top" Padding="12"/>
                        <TextBlock Text="Describe what your room is about."
                                   FontSize="11" Foreground="#72767D" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Room Type -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="ROOM TYPE" FontSize="11" FontWeight="Bold"
                                   Foreground="#B9BBBE" Margin="0,0,0,8"/>

                        <!-- Community -->
                        <Border x:Name="CommunityOption" Background="#1E1F22" CornerRadius="8"
                                Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                MouseLeftButtonDown="RoomType_Click" Tag="Community"
                                BorderBrush="#5865F2" BorderThickness="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="ðŸ " FontSize="28" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Community" FontSize="15" FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <TextBlock Text="A public community room for chat, voice, and activities"
                                               FontSize="12" Foreground="#B9BBBE" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Outlet (Marketplace) -->
                        <Border x:Name="OutletOption" Background="#1E1F22" CornerRadius="8"
                                Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                MouseLeftButtonDown="RoomType_Click" Tag="Outlet"
                                BorderBrush="Transparent" BorderThickness="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="ðŸª" FontSize="28" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Outlet / Shop" FontSize="15" FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <TextBlock Text="A marketplace outlet for selling products with integrated chat"
                                               FontSize="12" Foreground="#B9BBBE" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Private -->
                        <Border x:Name="PrivateOption" Background="#1E1F22" CornerRadius="8"
                                Padding="16" Cursor="Hand"
                                MouseLeftButtonDown="RoomType_Click" Tag="Private"
                                BorderBrush="Transparent" BorderThickness="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="ðŸ”’" FontSize="28" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Private" FontSize="15" FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <TextBlock Text="An invite-only room for private groups and teams"
                                               FontSize="12" Foreground="#B9BBBE" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Features Section (for Outlet) -->
                    <Border x:Name="OutletFeaturesSection" Background="#1E1F22" CornerRadius="8"
                            Padding="16" Margin="0,0,0,16" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="OUTLET FEATURES" FontSize="11" FontWeight="Bold"
                                       Foreground="#B9BBBE" Margin="0,0,0,12"/>

                            <!-- Enable Marketplace -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Enable Marketplace" FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Allow product listings and sales in your room"
                                               FontSize="12" Foreground="#72767D"/>
                                </StackPanel>

                                <CheckBox x:Name="EnableMarketplaceCheckBox" Grid.Column="1"
                                          IsChecked="True" VerticalAlignment="Center"
                                          Style="{StaticResource ModernCheckBox}"/>
                            </Grid>

                            <!-- Marketplace Fee -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Marketplace Fee (%)" FontSize="12" Foreground="#B9BBBE"
                                           Margin="0,0,0,4"/>
                                <TextBox x:Name="MarketplaceFeeTextBox" Style="{StaticResource ModernTextBox}"
                                         Height="36" Text="5" FontSize="14" Width="100"
                                         HorizontalAlignment="Left"/>
                                <TextBlock Text="Fee taken from each sale in your outlet (0-20%)"
                                           FontSize="11" Foreground="#72767D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Channel Settings -->
                    <Border Background="#1E1F22" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="CHANNEL SETTINGS" FontSize="11" FontWeight="Bold"
                                       Foreground="#B9BBBE" Margin="0,0,0,12"/>

                            <!-- Enable Voice -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Enable Voice Channels" FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Allow voice chat in your room"
                                               FontSize="12" Foreground="#72767D"/>
                                </StackPanel>

                                <CheckBox x:Name="EnableVoiceCheckBox" Grid.Column="1"
                                          IsChecked="True" VerticalAlignment="Center"
                                          Style="{StaticResource ModernCheckBox}"/>
                            </Grid>

                            <!-- Enable Video -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Enable Video" FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Allow video calls in voice channels"
                                               FontSize="12" Foreground="#72767D"/>
                                </StackPanel>

                                <CheckBox x:Name="EnableVideoCheckBox" Grid.Column="1"
                                          IsChecked="True" VerticalAlignment="Center"
                                          Style="{StaticResource ModernCheckBox}"/>
                            </Grid>

                            <!-- Enable Screen Share -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Enable Screen Sharing" FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Allow screen sharing in voice channels"
                                               FontSize="12" Foreground="#72767D"/>
                                </StackPanel>

                                <CheckBox x:Name="EnableScreenShareCheckBox" Grid.Column="1"
                                          IsChecked="True" VerticalAlignment="Center"
                                          Style="{StaticResource ModernCheckBox}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Streaming Quality -->
                    <Border Background="#1E1F22" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="STREAMING QUALITY TIER" FontSize="11" FontWeight="Bold"
                                       Foreground="#B9BBBE" Margin="0,0,0,12"/>

                            <ComboBox x:Name="StreamingTierComboBox" Style="{StaticResource ModernComboBox}"
                                      SelectedIndex="1">
                                <ComboBoxItem Content="Basic - 720p @ 30fps (4 Mbps)"/>
                                <ComboBoxItem Content="Standard - 1080p @ 30fps (8 Mbps)"/>
                                <ComboBoxItem Content="Premium - 1080p @ 60fps (16 Mbps)"/>
                                <ComboBoxItem Content="Ultra - 4K @ 30fps (30 Mbps)"/>
                            </ComboBox>

                            <TextBlock Text="Higher quality tiers require more bandwidth from viewers"
                                       FontSize="11" Foreground="#72767D" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#1E1F22" CornerRadius="0,0,12,12" Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorText" Grid.Column="0" Foreground="#ED4245"
                               FontSize="13" VerticalAlignment="Center" Visibility="Collapsed"/>

                    <Button Grid.Column="1" Content="Cancel" Style="{StaticResource SecondaryButton}"
                            Padding="20,10" Margin="0,0,12,0" Click="Cancel_Click"/>

                    <Button Grid.Column="2" Content="Create Room" Style="{StaticResource PrimaryButton}"
                            Padding="20,10" Click="CreateRoom_Click" x:Name="CreateButton"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
