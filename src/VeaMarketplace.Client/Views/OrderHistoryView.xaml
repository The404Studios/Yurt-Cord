<![CDATA[<UserControl x:Class="VeaMarketplace.Client.Views.OrderHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource PrimaryDark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryDark}" Padding="24" BorderBrush="{StaticResource TertiaryDark}" BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="ðŸ“¦ Order History" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ComboBox Width="150" Margin="0,0,10,0" SelectedIndex="0">
                        <ComboBoxItem Content="All Orders"/>
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="Processing"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Cancelled"/>
                        <ComboBoxItem Content="Disputed"/>
                    </ComboBox>
                    <TextBox Width="200" Height="36" Padding="10,8" FontSize="13"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Background="{StaticResource TertiaryDark}" Foreground="White"
                             BorderBrush="{StaticResource Blurple}" BorderThickness="1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background" Value="{StaticResource TertiaryDark}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats Summary -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryDark}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Total Orders" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="{Binding TotalOrders}" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="16" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="Total Spent" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="{Binding TotalSpent, StringFormat='${0:F2}'}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource Green}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="16" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="Pending" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="{Binding PendingOrders}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource Orange}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="16" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Completed" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="{Binding CompletedOrders}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource Blurple}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Orders List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="24,16">
            <ItemsControl ItemsSource="{Binding Orders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="20" Margin="0,0,0,16"
                                BorderBrush="{StaticResource TertiaryDark}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Order Header -->
                                <Grid Grid.Row="0" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Id, StringFormat='Order #{0}'}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat='Placed on {0:MMM dd, yyyy at h:mm tt}'}"
                                                   FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <Border Grid.Column="1" CornerRadius="6" Padding="12,6" Margin="0,0,16,0" VerticalAlignment="Top">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                        <Setter Property="Background" Value="{StaticResource Green}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                        <Setter Property="Background" Value="{StaticResource Blurple}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                        <Setter Property="Background" Value="{StaticResource Orange}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                        <Setter Property="Background" Value="{StaticResource Red}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Disputed">
                                                        <Setter Property="Background" Value="{StaticResource Pink}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                                    </Border>

                                    <!-- Total Amount -->
                                    <TextBlock Grid.Column="2" Text="{Binding TotalAmount, StringFormat='${0:F2}'}"
                                               FontSize="20" FontWeight="Bold" Foreground="{StaticResource Blurple}"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Product Info -->
                                <Grid Grid.Row="1" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Product Image -->
                                    <Border Grid.Column="0" Width="70" Height="70" CornerRadius="6"
                                            BorderBrush="{StaticResource TertiaryDark}" BorderThickness="1">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding ProductImageUrl}" Stretch="UniformToFill"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- Product Details -->
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <TextBlock Text="{Binding ProductTitle}" FontSize="15" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="{Binding SellerUsername, StringFormat='Sold by {0}'}"
                                                   FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="Payment:" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock Text="{Binding PaymentMethod}" FontSize="12" Foreground="White" FontWeight="SemiBold" Margin="6,0,0,0"/>
                                            <TextBlock Text="|" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="12,0"/>
                                            <TextBlock Text="Transaction:" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock Text="{Binding PaymentTransactionId}" FontSize="11" Foreground="{StaticResource Cyan}" Margin="6,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <!-- Order Actions -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Progress Timeline -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Border Background="{StaticResource Green}" Width="4" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                        <Rectangle Width="40" Height="2" Fill="{StaticResource Green}" Margin="2,0"/>
                                        <Border Background="{StaticResource Green}" Width="4" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                        <Rectangle Width="40" Height="2" Fill="{StaticResource TertiaryDark}" Margin="2,0"/>
                                        <Border Background="{StaticResource TertiaryDark}" Width="4" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                        <Rectangle Width="40" Height="2" Fill="{StaticResource TertiaryDark}" Margin="2,0"/>
                                        <Border Background="{StaticResource TertiaryDark}" Width="4" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="View Details" Style="{StaticResource SecondaryButton}"
                                                Command="{Binding DataContext.ViewOrderDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" Padding="16,8" FontSize="13" Margin="0,0,8,0"/>
                                        <Button Content="Contact Seller" Style="{StaticResource SecondaryButton}"
                                                Command="{Binding DataContext.ContactSellerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" Padding="16,8" FontSize="13" Margin="0,0,8,0"/>
                                        <Button Content="Leave Review" Style="{StaticResource AccentButton}"
                                                Command="{Binding DataContext.LeaveReviewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" Padding="16,8" FontSize="13"
                                                Visibility="{Binding CanReview, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        <Button Content="Open Dispute" Style="{StaticResource DangerButton}"
                                                Command="{Binding DataContext.OpenDisputeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" Padding="16,8" FontSize="13"
                                                Visibility="{Binding CanDispute, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Escrow Notice -->
                                <Border Grid.Row="2" Background="{StaticResource Cyan}" Opacity="0.2" CornerRadius="6" Padding="12"
                                        Margin="0,16,0,0" Visibility="{Binding EscrowHeld, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”’" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="Funds held in escrow until delivery is confirmed"
                                                   FontSize="12" Foreground="White" FontWeight="SemiBold" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
]]>