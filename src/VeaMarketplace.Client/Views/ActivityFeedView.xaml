<UserControl x:Class="VeaMarketplace.Client.Views.ActivityFeedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Converters (BoolToVis, InverseBoolToVis, TimeAgoConverter, StringToVisibilityConverter)
         are available globally from App.xaml -->

    <Grid Background="{StaticResource TertiaryDarkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryDarkBrush}" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Activity Feed" FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="See what your friends are up to" FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Friends Only Toggle -->
                    <ToggleButton x:Name="FriendsOnlyToggle" IsChecked="{Binding ShowFriendsOnly}"
                                  Style="{StaticResource ToggleButtonStyle}"
                                  Command="{Binding ToggleFriendsOnlyCommand}"
                                  ToolTip="Show friends only">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¥" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Friends Only" Margin="6,0,0,0" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </ToggleButton>

                    <!-- Refresh Button -->
                    <Button Style="{StaticResource IconButton}" Width="36" Height="36" Margin="12,0,0,0"
                            Command="{Binding RefreshActivitiesCommand}" ToolTip="Refresh">
                        <TextBlock Text="ðŸ”„" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Tabs -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryDarkBrush}"
                BorderBrush="{StaticResource QuaternaryDarkBrush}" BorderThickness="0,0,0,1"
                Padding="16,8">
            <StackPanel Orientation="Horizontal">
                <Button Content="All" Style="{StaticResource FilterTabButton}"
                        Command="{Binding FilterByTypeCommand}" CommandParameter="All"
                        Tag="{Binding CurrentFilter}"/>
                <Button Content="ðŸ‘ Following" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                        Command="{Binding FilterByTypeCommand}" CommandParameter="Following"
                        Tag="{Binding CurrentFilter}"/>
                <Button Content="ðŸ¤ Friends" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                        Command="{Binding FilterByTypeCommand}" CommandParameter="Friends"
                        Tag="{Binding CurrentFilter}"/>
                <Button Content="ðŸ›’ Purchases" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                        Command="{Binding FilterByTypeCommand}" CommandParameter="Purchases"
                        Tag="{Binding CurrentFilter}"/>
                <Button Content="ðŸ“¦ Listings" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                        Command="{Binding FilterByTypeCommand}" CommandParameter="Listings"
                        Tag="{Binding CurrentFilter}"/>
                <Button Content="ðŸŽ¤ Voice" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                        Command="{Binding FilterByTypeCommand}" CommandParameter="Voice"
                        Tag="{Binding CurrentFilter}"/>
            </StackPanel>
        </Border>

        <!-- Activity List -->
        <Grid Grid.Row="2">
            <!-- Loading State -->
            <Border Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                    Background="{StaticResource TertiaryDarkBrush}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Loading activities..." FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Empty State -->
            <Border Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVis}}"
                    Background="{StaticResource TertiaryDarkBrush}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“­" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="No activities yet" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center" Margin="0,12,0,0"/>
                    <TextBlock Text="Activities from you and your friends will appear here"
                               FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Activities List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVis}}">
                <ItemsControl ItemsSource="{Binding Activities}" Padding="16">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource SecondaryDarkBrush}"
                                    CornerRadius="8" Margin="0,0,0,12" Padding="16"
                                    Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding DataContext.ViewUserProfileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                  CommandParameter="{Binding UserId}"/>
                                </Border.InputBindings>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- User Avatar with Activity Icon -->
                                    <Grid Grid.Column="0" Width="48" Height="48" Margin="0,0,12,0">
                                        <Ellipse Width="48" Height="48">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding UserAvatarUrl, TargetNullValue='/Assets/default-avatar.png'}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Border Background="{StaticResource AccentBrush}"
                                                CornerRadius="10" Width="20" Height="20"
                                                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                Margin="0,0,-4,-4">
                                            <TextBlock Text="{Binding Icon}" FontSize="10"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>

                                    <!-- Activity Content -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock>
                                            <Run Text="{Binding Username}" FontWeight="SemiBold"
                                                 Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Description}"
                                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </TextBlock>

                                        <!-- Metadata (if any) -->
                                        <ItemsControl ItemsSource="{Binding Metadata}" Margin="0,4,0,0"
                                                      Visibility="{Binding Metadata.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{StaticResource QuaternaryDarkBrush}"
                                                            CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                                                        <TextBlock FontSize="11"
                                                                   Foreground="{StaticResource TextSecondaryBrush}">
                                                            <Run Text="{Binding Key}"/>
                                                            <Run Text=": "/>
                                                            <Run Text="{Binding Value}" FontWeight="Medium"/>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- Timestamp -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Timestamp, Converter={StaticResource TimeAgoConverter}}"
                                               FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                               VerticalAlignment="Top"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Load More Button -->
            <Button Content="Load More" Style="{StaticResource SecondaryButton}"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Margin="0,0,0,20" Padding="24,10"
                    Command="{Binding LoadMoreActivitiesCommand}"
                    Visibility="{Binding HasMoreActivities, Converter={StaticResource BoolToVis}}"/>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="2" Background="{StaticResource AccentRedBrush}"
                Padding="16,12" VerticalAlignment="Top" Margin="16,16,16,0"
                CornerRadius="8"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="White" FontWeight="Medium"/>
        </Border>
    </Grid>
</UserControl>
