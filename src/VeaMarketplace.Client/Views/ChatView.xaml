<UserControl x:Class="VeaMarketplace.Client.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Teal pulse animation for input border -->
        <Storyboard x:Key="InputNeonPulse" RepeatBehavior="Forever">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="InputGlowBrush"
                                          Storyboard.TargetProperty="Color"
                                          Duration="0:0:4">
                <LinearColorKeyFrame Value="#00B4D8" KeyTime="0:0:0"/>
                <LinearColorKeyFrame Value="#48CAE4" KeyTime="0:0:1"/>
                <LinearColorKeyFrame Value="#0096B8" KeyTime="0:0:2"/>
                <LinearColorKeyFrame Value="#48CAE4" KeyTime="0:0:3"/>
                <LinearColorKeyFrame Value="#00B4D8" KeyTime="0:0:4"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Blade slide-in animation -->
        <Storyboard x:Key="BladeHeaderSlideIn">
            <DoubleAnimation Storyboard.TargetName="HeaderBlade"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-300" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="HeaderBlade"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <!-- Typing indicator dot animation -->
        <Storyboard x:Key="TypingDotPulse" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Duration="0:0:1.2">
                <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:0"/>
                <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.3"/>
                <LinearDoubleKeyFrame Value="0.3" KeyTime="0:0:0.6"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Origami message card style -->
        <Style x:Key="OrigamiMessageStyle" TargetType="controls:OrigamiMessageCard">
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource BladeHeaderSlideIn}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Connection Status -->
            <RowDefinition Height="Auto"/>
            <!-- Header Blade -->
            <RowDefinition Height="Auto"/>
            <!-- Messages Area -->
            <RowDefinition Height="*"/>
            <!-- Typing Indicator -->
            <RowDefinition Height="Auto"/>
            <!-- Input Blade -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Status Banner (Blade Style) -->
        <Border x:Name="ConnectionBanner" Grid.Row="0" Visibility="Collapsed"
                Margin="16,8,16,0" Padding="16,10" CornerRadius="0,0,12,12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF9500" Offset="0"/>
                    <GradientStop Color="#FFD000" Offset="0.5"/>
                    <GradientStop Color="#FF9500" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#FFD000" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Spinner -->
                <Grid Grid.Column="0" Margin="0,0,14,0" Width="24" Height="24">
                    <Ellipse x:Name="ConnectionSpinner" Width="24" Height="24"
                             Stroke="#020408" StrokeThickness="2.5"
                             StrokeDashArray="2.5,1.5" RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="BannerSpinnerRotation"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="BannerSpinnerRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:0.7"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <TextBlock x:Name="ConnectionIcon" Text="âš " FontSize="14" FontWeight="Bold"
                               Foreground="#020408" HorizontalAlignment="Center"
                               VerticalAlignment="Center" Visibility="Collapsed"/>
                </Grid>

                <TextBlock x:Name="ConnectionBannerText" Grid.Column="1"
                           Text="RECONNECTING TO NETWORK..." FontSize="12"
                           Foreground="#020408" FontWeight="Bold"
                           VerticalAlignment="Center" FontFamily="Segoe UI"/>

                <Button x:Name="ConnectionRetryButton" Grid.Column="2"
                        Content="RETRY" Visibility="Collapsed"
                        Style="{StaticResource BladeNavButton}"
                        Height="32" Padding="18,6" FontSize="11"/>
            </Grid>
        </Border>

        <!-- Channel Header Blade -->
        <Border x:Name="HeaderBlade" Grid.Row="1" Margin="12,12,12,4"
                CornerRadius="4,20,20,4" ClipToBounds="True">
            <Border.RenderTransform>
                <TranslateTransform X="0"/>
            </Border.RenderTransform>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.3">
                    <GradientStop Color="#12080C18" Offset="0"/>
                    <GradientStop Color="#20101828" Offset="0.5"/>
                    <GradientStop Color="#12080C18" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#5000B4D8" Offset="0"/>
                    <GradientStop Color="#3048CAE4" Offset="0.5"/>
                    <GradientStop Color="#500096B8" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Border.Effect>
                <DropShadowEffect Color="#00B4D8" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid Height="54">
                <!-- Accent stripe (blade style) -->
                <Border Width="4" HorizontalAlignment="Left" CornerRadius="4,0,0,4">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#00B4D8" Offset="0"/>
                            <GradientStop Color="#48CAE4" Offset="0.5"/>
                            <GradientStop Color="#0096B8" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <Grid Margin="20,0,16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Channel Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Channel Icon with glow -->
                        <Border CornerRadius="8" Width="36" Height="36" Margin="0,0,14,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#00B4D8" Offset="0"/>
                                    <GradientStop Color="#48CAE4" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#00B4D8" BlurRadius="12" ShadowDepth="0" Opacity="0.7"/>
                            </Border.Effect>
                            <TextBlock Text="#" FontSize="18" FontWeight="Bold"
                                       Foreground="#020408"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="ChannelNameText" Text="general"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="#00B4D8">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#00B4D8" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock x:Name="ChannelDescText" Text="General communications channel"
                                       FontSize="11" Foreground="#6070A0" Margin="0,2,0,0"
                                       TextTrimming="CharacterEllipsis" MaxWidth="300"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Divider -->
                    <Rectangle Grid.Column="1" Width="1" Height="30" Margin="20,0"
                               HorizontalAlignment="Left">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="#48CAE4" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <!-- Header Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Online Count Indicator -->
                        <Border CornerRadius="12" Padding="12,6" Margin="0,0,12,0"
                                Background="#15101828" BorderThickness="1"
                                BorderBrush="#4000B4D8">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#00B4D8" Margin="0,0,8,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#00B4D8" BlurRadius="8" ShadowDepth="0"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock x:Name="OnlineCountText" Text="0 online"
                                           FontSize="11" Foreground="#8090B0"/>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <Button Style="{StaticResource BladeIconButton}" ToolTip="Pinned Messages"
                                Width="38" Height="38">
                            <TextBlock Text="ðŸ“Œ" FontSize="14"/>
                        </Button>
                        <Button Style="{StaticResource BladeIconButton}" ToolTip="Search"
                                Width="38" Height="38" Margin="6,0,0,0">
                            <TextBlock Text="ðŸ”" FontSize="14"/>
                        </Button>
                        <Button Style="{StaticResource BladeIconButton}" ToolTip="Members"
                                Width="38" Height="38" Margin="6,0,0,0">
                            <TextBlock Text="ðŸ‘¥" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Messages Area with Blade ScrollViewer -->
        <Border Grid.Row="2" Margin="8,4,8,4" CornerRadius="12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="0.3">
                    <GradientStop Color="#08101828" Offset="0"/>
                    <GradientStop Color="#05080C18" Offset="0.5"/>
                    <GradientStop Color="#08101828" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <ScrollViewer x:Name="MessagesScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Style="{StaticResource BladeScrollViewer}"
                          Padding="8,8">
                <ItemsControl x:Name="MessagesItemsControl" Margin="8,4">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Origami Message Card with 3D pop-out effect -->
                            <controls:OrigamiMessageCard Margin="0,4"
                                                         Style="{StaticResource OrigamiMessageStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel VirtualizationMode="Recycling"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Typing Indicator (Blade Style) -->
        <Border x:Name="TypingIndicator" Grid.Row="3" Visibility="Collapsed"
                Margin="24,4,24,8" Padding="14,8" HorizontalAlignment="Left"
                CornerRadius="16" Background="#20101828"
                BorderThickness="1" BorderBrush="#3000B4D8">
            <Border.Effect>
                <DropShadowEffect Color="#00B4D8" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <!-- Animated typing dots -->
                <Canvas Width="50" Height="16">
                    <Ellipse x:Name="TypingDot1" Width="10" Height="10" Canvas.Left="0" Canvas.Top="3">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#00B4D8"/>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#00B4D8" BlurRadius="8" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse x:Name="TypingDot2" Width="10" Height="10" Canvas.Left="16" Canvas.Top="3">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#48CAE4"/>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#48CAE4" BlurRadius="8" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.15">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse x:Name="TypingDot3" Width="10" Height="10" Canvas.Left="32" Canvas.Top="3">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#0096B8"/>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#0096B8" BlurRadius="8" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Canvas>
                <TextBlock x:Name="TypingUserText" Text="Agent is typing..."
                           Foreground="#8090B0" FontSize="12"
                           VerticalAlignment="Center" Margin="4,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Message Input Area (Blade Style) -->
        <Grid Grid.Row="4" Margin="12,4,12,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Attachment Preview Area -->
            <Border x:Name="AttachmentPreviewArea" Grid.Row="0" Visibility="Collapsed"
                    CornerRadius="16,16,0,0" Padding="14" Margin="0,0,0,0"
                    Background="#18101828" BorderThickness="1,1,1,0"
                    BorderBrush="#3048CAE4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ItemsControl x:Name="AttachmentPreviewList" Grid.Column="0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Padding="10" Margin="4"
                                        MaxWidth="200" BorderThickness="1"
                                        BorderBrush="#4048CAE4" Background="#20101828">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- File Preview -->
                                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="8"
                                                Margin="0,0,12,0" Background="#15101828">
                                            <Image x:Name="PreviewImage" Stretch="UniformToFill"
                                                   Source="{Binding ThumbnailPath}"/>
                                        </Border>

                                        <!-- File Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}" FontSize="11"
                                                       Foreground="#E0E8FF"
                                                       TextTrimming="CharacterEllipsis" MaxWidth="90"/>
                                            <TextBlock Text="{Binding FileSizeText}" FontSize="9"
                                                       Foreground="#6070A0" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Remove Button -->
                                        <Button Grid.Column="2" Style="{StaticResource BladeIconButton}"
                                                Width="28" Height="28" VerticalAlignment="Top"
                                                Click="RemoveAttachment_Click" Tag="{Binding}">
                                            <TextBlock Text="âœ•" FontSize="10" Foreground="#EC4899"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Upload Progress -->
                    <StackPanel x:Name="UploadProgressPanel" Grid.Column="1"
                                VerticalAlignment="Center" Visibility="Collapsed" Margin="14,0">
                        <TextBlock Text="UPLOADING..." FontSize="10"
                                   Foreground="#00B4D8" FontWeight="SemiBold"/>
                        <ProgressBar x:Name="UploadProgressBar" Width="100" Height="4"
                                     Margin="0,4,0,0" Background="#20101828" Foreground="#00B4D8"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Input Blade -->
            <Border x:Name="InputBorder" Grid.Row="1" CornerRadius="20" Padding="6"
                    BorderThickness="2" ClipToBounds="False">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#18101828" Offset="0"/>
                        <GradientStop Color="#10080C18" Offset="0.5"/>
                        <GradientStop Color="#18101828" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="InputGlowBrush" Color="#00B4D8"/>
                </Border.BorderBrush>
                <Border.Effect>
                    <DropShadowEffect Color="#00B4D8" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource InputNeonPulse}"/>
                    </EventTrigger>
                </Border.Triggers>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Add Attachment Button -->
                    <Button Grid.Column="0" Style="{StaticResource BladeIconButton}"
                            Width="44" Height="44" x:Name="AddAttachmentButton"
                            Click="AddAttachment_Click" ToolTip="Add Attachment"
                            Margin="2,0">
                        <TextBlock Text="+" FontSize="24" FontWeight="Light" Margin="0,-2,0,0"/>
                    </Button>

                    <!-- Message TextBox -->
                    <TextBox x:Name="MessageTextBox" Grid.Column="1"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#E0E8FF"
                             CaretBrush="#00B4D8"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="12,10"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             MaxHeight="120"
                             KeyDown="MessageTextBox_KeyDown"
                             TextChanged="MessageTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                <TextBlock x:Name="Placeholder"
                                                           Text="Send a message..."
                                                           Foreground="#506080"
                                                           Padding="12,10"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"
                                                           IsHitTestVisible="False"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,4,0">
                        <Button x:Name="EmojiButton" Style="{StaticResource BladeIconButton}"
                                Width="44" Height="44" ToolTip="Emoji"
                                Click="EmojiButton_Click">
                            <TextBlock Text="ðŸ˜Š" FontSize="18"/>
                        </Button>
                        <Button x:Name="SendButton" Style="{StaticResource BladeIconButton}"
                                Width="44" Height="44" Margin="4,0,0,0"
                                Click="SendButton_Click" ToolTip="Send Message">
                            <Border CornerRadius="10" Padding="8,6">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#00B4D8" Offset="0"/>
                                        <GradientStop Color="#48CAE4" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="âž¤" FontSize="14" Foreground="#020408" FontWeight="Bold"/>
                            </Border>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Emoji Picker Popup (Blade Style) -->
            <Popup x:Name="EmojiPopup" PlacementTarget="{Binding ElementName=EmojiButton}"
                   Placement="Top" StaysOpen="False" AllowsTransparency="True">
                <Border CornerRadius="16" Padding="14" Margin="10"
                        BorderThickness="2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F8080C18" Offset="0"/>
                            <GradientStop Color="#F8101828" Offset="0.5"/>
                            <GradientStop Color="#F8080C18" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00B4D8" Offset="0"/>
                            <GradientStop Color="#48CAE4" Offset="0.5"/>
                            <GradientStop Color="#0096B8" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.7" Color="#00B4D8"/>
                    </Border.Effect>

                    <Grid Width="360" Height="320">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search Box -->
                        <Border Grid.Row="0" CornerRadius="12" Padding="12,8" Margin="0,0,0,12"
                                BorderThickness="1" BorderBrush="#3048CAE4" Background="#15101828">
                            <Grid>
                                <TextBlock x:Name="EmojiSearchPlaceholder" Text="Search emoji..."
                                           Foreground="#506080" FontSize="12"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="EmojiSearchBox" Background="Transparent"
                                         BorderThickness="0" Foreground="#E0E8FF" FontSize="12"
                                         CaretBrush="#00B4D8" VerticalAlignment="Center"
                                         TextChanged="EmojiSearch_TextChanged"/>
                            </Grid>
                        </Border>

                        <!-- Category Tabs -->
                        <Border Grid.Row="1" CornerRadius="10" Padding="4" Margin="0,0,0,12"
                                Background="#10101828">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="ðŸ˜€" Style="{StaticResource BladeIconButton}" Width="38" Height="38"
                                        Tag="Smileys" Click="EmojiCategory_Click" FontSize="16" Margin="2,0"/>
                                <Button Content="ðŸ‘" Style="{StaticResource BladeIconButton}" Width="38" Height="38"
                                        Tag="Gestures" Click="EmojiCategory_Click" FontSize="16" Margin="2,0"/>
                                <Button Content="â¤ï¸" Style="{StaticResource BladeIconButton}" Width="38" Height="38"
                                        Tag="Symbols" Click="EmojiCategory_Click" FontSize="16" Margin="2,0"/>
                                <Button Content="ðŸ±" Style="{StaticResource BladeIconButton}" Width="38" Height="38"
                                        Tag="Animals" Click="EmojiCategory_Click" FontSize="16" Margin="2,0"/>
                                <Button Content="ðŸ•" Style="{StaticResource BladeIconButton}" Width="38" Height="38"
                                        Tag="Food" Click="EmojiCategory_Click" FontSize="16" Margin="2,0"/>
                                <Button Content="âš½" Style="{StaticResource BladeIconButton}" Width="38" Height="38"
                                        Tag="Activities" Click="EmojiCategory_Click" FontSize="16" Margin="2,0"/>
                                <Button Content="ðŸ " Style="{StaticResource BladeIconButton}" Width="38" Height="38"
                                        Tag="Objects" Click="EmojiCategory_Click" FontSize="16" Margin="2,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Emoji Grid -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                                      Style="{StaticResource BladeScrollViewer}">
                            <ItemsControl x:Name="EmojiGrid">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Style="{StaticResource BladeIconButton}"
                                                Width="42" Height="42" FontSize="20"
                                                Click="Emoji_Click" Tag="{Binding}"
                                                Margin="3"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Popup>
        </Grid>

        <!-- New Message Indicator (appears at bottom when scrolled up) -->
        <Border x:Name="NewMessageIndicator" Grid.Row="2" Visibility="Collapsed"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,16" Padding="16,8" CornerRadius="20"
                Cursor="Hand" MouseLeftButtonDown="NewMessageIndicator_Click">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#00B4D8" Offset="0"/>
                    <GradientStop Color="#48CAE4" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#00B4D8" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="â†“" FontSize="12" Foreground="#020408" FontWeight="Bold"
                           Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="NewMessageCountText" Text="New messages"
                           FontSize="12" Foreground="#020408" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
