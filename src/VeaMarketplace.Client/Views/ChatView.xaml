<UserControl x:Class="VeaMarketplace.Client.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls;assembly=YurtCord"
             Background="{StaticResource TertiaryDarkBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="48"/>
            <!-- Messages -->
            <RowDefinition Height="*"/>
            <!-- Typing Indicator -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Channel Header -->
        <Border Grid.Row="0" Background="{StaticResource TertiaryDarkBrush}"
                BorderBrush="{StaticResource PrimaryDarkBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="#" FontSize="24" Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="ChannelNameText" Text="general"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                    <Border Width="1" Height="24" Background="{StaticResource QuaternaryDarkBrush}"
                            Margin="16,0"/>
                    <TextBlock x:Name="ChannelDescText" Text="General chat for everyone"
                               FontSize="14" Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Header Actions -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Style="{StaticResource IconButton}" ToolTip="Pinned Messages">
                        <TextBlock Text="ðŸ“Œ" FontSize="18"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" ToolTip="Search">
                        <TextBlock Text="ðŸ”" FontSize="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Messages List -->
        <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource ModernScrollViewer}">
            <ItemsControl x:Name="MessagesItemsControl" Margin="16,8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:ChatMessageControl Margin="0,4"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Typing Indicator -->
        <Border Grid.Row="2" Margin="16,4" Visibility="Collapsed" x:Name="TypingIndicator">
            <StackPanel Orientation="Horizontal">
                <Canvas Width="40" Height="20">
                    <Ellipse Width="8" Height="8" Fill="{StaticResource TextMutedBrush}"
                             Canvas.Left="0" Canvas.Top="6">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="8" Height="8" Fill="{StaticResource TextMutedBrush}"
                             Canvas.Left="12" Canvas.Top="6">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.15">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="8" Height="8" Fill="{StaticResource TextMutedBrush}"
                             Canvas.Left="24" Canvas.Top="6">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Canvas>
                <TextBlock x:Name="TypingUserText" Text="Someone is typing..."
                           Foreground="{StaticResource TextMutedBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Message Input Area -->
        <Border Grid.Row="3" Margin="16,8,16,16">
            <Border Background="{StaticResource QuaternaryDarkBrush}"
                    CornerRadius="8" Padding="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Add Attachment Button -->
                    <Button Grid.Column="0" Style="{StaticResource IconButton}"
                            Width="44" Height="44">
                        <TextBlock Text="âž•" FontSize="20" Foreground="{StaticResource TextMutedBrush}"/>
                    </Button>

                    <!-- Message TextBox -->
                    <TextBox x:Name="MessageTextBox" Grid.Column="1"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             CaretBrush="{StaticResource TextPrimaryBrush}"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="8"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             MaxHeight="100"
                             KeyDown="MessageTextBox_KeyDown"
                             TextChanged="MessageTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                <TextBlock x:Name="Placeholder"
                                                           Text="Message #general"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Padding="8"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Emoji and Send Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource IconButton}" Width="44" Height="44"
                                ToolTip="Emoji">
                            <TextBlock Text="ðŸ˜Š" FontSize="20"/>
                        </Button>
                        <Button x:Name="SendButton" Style="{StaticResource IconButton}"
                                Width="44" Height="44"
                                Click="SendButton_Click"
                                ToolTip="Send Message">
                            <TextBlock Text="âž¤" FontSize="20" Foreground="{StaticResource AccentBrush}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
