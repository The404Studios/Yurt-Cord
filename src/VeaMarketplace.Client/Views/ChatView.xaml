<UserControl x:Class="VeaMarketplace.Client.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls"
             Background="{StaticResource TertiaryDarkBrush}">

    <!-- BoolToVis and ChatMessageControl are available from App.xaml and Controls namespace -->

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="48"/>
            <!-- Messages -->
            <RowDefinition Height="*"/>
            <!-- Typing Indicator -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Channel Header -->
        <Border Grid.Row="0" Background="{StaticResource TertiaryDarkBrush}"
                BorderBrush="{StaticResource PrimaryDarkBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="#" FontSize="24" Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="ChannelNameText" Text="general"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                    <Border Width="1" Height="24" Background="{StaticResource QuaternaryDarkBrush}"
                            Margin="16,0"/>
                    <TextBlock x:Name="ChannelDescText" Text="General chat for everyone"
                               FontSize="14" Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Header Actions -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Style="{StaticResource IconButton}" ToolTip="Pinned Messages">
                        <TextBlock Text="ðŸ“Œ" FontSize="18"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" ToolTip="Search">
                        <TextBlock Text="ðŸ”" FontSize="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Messages List -->
        <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource ModernScrollViewer}">
            <ItemsControl x:Name="MessagesItemsControl" Margin="16,8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:ChatMessageControl Margin="0,4"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Typing Indicator -->
        <Border Grid.Row="2" Margin="16,4" Visibility="Collapsed" x:Name="TypingIndicator">
            <StackPanel Orientation="Horizontal">
                <Canvas Width="40" Height="20">
                    <Ellipse Width="8" Height="8" Fill="{StaticResource TextMutedBrush}"
                             Canvas.Left="0" Canvas.Top="6">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="8" Height="8" Fill="{StaticResource TextMutedBrush}"
                             Canvas.Left="12" Canvas.Top="6">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.15">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="8" Height="8" Fill="{StaticResource TextMutedBrush}"
                             Canvas.Left="24" Canvas.Top="6">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Canvas>
                <TextBlock x:Name="TypingUserText" Text="Someone is typing..."
                           Foreground="{StaticResource TextMutedBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Message Input Area -->
        <Grid Grid.Row="3" Margin="16,8,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Attachment Preview Area -->
            <Border x:Name="AttachmentPreviewArea" Grid.Row="0" Visibility="Collapsed"
                    Background="{StaticResource QuaternaryDarkBrush}"
                    CornerRadius="8,8,0,0" Padding="8" Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ItemsControl x:Name="AttachmentPreviewList" Grid.Column="0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2B2D31" CornerRadius="6" Padding="8" Margin="4"
                                        MaxWidth="200">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- File Type Icon/Preview -->
                                        <Border Grid.Column="0" Width="48" Height="48" CornerRadius="4"
                                                Background="#1E1F22" Margin="0,0,8,0">
                                            <Image x:Name="PreviewImage" Stretch="UniformToFill"
                                                   Source="{Binding ThumbnailPath}"/>
                                        </Border>

                                        <!-- File Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}" FontSize="12"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis" MaxWidth="100"/>
                                            <TextBlock Text="{Binding FileSizeText}" FontSize="10"
                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                        </StackPanel>

                                        <!-- Remove Button -->
                                        <Button Grid.Column="2" Style="{StaticResource IconButton}"
                                                Width="24" Height="24" VerticalAlignment="Top"
                                                Click="RemoveAttachment_Click" Tag="{Binding}">
                                            <TextBlock Text="X" FontSize="12" Foreground="#ED4245"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Upload Progress -->
                    <StackPanel x:Name="UploadProgressPanel" Grid.Column="1"
                                VerticalAlignment="Center" Visibility="Collapsed" Margin="8,0">
                        <TextBlock Text="Uploading..." FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <ProgressBar x:Name="UploadProgressBar" Width="100" Height="4"
                                     Background="#2B2D31" Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="{StaticResource QuaternaryDarkBrush}"
                    CornerRadius="8" Padding="4"
                    x:Name="InputBorder">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Add Attachment Button -->
                    <Button Grid.Column="0" Style="{StaticResource IconButton}"
                            Width="44" Height="44" x:Name="AddAttachmentButton"
                            Click="AddAttachment_Click" ToolTip="Add Attachment">
                        <TextBlock Text="âž•" FontSize="20" Foreground="{StaticResource TextMutedBrush}"/>
                    </Button>

                    <!-- Message TextBox -->
                    <TextBox x:Name="MessageTextBox" Grid.Column="1"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             CaretBrush="{StaticResource TextPrimaryBrush}"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="8"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             MaxHeight="100"
                             KeyDown="MessageTextBox_KeyDown"
                             TextChanged="MessageTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                <TextBlock x:Name="Placeholder"
                                                           Text="Message #general"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Padding="8"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Emoji and Send Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="EmojiButton" Style="{StaticResource IconButton}" Width="44" Height="44"
                                ToolTip="Emoji" Click="EmojiButton_Click">
                            <TextBlock Text="ðŸ˜Š" FontSize="20"/>
                        </Button>
                        <Button x:Name="SendButton" Style="{StaticResource IconButton}"
                                Width="44" Height="44"
                                Click="SendButton_Click"
                                ToolTip="Send Message">
                            <TextBlock Text="âž¤" FontSize="20" Foreground="{StaticResource AccentBrush}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Emoji Picker Popup -->
            <Popup x:Name="EmojiPopup" PlacementTarget="{Binding ElementName=EmojiButton}"
                   Placement="Top" StaysOpen="False" AllowsTransparency="True">
                <Border Background="#2B2D31" CornerRadius="8" Padding="8"
                        BorderBrush="#40444B" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                    </Border.Effect>
                    <Grid Width="320" Height="280">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search -->
                        <Border Grid.Row="0" Background="#1E1F22" CornerRadius="4"
                                Padding="8,6" Margin="0,0,0,8">
                            <Grid>
                                <TextBlock Text="ðŸ” Search emojis..." Foreground="#72767D"
                                           FontSize="13" x:Name="EmojiSearchPlaceholder"/>
                                <TextBox x:Name="EmojiSearchBox" Background="Transparent"
                                         BorderThickness="0" Foreground="White" FontSize="13"
                                         TextChanged="EmojiSearch_TextChanged"/>
                            </Grid>
                        </Border>

                        <!-- Category Tabs -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                            <Button Content="ðŸ˜€" Style="{StaticResource IconButton}" Width="32" Height="32"
                                    Tag="Smileys" Click="EmojiCategory_Click" FontSize="16"/>
                            <Button Content="ðŸ‘" Style="{StaticResource IconButton}" Width="32" Height="32"
                                    Tag="Gestures" Click="EmojiCategory_Click" FontSize="16"/>
                            <Button Content="â¤" Style="{StaticResource IconButton}" Width="32" Height="32"
                                    Tag="Symbols" Click="EmojiCategory_Click" FontSize="16"/>
                            <Button Content="ðŸ±" Style="{StaticResource IconButton}" Width="32" Height="32"
                                    Tag="Animals" Click="EmojiCategory_Click" FontSize="16"/>
                            <Button Content="ðŸ•" Style="{StaticResource IconButton}" Width="32" Height="32"
                                    Tag="Food" Click="EmojiCategory_Click" FontSize="16"/>
                            <Button Content="âš½" Style="{StaticResource IconButton}" Width="32" Height="32"
                                    Tag="Activities" Click="EmojiCategory_Click" FontSize="16"/>
                            <Button Content="ðŸš—" Style="{StaticResource IconButton}" Width="32" Height="32"
                                    Tag="Travel" Click="EmojiCategory_Click" FontSize="16"/>
                            <Button Content="ðŸ’¡" Style="{StaticResource IconButton}" Width="32" Height="32"
                                    Tag="Objects" Click="EmojiCategory_Click" FontSize="16"/>
                        </StackPanel>

                        <!-- Emoji Grid -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="EmojiGrid">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Style="{StaticResource IconButton}"
                                                Width="36" Height="36" FontSize="20"
                                                Click="Emoji_Click" Tag="{Binding}"
                                                Margin="2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</UserControl>
