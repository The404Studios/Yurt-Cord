<UserControl x:Class="VeaMarketplace.Client.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Neon glow animation for input -->
        <Storyboard x:Key="InputFocusGlow" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="InputBorderBrush"
                            Storyboard.TargetProperty="Color"
                            From="#00FF88" To="#00CCFF" Duration="0:0:2"
                            AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Connection Banner -->
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="56"/>
            <!-- Messages -->
            <RowDefinition Height="*"/>
            <!-- Typing Indicator -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Status Banner (Overseer style) -->
        <Border x:Name="ConnectionBanner" Grid.Row="0" Visibility="Collapsed"
                Padding="14,10" CornerRadius="0,0,20,20" Margin="20,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FFD700" Offset="0"/>
                    <GradientStop Color="#FF8C00" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#FFD700" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Spinner -->
                <Grid Grid.Column="0" Margin="0,0,14,0" Width="22" Height="22">
                    <Ellipse x:Name="ConnectionSpinner" Width="22" Height="22"
                             Stroke="#050510" StrokeThickness="2"
                             StrokeDashArray="3,2" RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="BannerSpinnerRotation"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="BannerSpinnerRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:0.8"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <TextBlock x:Name="ConnectionIcon" Text="" FontSize="14"
                               Foreground="#050510" HorizontalAlignment="Center"
                               VerticalAlignment="Center" Visibility="Collapsed"/>
                </Grid>

                <TextBlock x:Name="ConnectionBannerText" Grid.Column="1"
                           Text="RECONNECTING TO NETWORK..." FontSize="12"
                           Foreground="#050510" FontWeight="Bold"
                           VerticalAlignment="Center" LetterSpacing="1"/>

                <Button x:Name="ConnectionRetryButton" Grid.Column="2"
                        Content="RETRY" Visibility="Collapsed"
                        Style="{StaticResource OverseerPillButton}"
                        Height="30" Padding="16,4" FontSize="10"/>
            </Grid>
        </Border>

        <!-- Channel Header (Overseer style) -->
        <Border Grid.Row="1" CornerRadius="25" Margin="8,8,8,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#15101020" Offset="0"/>
                    <GradientStop Color="#25101020" Offset="0.5"/>
                    <GradientStop Color="#15101020" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#3000FF88" Offset="0"/>
                    <GradientStop Color="#3000CCFF" Offset="0.5"/>
                    <GradientStop Color="#30FF00FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Channel Icon -->
                    <Border CornerRadius="15" Width="30" Height="30" Margin="0,0,12,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00FF88" Offset="0"/>
                                <GradientStop Color="#00CCFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#00FF88" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>
                        <TextBlock Text="#" FontSize="16" FontWeight="Bold"
                                   Foreground="#050510"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="ChannelNameText" Text="general"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="#00FF88"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00FF88" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Rectangle Width="1" Height="20" Margin="16,0">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="#00CCFF" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock x:Name="ChannelDescText" Text="General communications channel"
                               FontSize="12" Foreground="#6060A0"
                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                               MaxWidth="280"/>
                </StackPanel>

                <!-- Header Actions -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <!-- Online indicator -->
                    <Border CornerRadius="15" Padding="10,5" Margin="0,0,10,0">
                        <Border.Background>
                            <SolidColorBrush Color="#15101020"/>
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#3000FF88"/>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#00FF88" Margin="0,0,8,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#00FF88" BlurRadius="8" ShadowDepth="0"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock x:Name="OnlineCountText" Text="0 online"
                                       FontSize="11" Foreground="#8080A0"/>
                        </StackPanel>
                    </Border>
                    <Button Style="{StaticResource OverseerCircleButton}" ToolTip="Pinned"
                            Width="36" Height="36">
                        <TextBlock Text=">" FontSize="14"/>
                    </Button>
                    <Button Style="{StaticResource OverseerCircleButton}" ToolTip="Search"
                            Width="36" Height="36" Margin="6,0">
                        <TextBlock Text="?" FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Messages List (with Overseer styling) -->
        <ScrollViewer Grid.Row="2" x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource OverseerScrollViewer}"
                      Margin="8,8">
            <ItemsControl x:Name="MessagesItemsControl" Margin="12,8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Use OverseerMessageBubble for animated messages -->
                        <controls:OverseerMessageBubble Margin="0,6"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Typing Indicator (Overseer style) -->
        <Border Grid.Row="3" Margin="20,6" Visibility="Collapsed" x:Name="TypingIndicator"
                CornerRadius="15" Padding="12,6"
                HorizontalAlignment="Left">
            <Border.Background>
                <SolidColorBrush Color="#20101020"/>
            </Border.Background>
            <StackPanel Orientation="Horizontal">
                <Canvas Width="44" Height="16">
                    <Ellipse Width="8" Height="8" Fill="#00FF88"
                             Canvas.Left="0" Canvas.Top="4">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#00FF88" BlurRadius="6" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="8" Height="8" Fill="#00CCFF"
                             Canvas.Left="14" Canvas.Top="4">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#00CCFF" BlurRadius="6" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.15">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="8" Height="8" Fill="#FF00FF"
                             Canvas.Left="28" Canvas.Top="4">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FF00FF" BlurRadius="6" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.4"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Canvas>
                <TextBlock x:Name="TypingUserText" Text="Agent is transmitting..."
                           Foreground="#8080A0" FontSize="11"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Message Input Area (Overseer style) -->
        <Grid Grid.Row="4" Margin="16,8,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Attachment Preview Area -->
            <Border x:Name="AttachmentPreviewArea" Grid.Row="0" Visibility="Collapsed"
                    CornerRadius="20,20,0,0" Padding="12" Margin="0,0,0,0">
                <Border.Background>
                    <SolidColorBrush Color="#20101020"/>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#3000FF88" Offset="0"/>
                        <GradientStop Color="#3000CCFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.BorderThickness>1,1,1,0</Border.BorderThickness>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ItemsControl x:Name="AttachmentPreviewList" Grid.Column="0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" Padding="10" Margin="4"
                                        MaxWidth="200" BorderThickness="1"
                                        BorderBrush="#3000CCFF">
                                    <Border.Background>
                                        <SolidColorBrush Color="#25101020"/>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- File Preview -->
                                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="8"
                                                Margin="0,0,10,0">
                                            <Border.Background>
                                                <SolidColorBrush Color="#15101020"/>
                                            </Border.Background>
                                            <Image x:Name="PreviewImage" Stretch="UniformToFill"
                                                   Source="{Binding ThumbnailPath}"/>
                                        </Border>

                                        <!-- File Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}" FontSize="11"
                                                       Foreground="#E0E0FF"
                                                       TextTrimming="CharacterEllipsis" MaxWidth="90"/>
                                            <TextBlock Text="{Binding FileSizeText}" FontSize="9"
                                                       Foreground="#6060A0"/>
                                        </StackPanel>

                                        <!-- Remove Button -->
                                        <Button Grid.Column="2" Style="{StaticResource OverseerCircleButton}"
                                                Width="26" Height="26" VerticalAlignment="Top"
                                                Click="RemoveAttachment_Click" Tag="{Binding}"
                                                BorderBrush="#FF4444" Foreground="#FF4444">
                                            <TextBlock Text="X" FontSize="10"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Upload Progress -->
                    <StackPanel x:Name="UploadProgressPanel" Grid.Column="1"
                                VerticalAlignment="Center" Visibility="Collapsed" Margin="10,0">
                        <TextBlock Text="UPLOADING..." FontSize="10"
                                   Foreground="#00FF88" FontWeight="SemiBold"/>
                        <ProgressBar x:Name="UploadProgressBar" Width="100" Height="4"
                                     Background="#20101020" Foreground="#00FF88"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Input Border -->
            <Border Grid.Row="1" CornerRadius="25" Padding="6"
                    x:Name="InputBorder" BorderThickness="2">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#15152A" Offset="0"/>
                        <GradientStop Color="#0A0A15" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="InputBorderBrush" Color="#00FF88"/>
                </Border.BorderBrush>
                <Border.Effect>
                    <DropShadowEffect Color="#00FF88" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource InputFocusGlow}"/>
                    </EventTrigger>
                </Border.Triggers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Add Attachment Button -->
                    <Button Grid.Column="0" Style="{StaticResource OverseerCircleButton}"
                            Width="42" Height="42" x:Name="AddAttachmentButton"
                            Click="AddAttachment_Click" ToolTip="Add Attachment"
                            BorderBrush="#00CCFF">
                        <TextBlock Text="+" FontSize="22" Margin="0,-2,0,0"/>
                    </Button>

                    <!-- Message TextBox -->
                    <TextBox x:Name="MessageTextBox" Grid.Column="1"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#E0E0FF"
                             CaretBrush="#00FF88"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Padding="12,8"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             MaxHeight="100"
                             KeyDown="MessageTextBox_KeyDown"
                             TextChanged="MessageTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                <TextBlock x:Name="Placeholder"
                                                           Text="Transmit to #general..."
                                                           Foreground="#505070"
                                                           Padding="12,8"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Emoji and Send Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="EmojiButton" Style="{StaticResource OverseerCircleButton}"
                                Width="42" Height="42" ToolTip="Emoji"
                                Click="EmojiButton_Click" BorderBrush="#FF00FF">
                            <TextBlock Text="^" FontSize="18"/>
                        </Button>
                        <Button x:Name="SendButton" Style="{StaticResource OverseerCircleButton}"
                                Width="42" Height="42" Margin="6,0,0,0"
                                Click="SendButton_Click" ToolTip="Transmit">
                            <TextBlock Text=">" FontSize="20"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Emoji Picker Popup (Overseer style) -->
            <Popup x:Name="EmojiPopup" PlacementTarget="{Binding ElementName=EmojiButton}"
                   Placement="Top" StaysOpen="False" AllowsTransparency="True">
                <Border CornerRadius="20" Padding="12"
                        BorderThickness="2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#15152A" Offset="0"/>
                            <GradientStop Color="#0A0A15" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00FF88" Offset="0"/>
                            <GradientStop Color="#FF00FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.7" Color="#00FF88"/>
                    </Border.Effect>
                    <Grid Width="340" Height="300">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search -->
                        <Border Grid.Row="0" CornerRadius="15" Padding="12,8" Margin="0,0,0,10"
                                BorderThickness="1" BorderBrush="#3000CCFF">
                            <Border.Background>
                                <SolidColorBrush Color="#15101020"/>
                            </Border.Background>
                            <Grid>
                                <TextBlock Text="Search signals..." Foreground="#505070"
                                           FontSize="12" x:Name="EmojiSearchPlaceholder"/>
                                <TextBox x:Name="EmojiSearchBox" Background="Transparent"
                                         BorderThickness="0" Foreground="#E0E0FF" FontSize="12"
                                         CaretBrush="#00FF88"
                                         TextChanged="EmojiSearch_TextChanged"/>
                            </Grid>
                        </Border>

                        <!-- Category Tabs -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10"
                                    HorizontalAlignment="Center">
                            <Button Content="^_^" Style="{StaticResource OverseerCircleButton}" Width="36" Height="36"
                                    Tag="Smileys" Click="EmojiCategory_Click" FontSize="10" Margin="2,0"/>
                            <Button Content="+1" Style="{StaticResource OverseerCircleButton}" Width="36" Height="36"
                                    Tag="Gestures" Click="EmojiCategory_Click" FontSize="10" Margin="2,0"/>
                            <Button Content="<3" Style="{StaticResource OverseerCircleButton}" Width="36" Height="36"
                                    Tag="Symbols" Click="EmojiCategory_Click" FontSize="10" Margin="2,0"/>
                            <Button Content=":3" Style="{StaticResource OverseerCircleButton}" Width="36" Height="36"
                                    Tag="Animals" Click="EmojiCategory_Click" FontSize="10" Margin="2,0"/>
                            <Button Content="nom" Style="{StaticResource OverseerCircleButton}" Width="36" Height="36"
                                    Tag="Food" Click="EmojiCategory_Click" FontSize="10" Margin="2,0"/>
                            <Button Content="go" Style="{StaticResource OverseerCircleButton}" Width="36" Height="36"
                                    Tag="Activities" Click="EmojiCategory_Click" FontSize="10" Margin="2,0"/>
                        </StackPanel>

                        <!-- Emoji Grid -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                                      Style="{StaticResource OverseerScrollViewer}">
                            <ItemsControl x:Name="EmojiGrid">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Style="{StaticResource OverseerCircleButton}"
                                                Width="40" Height="40" FontSize="18"
                                                Click="Emoji_Click" Tag="{Binding}"
                                                Margin="3"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</UserControl>
