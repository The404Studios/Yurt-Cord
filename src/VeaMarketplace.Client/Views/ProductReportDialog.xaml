<Window x:Class="VeaMarketplace.Client.Views.ProductReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Product"
        Width="420" Height="480"
        WindowStartupLocation="CenterOwner"
        Background="#1E1F22"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="#1E1F22" CornerRadius="8" BorderBrush="#3F4147" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Report Product" FontSize="20" FontWeight="SemiBold"
                          Foreground="White" HorizontalAlignment="Left"/>
                <Button x:Name="CloseButton" Content="X"
                       HorizontalAlignment="Right"
                       Background="Transparent" Foreground="#B5BAC1"
                       BorderThickness="0" FontSize="16" Cursor="Hand"
                       Click="CloseButton_Click"/>
            </Grid>

            <!-- Product Info -->
            <Border Grid.Row="1" Background="#2B2D31" CornerRadius="6" Padding="12" Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <Border Width="50" Height="50" CornerRadius="4" Background="#3F4147">
                        <Image x:Name="ProductImage" Stretch="UniformToFill"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="ProductTitle" FontWeight="Medium" Foreground="White"
                                  TextTrimming="CharacterEllipsis" MaxWidth="280"/>
                        <TextBlock x:Name="ProductSeller" Foreground="#B5BAC1" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Reason Selection -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <TextBlock Text="Why are you reporting this product?"
                          Foreground="#B5BAC1" FontSize="12" Margin="0,0,0,8"/>

                <RadioButton x:Name="ReasonScam" Content="Scam or fraud"
                           Foreground="White" Margin="0,4" GroupName="Reason"/>
                <RadioButton x:Name="ReasonCounterfeit" Content="Counterfeit or fake product"
                           Foreground="White" Margin="0,4" GroupName="Reason"/>
                <RadioButton x:Name="ReasonProhibited" Content="Prohibited item"
                           Foreground="White" Margin="0,4" GroupName="Reason"/>
                <RadioButton x:Name="ReasonMisleading" Content="Misleading description"
                           Foreground="White" Margin="0,4" GroupName="Reason"/>
                <RadioButton x:Name="ReasonInappropriate" Content="Inappropriate content"
                           Foreground="White" Margin="0,4" GroupName="Reason"/>
                <RadioButton x:Name="ReasonIntellectual" Content="Intellectual property violation"
                           Foreground="White" Margin="0,4" GroupName="Reason"/>
                <RadioButton x:Name="ReasonOther" Content="Other"
                           Foreground="White" Margin="0,4" GroupName="Reason"/>
            </StackPanel>

            <!-- Additional Details -->
            <StackPanel Grid.Row="3">
                <TextBlock Text="Additional details (optional)"
                          Foreground="#B5BAC1" FontSize="12" Margin="0,0,0,8"/>
                <TextBox x:Name="DetailsTextBox"
                        Background="#2B2D31" Foreground="White"
                        BorderBrush="#3F4147" BorderThickness="1"
                        Padding="8" Height="80"
                        TextWrapping="Wrap" AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        MaxLength="500"/>
                <TextBlock x:Name="CharCount" Text="0/500"
                          Foreground="#72767D" FontSize="11"
                          HorizontalAlignment="Right" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Grid.Row="4" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Cancel"
                       Background="#2B2D31" Foreground="White"
                       BorderThickness="0" Padding="12,10"
                       Margin="0,0,8,0" Cursor="Hand"
                       Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1" x:Name="SubmitButton" Content="Submit Report"
                       Background="#ED4245" Foreground="White"
                       BorderThickness="0" Padding="12,10"
                       Margin="8,0,0,0" Cursor="Hand"
                       Click="SubmitButton_Click" IsEnabled="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                               Background="{TemplateBinding Background}"
                                               CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
