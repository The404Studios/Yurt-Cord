<UserControl x:Class="VeaMarketplace.Client.Views.ChannelSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource SecondaryDarkBrush}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Colors.xaml"/>
                <ResourceDictionary Source="../Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Voice User Context Menu -->
            <ContextMenu x:Key="VoiceUserContextMenu" Style="{StaticResource ModernContextMenu}">
                <MenuItem Header="View Profile" Style="{StaticResource ModernMenuItem}"
                          Click="VoiceViewProfile_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ‘¤" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Send Message" Style="{StaticResource ModernMenuItem}"
                          Click="VoiceSendMessage_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¬" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Add Friend" Style="{StaticResource ModernMenuItem}"
                          Click="VoiceAddFriend_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="âž•" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Mute User (for me)" Style="{StaticResource ModernMenuItem}"
                          Click="VoiceMuteUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”‡" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Adjust Volume" Style="{StaticResource ModernMenuItem}"
                          Click="VoiceAdjustVolume_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”Š" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Watch Screen" Style="{StaticResource ModernMenuItem}"
                          Click="VoiceWatchScreen_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ–¥" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Move To">
                    <MenuItem.Icon>
                        <TextBlock Text="â†ª" FontSize="14"/>
                    </MenuItem.Icon>
                    <MenuItem Header="General Voice" Style="{StaticResource ModernMenuItem}"
                              Click="MoveToChannel_Click" Tag="general-voice"/>
                    <MenuItem Header="Music" Style="{StaticResource ModernMenuItem}"
                              Click="MoveToChannel_Click" Tag="music-voice"/>
                    <MenuItem Header="Marketplace Deals" Style="{StaticResource ModernMenuItem}"
                              Click="MoveToChannel_Click" Tag="marketplace-voice"/>
                </MenuItem>
                <MenuItem Header="Disconnect User" Style="{StaticResource DangerMenuItem}"
                          Click="VoiceDisconnectUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸš«" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Kick from Server" Style="{StaticResource DangerMenuItem}"
                          Click="VoiceKickUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ‘¢" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Ban from Server" Style="{StaticResource DangerMenuItem}"
                          Click="VoiceBanUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”¨" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Copy User ID" Style="{StaticResource ModernMenuItem}"
                          Click="VoiceCopyUserId_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>

            <!-- Channel Context Menu -->
            <ContextMenu x:Key="ChannelContextMenu" Style="{StaticResource ModernContextMenu}">
                <MenuItem Header="Mark as Read" Style="{StaticResource ModernMenuItem}">
                    <MenuItem.Icon>
                        <TextBlock Text="âœ“" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Mute Channel" Style="{StaticResource ModernMenuItem}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”•" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Notification Settings" Style="{StaticResource ModernMenuItem}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ””" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Copy Channel ID" Style="{StaticResource ModernMenuItem}"
                          Click="CopyChannelId_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Server Header -->
            <RowDefinition Height="48"/>
            <!-- Connection Status -->
            <RowDefinition Height="Auto"/>
            <!-- Channels List -->
            <RowDefinition Height="*"/>
            <!-- Voice Connected Panel -->
            <RowDefinition Height="Auto"/>
            <!-- User Panel -->
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>

        <!-- Server Header -->
        <Border Grid.Row="0" BorderBrush="{StaticResource PrimaryDarkBrush}"
                BorderThickness="0,0,0,1" Cursor="Hand">
            <Grid Margin="16,0">
                <TextBlock Text="Yurt Cord" FontSize="16" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="â–¼" FontSize="10"
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Connection Status Bar -->
        <Border x:Name="ConnectionStatusBar" Grid.Row="1" Padding="12,8"
                Visibility="Collapsed">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#2D7D46"/>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Indicator -->
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Ellipse x:Name="StatusDot" Width="10" Height="10" Fill="#57F287">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0.5" Duration="0:0:1"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>

                <!-- Status Text -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="ConnectionStatusText" Text="Connected"
                               FontSize="12" FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock x:Name="ConnectionDetailText" Text="Session active"
                               FontSize="10" Foreground="#FFFFFFAA"/>
                </StackPanel>

                <!-- Latency/Action -->
                <TextBlock x:Name="LatencyText" Grid.Column="2" Text="--ms"
                           FontSize="11" Foreground="#FFFFFFCC"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Reconnecting Banner -->
        <Border x:Name="ReconnectingBanner" Grid.Row="1" Background="#FAA81A"
                Padding="12,8" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Spinner -->
                <Grid Grid.Column="0" Margin="0,0,10,0" Width="16" Height="16">
                    <Ellipse Width="16" Height="16" Stroke="White" StrokeThickness="2"
                             StrokeDashArray="3,2" RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotation"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>

                <TextBlock Grid.Column="1" Text="Reconnecting..."
                           FontSize="12" FontWeight="SemiBold"
                           Foreground="#1E1F22" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Disconnected Banner -->
        <Border x:Name="DisconnectedBanner" Grid.Row="1" Background="#ED4245"
                Padding="12,8" Visibility="Collapsed" Cursor="Hand"
                MouseLeftButtonDown="DisconnectedBanner_Click">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="âš " FontSize="14" Foreground="White"
                           Margin="0,0,10,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Connection Lost"
                               FontSize="12" FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="Click to reconnect"
                               FontSize="10" Foreground="#FFFFFFAA"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="â†»" FontSize="16" Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Channels List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource ModernScrollViewer}">
            <StackPanel Margin="0,8">
                <!-- Text Channels Section -->
                <StackPanel Margin="8,0">
                    <Grid Margin="0,0,0,4">
                        <TextBlock Text="TEXT CHANNELS" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center"/>
                        <Button Style="{StaticResource IconButton}" Width="16" Height="16"
                                HorizontalAlignment="Right" ToolTip="Create Channel">
                            <TextBlock Text="+" FontSize="14" Foreground="{StaticResource TextMutedBrush}"/>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- Channel List -->
                <ItemsControl x:Name="ChannelsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ChannelButton}"
                                    Click="ChannelButton_Click" Tag="{Binding Name}"
                                    ContextMenu="{StaticResource ChannelContextMenu}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}" FontSize="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}" FontSize="15"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Voice Channels Section -->
                <StackPanel Margin="8,16,8,0">
                    <Grid Margin="0,0,0,4">
                        <TextBlock Text="VOICE CHANNELS" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource IconButton}" Width="16" Height="16"
                                    ToolTip="Browse Public Rooms" Click="BrowseRooms_Click" Margin="0,0,4,0">
                                <TextBlock Text="ðŸŒ" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Width="16" Height="16"
                                    ToolTip="Create Voice Channel">
                                <TextBlock Text="+" FontSize="14" Foreground="{StaticResource TextMutedBrush}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Voice Channels -->
                <StackPanel>
                    <Button Style="{StaticResource ChannelButton}" Click="VoiceChannel_Click" Tag="general-voice">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”Š" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="General Voice" FontSize="15" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                    <!-- Voice Users in General Voice Channel -->
                    <StackPanel x:Name="GeneralVoiceUsersPanel" Margin="24,0,0,0" Visibility="Collapsed">
                        <ItemsControl x:Name="GeneralVoiceUsersControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4" Cursor="Hand"
                                          ContextMenu="{StaticResource VoiceUserContextMenu}"
                                          Tag="{Binding}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0,0,8,0">
                                            <Ellipse Width="24" Height="24">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding AvatarUrl}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <Ellipse Width="28" Height="28" Stroke="White" StrokeThickness="2"
                                                     Visibility="{Binding IsSpeaking, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>
                                        <TextBlock Grid.Column="1" Text="{Binding Username}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center" FontSize="13"/>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <TextBlock Text="ðŸ”‡" FontSize="12" Margin="4,0"
                                                       Visibility="{Binding IsMuted, Converter={StaticResource BoolToVis}}"/>
                                            <TextBlock Text="ðŸ”ˆ" FontSize="12"
                                                       Visibility="{Binding IsDeafened, Converter={StaticResource BoolToVis}}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>

                <StackPanel>
                    <Button Style="{StaticResource ChannelButton}" Click="VoiceChannel_Click" Tag="music-voice">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽµ" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Music" FontSize="15" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <!-- Voice Users in Music Channel -->
                    <StackPanel x:Name="MusicVoiceUsersPanel" Margin="24,0,0,0" Visibility="Collapsed">
                        <ItemsControl x:Name="MusicVoiceUsersControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4" Cursor="Hand"
                                          ContextMenu="{StaticResource VoiceUserContextMenu}"
                                          Tag="{Binding}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0,0,8,0">
                                            <Ellipse Width="24" Height="24">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding AvatarUrl}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <Ellipse Width="28" Height="28" Stroke="White" StrokeThickness="2"
                                                     Visibility="{Binding IsSpeaking, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>
                                        <TextBlock Grid.Column="1" Text="{Binding Username}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center" FontSize="13"/>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <TextBlock Text="ðŸ”‡" FontSize="12" Margin="4,0"
                                                       Visibility="{Binding IsMuted, Converter={StaticResource BoolToVis}}"/>
                                            <TextBlock Text="ðŸ”ˆ" FontSize="12"
                                                       Visibility="{Binding IsDeafened, Converter={StaticResource BoolToVis}}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>

                <StackPanel>
                    <Button Style="{StaticResource ChannelButton}" Click="VoiceChannel_Click" Tag="marketplace-voice">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’°" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Marketplace Deals" FontSize="15" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <!-- Voice Users in Marketplace Channel -->
                    <StackPanel x:Name="MarketplaceVoiceUsersPanel" Margin="24,0,0,0" Visibility="Collapsed">
                        <ItemsControl x:Name="MarketplaceVoiceUsersControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4" Cursor="Hand"
                                          ContextMenu="{StaticResource VoiceUserContextMenu}"
                                          Tag="{Binding}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="0,0,8,0">
                                            <Ellipse Width="24" Height="24">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding AvatarUrl}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <Ellipse Width="28" Height="28" Stroke="White" StrokeThickness="2"
                                                     Visibility="{Binding IsSpeaking, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>
                                        <TextBlock Grid.Column="1" Text="{Binding Username}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center" FontSize="13"/>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <TextBlock Text="ðŸ”‡" FontSize="12" Margin="4,0"
                                                       Visibility="{Binding IsMuted, Converter={StaticResource BoolToVis}}"/>
                                            <TextBlock Text="ðŸ”ˆ" FontSize="12"
                                                       Visibility="{Binding IsDeafened, Converter={StaticResource BoolToVis}}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>

                <!-- Old Voice Users Panel - Hidden -->
                <StackPanel x:Name="VoiceUsersPanel" Margin="24,0,0,0" Visibility="Collapsed">
                    <ItemsControl x:Name="VoiceUsersItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4" Cursor="Hand"
                                      ContextMenu="{StaticResource VoiceUserContextMenu}"
                                      Tag="{Binding}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar with voice indicator -->
                                    <Grid Grid.Column="0" Margin="0,0,8,0">
                                        <Ellipse Width="24" Height="24">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarUrl}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <!-- Voice ring animation when speaking (White indicator) -->
                                        <Ellipse x:Name="VoiceRing" Width="28" Height="28"
                                                 Stroke="White"
                                                 StrokeThickness="2"
                                                 Visibility="{Binding IsSpeaking, Converter={StaticResource BoolToVis}}"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                    </Grid>

                                    <TextBlock Grid.Column="1" Text="{Binding Username}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" FontSize="13"/>

                                    <!-- Mute/Deafen icons -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”‡" FontSize="12" Margin="4,0"
                                                   Visibility="{Binding IsMuted, Converter={StaticResource BoolToVis}}"/>
                                        <TextBlock Text="ðŸ”ˆ" FontSize="12"
                                                   Visibility="{Binding IsDeafened, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Voice Connected Panel - Shows when in voice channel -->
        <Border x:Name="VoiceConnectedPanel" Grid.Row="3" Background="#1A1B1E"
                BorderBrush="{StaticResource PrimaryDarkBrush}" BorderThickness="0,1,0,0"
                Visibility="Collapsed">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Voice Status -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Voice Connected" FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource AccentGreenBrush}"/>
                    <TextBlock x:Name="VoiceChannelNameText" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"/>
                </StackPanel>

                <!-- Voice Control Buttons -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <!-- Screen Share Button -->
                    <Button x:Name="ScreenShareButton" Style="{StaticResource IconButton}"
                            Width="28" Height="28" Click="ScreenShare_Click"
                            ToolTip="Share Screen" Margin="0,0,4,0">
                        <TextBlock x:Name="ScreenShareIcon" Text="ðŸ–¥" FontSize="14"/>
                    </Button>
                    <!-- Disconnect Button -->
                    <Button Style="{StaticResource IconButton}"
                            Width="28" Height="28" Click="DisconnectVoice_Click"
                            ToolTip="Disconnect from Voice"
                            Background="#ED4245">
                        <TextBlock Text="ðŸ“ž" FontSize="14" RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="135"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Button>
                </StackPanel>

                <!-- Audio Level Indicator -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="AudioLevelIcon" Text="ðŸŽ¤" FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <Border Grid.Column="1" Background="#2F3136" CornerRadius="2" Height="4">
                        <Border x:Name="AudioLevelBar" Background="{StaticResource AccentGreenBrush}"
                                CornerRadius="2" HorizontalAlignment="Left" Width="0"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- User Panel -->
        <Border Grid.Row="4" Background="{StaticResource PrimaryDarkBrush}">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- User Avatar -->
                <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16" Margin="0,0,8,0">
                    <Border.Background>
                        <ImageBrush x:Name="UserAvatarBrush" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <!-- User Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="UserNameText" FontSize="13" FontWeight="Medium"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock x:Name="UserStatusText" Text="Online" FontSize="11"
                               Foreground="{StaticResource AccentGreenBrush}"/>
                </StackPanel>

                <!-- Voice Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="MicButton" Style="{StaticResource IconButton}" Width="32" Height="32"
                            Click="MicButton_Click" ToolTip="Mute">
                        <TextBlock x:Name="MicIcon" Text="ðŸŽ¤" FontSize="16"/>
                    </Button>
                    <Button x:Name="DeafenButton" Style="{StaticResource IconButton}" Width="32" Height="32"
                            Click="DeafenButton_Click" ToolTip="Deafen">
                        <TextBlock x:Name="DeafenIcon" Text="ðŸ”Š" FontSize="16"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                            Click="SettingsButton_Click" ToolTip="Settings">
                        <TextBlock Text="âš™" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
