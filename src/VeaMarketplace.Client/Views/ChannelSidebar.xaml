                        <TextBlock Text="ðŸ‘¤" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Send Message" Click="VoiceSendMessage_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¬" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Add Friend" Click="VoiceAddFriend_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="âž•" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Background="#00FF9F30" Margin="8,4"/>
                <MenuItem Header="Mute User (for me)" Click="VoiceMuteUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”‡" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Adjust Volume" Click="VoiceAdjustVolume_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”Š" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Background="#00FF9F30" Margin="8,4"/>
                <MenuItem Header="Watch Screen" Click="VoiceWatchScreen_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ–¥" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Background="#00FF9F30" Margin="8,4"/>
                <MenuItem Header="Move To">
                    <MenuItem.Icon>
                        <TextBlock Text="â†ª" FontSize="14"/>
                    </MenuItem.Icon>
                    <MenuItem Header="General Voice" Click="MoveToChannel_Click" Tag="general-voice"/>
                    <MenuItem Header="Music" Click="MoveToChannel_Click" Tag="music-voice"/>
                    <MenuItem Header="Marketplace Deals" Click="MoveToChannel_Click" Tag="marketplace-voice"/>
                </MenuItem>
                <MenuItem Header="Disconnect User" Foreground="#FF4466" Click="VoiceDisconnectUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸš«" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Background="#00FF9F30" Margin="8,4"/>
                <MenuItem Header="Kick from Server" Foreground="#FF4466" Click="VoiceKickUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ‘¢" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Ban from Server" Foreground="#FF4466" Click="VoiceBanUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”¨" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Background="#00FF9F30" Margin="8,4"/>
                <MenuItem Header="Copy User ID" Click="VoiceCopyUserId_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>

            <!-- Channel Context Menu (Blade Style) -->
            <ContextMenu x:Key="ChannelContextMenu">
                <ContextMenu.Style>
                    <Style TargetType="ContextMenu">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#15202D" Offset="0"/>
                                    <GradientStop Color="#0A1520" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="BorderBrush" Value="#00FF9F40"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ContextMenu">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12" Padding="{TemplateBinding Padding}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#00FF9F" BlurRadius="15" ShadowDepth="0" Opacity="0.25"/>
                                        </Border.Effect>
                                        <StackPanel IsItemsHost="True"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ContextMenu.Style>
                <MenuItem Header="Mark as Read" Foreground="{StaticResource BladeTextPrimaryBrush}">
                    <MenuItem.Icon>
                        <TextBlock Text="âœ“" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Background="#00FF9F30" Margin="8,4"/>
                <MenuItem Header="Mute Channel" Foreground="{StaticResource BladeTextPrimaryBrush}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”•" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Notification Settings" Foreground="{StaticResource BladeTextPrimaryBrush}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ””" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Background="#00FF9F30" Margin="8,4"/>
                <MenuItem Header="Copy Channel ID" Click="CopyChannelId_Click"
                          Foreground="{StaticResource BladeTextPrimaryBrush}">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Server Header -->
            <RowDefinition Height="64"/>
            <!-- Connection Status -->
            <RowDefinition Height="Auto"/>
            <!-- Channels List -->
            <RowDefinition Height="*"/>
            <!-- Voice Connected Panel -->
            <RowDefinition Height="Auto"/>
            <!-- User Panel -->
            <RowDefinition Height="72"/>
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             SERVER HEADER (Blade Style)
        â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Cursor="Hand" Margin="0,8,0,0">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Server Icon -->
                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="12" Margin="0,0,12,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00FF9F30" Offset="0"/>
                            <GradientStop Color="#00E5FF20" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00FF9F" Offset="0"/>
                            <GradientStop Color="#00E5FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.BorderThickness>1.5</Border.BorderThickness>
                    <TextBlock Text="O" FontSize="18" FontWeight="Bold" Foreground="#00FF9F"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Server Name -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="OVERSEER" FontSize="15" FontWeight="Bold"
                               Foreground="{StaticResource BladeNeonGreenBrush}">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00FF9F" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Hub Server" FontSize="10"
                               Foreground="{StaticResource BladeTextDimBrush}"/>
                </StackPanel>

                <!-- Dropdown Indicator -->
                <Border Grid.Column="2" Width="24" Height="24" CornerRadius="6"
                        Background="#00FF9F15">
                    <TextBlock Text="â–¼" FontSize="9" Foreground="#00FF9F"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             CONNECTION STATUS BANNERS
        â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <!-- Connected Status Bar -->
        <Border x:Name="ConnectionStatusBar" Grid.Row="1" Padding="12,10"
                Margin="8,8,8,0" CornerRadius="10" Visibility="Collapsed">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#00FF9F30" Offset="0"/>
                    <GradientStop Color="#00FF9F15" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#00FF9F60"/>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Indicator -->
                <Ellipse x:Name="StatusDot" Grid.Column="0" Width="10" Height="10"
                         Fill="#00FF9F" Margin="0,0,10,0">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#00FF9F" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                    </Ellipse.Effect>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="1" To="0.5" Duration="0:0:1"
                                                     AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <!-- Status Text -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="ConnectionStatusText" Text="Connected"
                               FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource BladeNeonGreenBrush}"/>
                    <TextBlock x:Name="ConnectionDetailText" Text="Session active"
                               FontSize="10" Foreground="{StaticResource BladeTextDimBrush}"/>
                </StackPanel>

                <!-- Latency -->
                <Border Grid.Column="2" CornerRadius="8" Padding="8,4"
                        Background="#00FF9F20">
                    <TextBlock x:Name="LatencyText" Text="--ms"
                               FontSize="10" FontWeight="Medium"
                               Foreground="{StaticResource BladeNeonGreenBrush}"/>
                </Border>
            </Grid>
        </Border>

        <!-- Reconnecting Banner -->
        <Border x:Name="ReconnectingBanner" Grid.Row="1" Padding="12,10"
                Margin="8,8,8,0" CornerRadius="10" Visibility="Collapsed">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FFDD3330" Offset="0"/>
                    <GradientStop Color="#FFDD3315" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#FFDD3360"/>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Spinner -->
                <Grid Grid.Column="0" Margin="0,0,10,0" Width="16" Height="16">
                    <Ellipse Width="16" Height="16" Stroke="#FFDD33" StrokeThickness="2"
                             StrokeDashArray="3,2" RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotation"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>

                <TextBlock Grid.Column="1" Text="Reconnecting..."
                           FontSize="12" FontWeight="SemiBold"
                           Foreground="#FFDD33" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Disconnected Banner -->
        <Border x:Name="DisconnectedBanner" Grid.Row="1" Padding="12,10"
                Margin="8,8,8,0" CornerRadius="10" Visibility="Collapsed" Cursor="Hand"
                MouseLeftButtonDown="DisconnectedBanner_Click">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF446630" Offset="0"/>
                    <GradientStop Color="#FF446615" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <SolidColorBrush Color="#FF446660"/>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="âš " FontSize="14" Foreground="#FF4466"
                           Margin="0,0,10,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Connection Lost" FontSize="12" FontWeight="SemiBold"
                               Foreground="#FF4466"/>
                    <TextBlock Text="Click to reconnect" FontSize="10"
                               Foreground="{StaticResource BladeTextDimBrush}"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="â†»" FontSize="16" Foreground="#FF4466"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             CHANNELS LIST (Blade Style)
        â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource BladeScrollViewer}" Margin="0,8,0,0">
            <StackPanel>
                <!-- Text Channels Section -->
                <Grid Margin="16,8,16,8">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="3" Height="12" CornerRadius="1.5" Margin="0,0,8,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#00FF9F" Offset="0"/>
                                    <GradientStop Color="#00E5FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="TEXT CHANNELS" FontSize="10" FontWeight="Bold"
                                   Foreground="{StaticResource BladeTextDimBrush}"
                                   VerticalAlignment="Center" LetterSpacing="1"/>
                    </StackPanel>
                    <Button Style="{StaticResource BladeIconButton}" Width="24" Height="24"
                            HorizontalAlignment="Right" ToolTip="Create Channel">
                        <TextBlock Text="+" FontSize="14" Foreground="{StaticResource BladeNeonGreenBrush}"/>
                    </Button>
                </Grid>

                <!-- Channel List -->
                <ItemsControl x:Name="ChannelsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource BladeChannelButton}"
                                    Click="ChannelButton_Click" Tag="{Binding Name}"
                                    ContextMenu="{StaticResource ChannelContextMenu}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="18" Margin="0,0,10,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="14"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Voice Channels Section -->
                <Grid Margin="16,20,16,8">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="3" Height="12" CornerRadius="1.5" Margin="0,0,8,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#00E5FF" Offset="0"/>
                                    <GradientStop Color="#B366FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="VOICE CHANNELS" FontSize="10" FontWeight="Bold"
                                   Foreground="{StaticResource BladeTextDimBrush}"
                                   VerticalAlignment="Center" LetterSpacing="1"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource BladeIconButton}" Width="24" Height="24"
                                ToolTip="Browse Public Rooms" Click="BrowseRooms_Click" Margin="0,0,4,0">
                            <TextBlock Text="ðŸŒ" FontSize="12"/>
                        </Button>
                        <Button Style="{StaticResource BladeIconButton}" Width="24" Height="24"
                                ToolTip="Create Voice Channel">
                            <TextBlock Text="+" FontSize="14" Foreground="{StaticResource BladeNeonCyanBrush}"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Voice Channels -->
                <StackPanel>
                    <Button Style="{StaticResource BladeChannelButton}" Click="VoiceChannel_Click" Tag="general-voice">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ”Š" FontSize="18" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="General Voice" FontSize="14" VerticalAlignment="Center"/>
                        </Grid>
