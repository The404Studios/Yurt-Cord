<UserControl x:Class="VeaMarketplace.Client.Views.ChannelSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Colors.xaml"/>
                <ResourceDictionary Source="../Styles/Controls.xaml"/>
                <ResourceDictionary Source="../Themes/BladeUI.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Blade Channel Button Style -->
            <Style x:Key="BladeChannelButton" TargetType="Button">
                <Setter Property="Height" Value="44"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource BladeTextSecondaryBrush}"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Selection Indicator -->
                                <Border x:Name="SelectionIndicator" Width="3" HorizontalAlignment="Left"
                                        CornerRadius="0,1.5,1.5,0" Opacity="0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00FF9F" Offset="0"/>
                                            <GradientStop Color="#00E5FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#00FF9F" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </Border.Effect>
                                </Border>

                                <!-- Background -->
                                <Border x:Name="BgBorder" Background="Transparent" CornerRadius="0,10,10,0"
                                        Margin="3,0,8,0" Padding="{TemplateBinding Padding}"
                                        RenderTransformOrigin="0,0.5">
                                    <Border.RenderTransform>
                                        <TranslateTransform x:Name="ContentSlide" X="0"/>
                                    </Border.RenderTransform>
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="Center"/>
                                </Border>

                                <!-- Hover Glow -->
                                <Border x:Name="HoverGlow" CornerRadius="0,10,10,0" Margin="3,0,8,0"
                                        Opacity="0" IsHitTestVisible="False">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#00FF9F15" Offset="0"/>
                                            <GradientStop Color="#00FF9F00" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource BladeTextPrimaryBrush}"/>
                                    <Setter TargetName="BgBorder" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#15202D" Offset="0"/>
                                                <GradientStop Color="#10181F" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ContentSlide"
                                                                 Storyboard.TargetProperty="X"
                                                                 To="6" Duration="0:0:0.15">
                                                    <DoubleAnimation.EasingFunction>
                                                        <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="SelectionIndicator"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.5" Duration="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetName="HoverGlow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="1" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ContentSlide"
                                                                 Storyboard.TargetProperty="X"
                                                                 To="0" Duration="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetName="SelectionIndicator"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0" Duration="0:0:0.08"/>
                                                <DoubleAnimation Storyboard.TargetName="HoverGlow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource BladeNeonGreenBrush}"/>
                                    <Setter TargetName="SelectionIndicator" Property="Opacity" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Voice User Context Menu (Blade Style) -->
            <ContextMenu x:Key="VoiceUserContextMenu">
                <ContextMenu.Style>
                    <Style TargetType="ContextMenu">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#15202D" Offset="0"/>
                                    <GradientStop Color="#0A1520" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="{StaticResource BladeTextPrimaryBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="#00FF9F40"/>
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ContextMenu">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12" Padding="{TemplateBinding Padding}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#00FF9F" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                                        </Border.Effect>
                                        <StackPanel IsItemsHost="True"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
