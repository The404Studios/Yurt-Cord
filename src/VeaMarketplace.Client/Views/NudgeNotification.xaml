<Window x:Class="VeaMarketplace.Client.Views.NudgeNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nudge"
        Width="350" Height="120"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">

    <Border Background="#2B2D31" CornerRadius="12" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3"
                              Opacity="0.5" Color="Black"/>
        </Border.Effect>

        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Avatar -->
            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="24"
                    Margin="0,0,12,0">
                <Border.Background>
                    <ImageBrush x:Name="AvatarBrush" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="ðŸ””" FontSize="14" Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="UsernameText" FontSize="15" FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text=" nudged you!" FontSize="15" Foreground="#B5BAC1"/>
                </StackPanel>
                <TextBlock x:Name="MessageText" FontSize="13" Foreground="#72767D"
                           TextTrimming="CharacterEllipsis" Visibility="Collapsed"/>
                <TextBlock x:Name="TimeText" FontSize="11" Foreground="#5865F2"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Column="2" Content="âœ•" Width="24" Height="24"
                    Click="Close_Click" Cursor="Hand"
                    VerticalAlignment="Top" Margin="0,-4,-4,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#72767D"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40444B"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
