<UserControl x:Class="VeaMarketplace.Client.Views.CheckoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="#36393F">

    <Grid>
        <!-- Main Checkout Content -->
        <Grid Visibility="{Binding CheckoutComplete, Converter={StaticResource InverseBoolToVisibility}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Cart Items -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="32">
                <StackPanel>
                    <!-- Header -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="&#xE72B;" FontFamily="Segoe MDL2 Assets"
                                Command="{Binding GoBackCommand}"
                                Background="Transparent" Foreground="#B9BBBE"
                                BorderThickness="0" FontSize="16" Cursor="Hand"
                                VerticalAlignment="Center" Margin="0,0,16,0"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Checkout" Foreground="White" FontSize="24" FontWeight="Bold"/>
                            <TextBlock Foreground="#B9BBBE" FontSize="14" Margin="0,4,0,0">
                                <Run Text="{Binding ItemCount, Mode=OneWay}"/>
                                <Run Text="item(s) in your cart"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <!-- Cart Items -->
                    <ItemsControl ItemsSource="{Binding CartItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2F3136" CornerRadius="8" Margin="0,0,0,12" Padding="16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Product Image -->
                                        <Border Grid.Column="0" CornerRadius="8" Background="#202225"
                                                Width="80" Height="80" Cursor="Hand"
                                                MouseLeftButtonUp="ProductImage_Click">
                                            <Image Source="{Binding ProductImageUrl}" Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Product Info -->
                                        <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ProductTitle}" Foreground="White"
                                                       FontSize="15" FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Foreground="#72767D" FontSize="13" Margin="0,4,0,0">
                                                <Run Text="Sold by"/>
                                                <Run Text="{Binding SellerUsername}" Foreground="#00D166"/>
                                            </TextBlock>

                                            <!-- Availability Warning -->
                                            <Border Background="#ED424520" CornerRadius="4" Padding="8,4"
                                                    Margin="0,8,0,0" HorizontalAlignment="Left"
                                                    Visibility="{Binding IsAvailable, Converter={StaticResource InverseBoolToVisibility}}">
                                                <TextBlock Text="Item no longer available" Foreground="#ED4245" FontSize="12"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Price -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,24,0">
                                            <TextBlock Foreground="#5865F2" FontSize="18" FontWeight="Bold"
                                                       HorizontalAlignment="Right">
                                                <Run Text="$"/><Run Text="{Binding Price, StringFormat=N2}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Remove Button -->
                                        <Button Grid.Column="3" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                                Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" Foreground="#ED4245"
                                                BorderThickness="0" FontSize="16" Cursor="Hand"
                                                VerticalAlignment="Center" ToolTip="Remove"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty Cart Message -->
                    <Border Background="#2F3136" CornerRadius="8" Padding="48"
                            Visibility="{Binding ItemCount, Converter={StaticResource ZeroToVisibility}}"
                            HorizontalAlignment="Stretch">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="48" Foreground="#72767D" HorizontalAlignment="Center"/>
                            <TextBlock Text="Your cart is empty" Foreground="White" FontSize="18"
                                       FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,16,0,8"/>
                            <Button Content="Browse Marketplace"
                                    Command="{Binding ContinueShoppingCommand}"
                                    Style="{StaticResource PrimaryButton}" Margin="0,16,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Payment Method -->
                    <Border Background="#2F3136" CornerRadius="8" Padding="20" Margin="0,24,0,0"
                            Visibility="{Binding ItemCount, Converter={StaticResource CountToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="Payment Method" Foreground="White" FontSize="16"
                                       FontWeight="SemiBold" Margin="0,0,0,16"/>

                            <ItemsControl ItemsSource="{Binding PaymentMethods}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton GroupName="PaymentMethod"
                                                     Margin="0,0,0,8">
                                            <RadioButton.IsChecked>
                                                <MultiBinding Converter="{StaticResource EqualityMultiConverter}">
                                                    <Binding Path="DataContext.SelectedPaymentMethod" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    <Binding />
                                                </MultiBinding>
                                            </RadioButton.IsChecked>
                                            <RadioButton.Template>
                                                <ControlTemplate TargetType="RadioButton">
                                                    <Border x:Name="Border" Background="#202225" CornerRadius="8"
                                                            Padding="16" Cursor="Hand" BorderThickness="2"
                                                            BorderBrush="Transparent">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Ellipse Grid.Column="0" Width="20" Height="20"
                                                                     Stroke="#72767D" StrokeThickness="2"
                                                                     Fill="Transparent" x:Name="Radio"/>

                                                            <TextBlock Grid.Column="1" Text="{Binding}"
                                                                       Foreground="White" FontSize="14"
                                                                       VerticalAlignment="Center" Margin="12,0,0,0"/>
                                                        </Grid>
                                                    </Border>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#5865F2"/>
                                                            <Setter TargetName="Radio" Property="Fill" Value="#5865F2"/>
                                                            <Setter TargetName="Radio" Property="Stroke" Value="#5865F2"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </RadioButton.Template>
                                        </RadioButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Balance Warning -->
                            <Border Background="#ED424520" CornerRadius="8" Padding="12" Margin="0,12,0,0"
                                    Visibility="{Binding HasInsufficientFunds, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets"
                                               Foreground="#ED4245" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Foreground="#ED4245" FontSize="13" TextWrapping="Wrap">
                                        <Run Text="Insufficient balance. Your balance: $"/>
                                        <Run Text="{Binding UserBalance, StringFormat=N2}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Order Notes -->
                    <Border Background="#2F3136" CornerRadius="8" Padding="20" Margin="0,16,0,0"
                            Visibility="{Binding ItemCount, Converter={StaticResource CountToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="Order Notes (Optional)" Foreground="White" FontSize="16"
                                       FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <TextBox Text="{Binding OrderNotes, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#202225" Foreground="White" BorderThickness="0"
                                     Padding="12" AcceptsReturn="True" TextWrapping="Wrap"
                                     MinHeight="80" MaxHeight="150" VerticalScrollBarVisibility="Auto"
                                     CaretBrush="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel - Order Summary -->
            <Border Grid.Column="1" Background="#2F3136" Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Summary Header -->
                    <TextBlock Grid.Row="0" Text="Order Summary" Foreground="White"
                               FontSize="18" FontWeight="Bold" Margin="0,0,0,24"/>

                    <!-- Summary Details -->
                    <StackPanel Grid.Row="1">
                        <!-- Coupon Section -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="Have a coupon?" Foreground="#B9BBBE" FontSize="13" Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" Text="{Binding CouponCode, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#202225" Foreground="White" BorderThickness="0"
                                         Padding="12,10" CaretBrush="White"
                                         Visibility="{Binding CouponApplied, Converter={StaticResource InverseBoolToVisibility}}"/>

                                <Border Grid.Column="0" Background="#00D16620" CornerRadius="4" Padding="12,8"
                                        Visibility="{Binding CouponApplied, Converter={StaticResource BoolToVisibility}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Foreground="#00D166" FontSize="13">
                                            <Run Text="Coupon: "/>
                                            <Run Text="{Binding AppliedCoupon}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                        <Button Grid.Column="1" Content="&#xE711;" FontFamily="Segoe MDL2 Assets"
                                                Command="{Binding RemoveCouponCommand}"
                                                Background="Transparent" Foreground="#00D166"
                                                BorderThickness="0" FontSize="12" Cursor="Hand"/>
                                    </Grid>
                                </Border>

                                <Button Grid.Column="1" Content="Apply"
                                        Command="{Binding ApplyCouponCommand}"
                                        Style="{StaticResource SecondaryButton}" Padding="16,10" Margin="8,0,0,0"
                                        Visibility="{Binding CouponApplied, Converter={StaticResource InverseBoolToVisibility}}"/>
                            </Grid>

                            <TextBlock Text="{Binding CouponError}" Foreground="#ED4245" FontSize="12"
                                       Margin="0,4,0,0"
                                       Visibility="{Binding CouponError, Converter={StaticResource NullToVisibility}}"/>
                        </StackPanel>

                        <!-- Price Breakdown -->
                        <Border Background="#202225" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Subtotal" Foreground="#B9BBBE" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Foreground="White" FontSize="14">
                                        <Run Text="$"/><Run Text="{Binding Subtotal, StringFormat=N2}"/>
                                    </TextBlock>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Fees (7%)" Foreground="#B9BBBE" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Foreground="White" FontSize="14">
                                        <Run Text="$"/><Run Text="{Binding Fees, StringFormat=N2}"/>
                                    </TextBlock>
                                </Grid>

                                <Grid Margin="0,0,0,12"
                                      Visibility="{Binding Discount, Converter={StaticResource PositiveToVisibility}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Discount" Foreground="#00D166" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Foreground="#00D166" FontSize="14">
                                        <Run Text="-$"/><Run Text="{Binding Discount, StringFormat=N2}"/>
                                    </TextBlock>
                                </Grid>

                                <Border Height="1" Background="#40444B" Margin="0,4,0,16"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Total" Foreground="White"
                                               FontSize="18" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Foreground="#5865F2"
                                               FontSize="24" FontWeight="Bold">
                                        <Run Text="$"/><Run Text="{Binding Total, StringFormat=N2}"/>
                                    </TextBlock>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Checkout Button -->
                    <StackPanel Grid.Row="2">
                        <!-- Terms Agreement -->
                        <CheckBox IsChecked="{Binding AgreeToTerms}" Margin="0,0,0,16">
                            <CheckBox.Content>
                                <TextBlock Foreground="#B9BBBE" FontSize="12" TextWrapping="Wrap">
                                    <Run Text="I agree to the"/>
                                    <Hyperlink Foreground="#00AFF4" TextDecorations="None">terms and conditions</Hyperlink>
                                </TextBlock>
                            </CheckBox.Content>
                        </CheckBox>

                        <Button Command="{Binding ProcessCheckoutCommand}"
                                IsEnabled="{Binding ItemCount, Converter={StaticResource PositiveToBool}}"
                                Style="{StaticResource PrimaryButton}" Padding="0,16">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets"
                                               FontSize="16" Margin="0,0,8,0"
                                               Visibility="{Binding IsProcessing, Converter={StaticResource InverseBoolToVisibility}}"/>
                                    <ProgressBar IsIndeterminate="True" Width="16" Height="16" Margin="0,0,8,0"
                                                 Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}}"/>
                                    <TextBlock Text="{Binding IsProcessing, Converter={StaticResource BoolToText}, ConverterParameter='Processing...|Complete Purchase'}"
                                               FontSize="15" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <!-- Error Message -->
                        <Border Background="#ED424520" CornerRadius="4" Padding="12" Margin="0,12,0,0"
                                Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="{Binding ErrorMessage}" Foreground="#ED4245"
                                       FontSize="13" TextWrapping="Wrap"/>
                        </Border>

                        <!-- Secure Checkout Notice -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                            <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets"
                                       Foreground="#72767D" FontSize="12"/>
                            <TextBlock Text="Secure checkout with escrow protection"
                                       Foreground="#72767D" FontSize="12" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Checkout Complete -->
        <Border Background="#36393F"
                Visibility="{Binding CheckoutComplete, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
                <!-- Success Icon -->
                <Border Width="80" Height="80" CornerRadius="40" Background="#00D16620">
                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                               FontSize="40" Foreground="#00D166"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Order Placed Successfully!" Foreground="White"
                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,24,0,8"/>

                <TextBlock Text="Thank you for your purchase. Your order is being processed."
                           Foreground="#B9BBBE" FontSize="15" HorizontalAlignment="Center"
                           TextAlignment="Center" Margin="0,0,0,32"/>

                <!-- Order Summary -->
                <Border Background="#2F3136" CornerRadius="8" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Order Details" Foreground="White" FontSize="16"
                                   FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Items Purchased" Foreground="#B9BBBE"/>
                            <TextBlock Grid.Column="1" Text="{Binding CheckoutResult.Orders.Count}" Foreground="White"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Total Paid" Foreground="#B9BBBE"/>
                            <TextBlock Grid.Column="1" Foreground="#5865F2" FontWeight="SemiBold">
                                <Run Text="$"/><Run Text="{Binding CheckoutResult.TotalPaid, StringFormat=N2}"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="View Orders"
                            Command="{Binding ViewOrdersCommand}"
                            Style="{StaticResource PrimaryButton}" Padding="32,12" Margin="0,0,12,0"/>
                    <Button Content="Continue Shopping"
                            Command="{Binding ContinueShoppingCommand}"
                            Style="{StaticResource SecondaryButton}" Padding="32,12"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
