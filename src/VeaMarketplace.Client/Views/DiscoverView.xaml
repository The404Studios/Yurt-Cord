<UserControl x:Class="VeaMarketplace.Client.Views.DiscoverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource TertiaryDarkBrush}">

    <!-- Converters (BoolToVis, NullToVisibility) are available globally from App.xaml -->

    <UserControl.Resources>
        <!-- Featured Card Style -->
        <Style x:Key="FeaturedCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SecondaryDarkBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.02" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.02" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.05" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.05" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24">

            <!-- Header -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Discover" FontSize="32" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Find amazing products and sellers" FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="SearchButton" Style="{StaticResource SecondaryButton}"
                            Content="Search" Padding="16,10" Click="SearchButton_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#x1F50D;" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Search"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button x:Name="MarketplaceButton" Style="{StaticResource PrimaryButton}"
                            Content="Browse All" Padding="16,10" Margin="8,0,0,0"
                            Click="MarketplaceButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Featured Banner -->
            <Border Style="{StaticResource FeaturedCardStyle}" Margin="0,0,0,32" Cursor="Hand"
                    MouseLeftButtonUp="FeaturedBanner_Click">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"
                                      Color="{StaticResource AccentBlurple}"/>
                </Border.Effect>
                <Grid Height="200">
                    <!-- Gradient Background -->
                    <Border CornerRadius="12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#5865F2" Offset="0"/>
                                <GradientStop Color="#7289DA" Offset="0.5"/>
                                <GradientStop Color="#99AAB5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <!-- Content -->
                    <StackPanel VerticalAlignment="Center" Margin="32">
                        <Border Background="#22FFFFFF" CornerRadius="4" Padding="8,4"
                                HorizontalAlignment="Left" Margin="0,0,0,12">
                            <TextBlock Text="FEATURED" FontSize="10" FontWeight="Bold"
                                       Foreground="White" Opacity="0.9"/>
                        </Border>
                        <TextBlock x:Name="FeaturedTitle" Text="Premium Digital Assets"
                                   FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="FeaturedDescription"
                                   Text="Discover exclusive digital products from top sellers"
                                   FontSize="14" Foreground="White" Opacity="0.9" Margin="0,8,0,0"/>
                        <Button Content="Explore Now" Style="{StaticResource SecondaryButton}"
                                Background="#44FFFFFF" Foreground="White" BorderThickness="0"
                                Padding="20,10" HorizontalAlignment="Left" Margin="0,16,0,0"/>
                    </StackPanel>

                    <!-- Decorative Elements -->
                    <Canvas ClipToBounds="True">
                        <Ellipse Width="300" Height="300" Canvas.Right="-50" Canvas.Top="-50"
                                 Fill="#22FFFFFF"/>
                        <Ellipse Width="150" Height="150" Canvas.Right="100" Canvas.Bottom="-30"
                                 Fill="#11FFFFFF"/>
                    </Canvas>
                </Grid>
            </Border>

            <!-- Quick Categories -->
            <TextBlock Text="Browse Categories" FontSize="18" FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>

            <WrapPanel Margin="0,0,0,32">
                <Button Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" Tag="Gaming">
                    <StackPanel>
                        <TextBlock Text="&#x1F3AE;" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Gaming" FontSize="12" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" Tag="Software">
                    <StackPanel>
                        <TextBlock Text="&#x1F4BB;" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Software" FontSize="12" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" Tag="Graphics">
                    <StackPanel>
                        <TextBlock Text="&#x1F3A8;" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Graphics" FontSize="12" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" Tag="Music">
                    <StackPanel>
                        <TextBlock Text="&#x1F3B5;" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Music" FontSize="12" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" Tag="Education">
                    <StackPanel>
                        <TextBlock Text="&#x1F4DA;" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Education" FontSize="12" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" Tag="Services">
                    <StackPanel>
                        <TextBlock Text="&#x1F6E0;" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Services" FontSize="12" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" Tag="Templates">
                    <StackPanel>
                        <TextBlock Text="&#x1F4C4;" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Templates" FontSize="12" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" Tag="Other">
                    <StackPanel>
                        <TextBlock Text="&#x2728;" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Other" FontSize="12" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
            </WrapPanel>

            <!-- Trending Products Section -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#x1F525;" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Trending Now" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                <Button Grid.Column="1" Content="See All" Style="{StaticResource LinkButton}"
                        Click="SeeAllTrending_Click"/>
            </Grid>

            <ItemsControl x:Name="TrendingProducts">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource FeaturedCardStyle}" Margin="0,0,12,12"
                                Cursor="Hand" MouseLeftButtonUp="ProductCard_Click">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Product Image -->
                                <Border CornerRadius="12,12,0,0" Background="{StaticResource QuaternaryDarkBrush}">
                                    <Image Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                </Border>

                                <!-- Trending Badge -->
                                <Border Background="{StaticResource AccentRedBrush}" CornerRadius="4"
                                        Padding="6,3" HorizontalAlignment="Left" VerticalAlignment="Top"
                                        Margin="8">
                                    <TextBlock Text="HOT" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                </Border>

                                <!-- Product Info -->
                                <StackPanel Grid.Row="1" Margin="12">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding SellerName}" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}"
                                                   FontWeight="Bold" FontSize="16"
                                                   Foreground="{StaticResource AccentGreenBrush}"/>
                                        <TextBlock Text="{Binding OriginalPrice, StringFormat='${0:F2}'}"
                                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                                   TextDecorations="Strikethrough" Margin="8,2,0,0"
                                                   Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- New Arrivals Section -->
            <Grid Margin="0,24,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#x2728;" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="New Arrivals" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                <Button Grid.Column="1" Content="See All" Style="{StaticResource LinkButton}"
                        Click="SeeAllNew_Click"/>
            </Grid>

            <ItemsControl x:Name="NewProducts">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource FeaturedCardStyle}" Margin="0,0,12,12"
                                Cursor="Hand" MouseLeftButtonUp="ProductCard_Click">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Product Image -->
                                <Border CornerRadius="12,12,0,0" Background="{StaticResource QuaternaryDarkBrush}">
                                    <Image Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                </Border>

                                <!-- New Badge -->
                                <Border Background="{StaticResource AccentBlurpleBrush}" CornerRadius="4"
                                        Padding="6,3" HorizontalAlignment="Left" VerticalAlignment="Top"
                                        Margin="8">
                                    <TextBlock Text="NEW" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                </Border>

                                <!-- Product Info -->
                                <StackPanel Grid.Row="1" Margin="12">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding SellerName}" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}"
                                               FontWeight="Bold" FontSize="16" Margin="0,8,0,0"
                                               Foreground="{StaticResource AccentGreenBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Top Sellers Section -->
            <Grid Margin="0,24,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#x1F451;" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Top Sellers" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                <Button Grid.Column="1" Content="View All Sellers" Style="{StaticResource LinkButton}"
                        Click="ViewAllSellers_Click"/>
            </Grid>

            <ItemsControl x:Name="TopSellers">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource FeaturedCardStyle}" Width="200" Margin="0,0,12,0"
                                Cursor="Hand" MouseLeftButtonUp="SellerCard_Click" Padding="16">
                            <StackPanel HorizontalAlignment="Center">
                                <!-- Avatar -->
                                <Border Width="64" Height="64" CornerRadius="32"
                                        BorderBrush="{StaticResource AccentBlurpleBrush}" BorderThickness="3">
                                    <Ellipse Width="58" Height="58">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding AvatarUrl}" Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Border>

                                <!-- Seller Info -->
                                <TextBlock Text="{Binding Username}" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center" Margin="0,12,0,0"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                    <TextBlock Text="&#x2B50;" FontSize="12"/>
                                    <TextBlock Text="{Binding Rating, StringFormat='{}{0:F1}'}" FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="4,0,0,0"/>
                                    <TextBlock Text="{Binding ReviewCount, StringFormat='({0})'}" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}" Margin="4,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="{Binding ProductCount, StringFormat='{}{0} products'}" FontSize="11"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           HorizontalAlignment="Center" Margin="0,8,0,0"/>

                                <!-- Follow Button -->
                                <Button Content="View Profile" Style="{StaticResource SecondaryButton}"
                                        Padding="16,6" Margin="0,12,0,0" FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Quick Stats -->
            <Border Background="{StaticResource SecondaryDarkBrush}" CornerRadius="12"
                    Padding="24" Margin="0,32,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalProductsCount" Text="10,000+" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlurpleBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Products" FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalSellersCount" Text="1,500+" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGreenBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Sellers" FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalSalesCount" Text="50,000+" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource AccentOrangeBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Sales" FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock x:Name="AvgRatingText" Text="4.8" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource AccentPinkBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Avg Rating" FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
