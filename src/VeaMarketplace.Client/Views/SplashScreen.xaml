<Window x:Class="VeaMarketplace.Client.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yurt Cord"
        Height="500" Width="650"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Gradient Animation - Yurt Cord Teal Theme -->
        <Storyboard x:Key="GradientPulse" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="GradientStop1"
                            Storyboard.TargetProperty="Color"
                            From="#00B4D8" To="#48CAE4" Duration="0:0:2"
                            AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="GradientStop2"
                            Storyboard.TargetProperty="Color"
                            From="#0A0B10" To="#0F1118" Duration="0:0:3"
                            AutoReverse="True"/>
        </Storyboard>

        <!-- Logo Pulse Animation -->
        <Storyboard x:Key="LogoPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="1" To="1.05" Duration="0:0:1.2"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LogoScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="1" To="1.05" Duration="0:0:1.2"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Glow Pulse Animation -->
        <Storyboard x:Key="GlowPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoGlow"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="0.6" Duration="0:0:1.5"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Loading Dots Animation -->
        <Storyboard x:Key="LoadingDotsAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Dot1"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="1" Duration="0:0:0.4"
                             BeginTime="0:0:0" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot1Transform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-5" Duration="0:0:0.4"
                             BeginTime="0:0:0" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot2"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="1" Duration="0:0:0.4"
                             BeginTime="0:0:0.15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot2Transform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-5" Duration="0:0:0.4"
                             BeginTime="0:0:0.15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot3"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="1" Duration="0:0:0.4"
                             BeginTime="0:0:0.3" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot3Transform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-5" Duration="0:0:0.4"
                             BeginTime="0:0:0.3" AutoReverse="True"/>
        </Storyboard>

        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInContent">
            <DoubleAnimation Storyboard.TargetName="ContentPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ContentTranslate"
                             Storyboard.TargetProperty="Y"
                             From="30" To="0" Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Particle Floating Animation -->
        <Storyboard x:Key="ParticleFloat" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Particle1Translate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-20" Duration="0:0:3" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Particle2Translate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-15" Duration="0:0:2.5" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Particle3Translate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-25" Duration="0:0:3.5" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Particle4Translate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-18" Duration="0:0:2.8" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Ring Rotation Animation -->
        <Storyboard x:Key="RingRotation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="RingRotate"
                             Storyboard.TargetProperty="Angle"
                             From="0" To="360" Duration="0:0:8"/>
        </Storyboard>

        <!-- Progress Shimmer Animation -->
        <Storyboard x:Key="ProgressShimmer" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ShimmerTranslate"
                             Storyboard.TargetProperty="X"
                             From="-100" To="500" Duration="0:0:1.5"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource GradientPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource LogoPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource GlowPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource LoadingDotsAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource FadeInContent}"/>
            <BeginStoryboard Storyboard="{StaticResource ParticleFloat}"/>
            <BeginStoryboard Storyboard="{StaticResource RingRotation}"/>
            <BeginStoryboard Storyboard="{StaticResource ProgressShimmer}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="16">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop x:Name="GradientStop1" Color="#0A0B10" Offset="0"/>
                <GradientStop x:Name="GradientStop2" Color="#0F1118" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.Effect>
            <DropShadowEffect BlurRadius="50" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <!-- Background Pattern - Teal Particles -->
            <Canvas ClipToBounds="True">
                <!-- Floating Particles - Teal Theme -->
                <Ellipse Canvas.Left="80" Canvas.Top="80" Width="8" Height="8"
                         Fill="#3000B4D8" Opacity="0.6">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle1Translate"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse Canvas.Left="500" Canvas.Top="60" Width="6" Height="6"
                         Fill="#3048CAE4" Opacity="0.5">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle2Translate"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse Canvas.Left="550" Canvas.Top="380" Width="10" Height="10"
                         Fill="#3090E0EF" Opacity="0.4">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle3Translate"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse Canvas.Left="50" Canvas.Top="400" Width="7" Height="7"
                         Fill="#30CAF0F8" Opacity="0.5">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle4Translate"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse Canvas.Left="320" Canvas.Top="40" Width="5" Height="5"
                         Fill="#3000B4D8" Opacity="0.3"/>
                <Ellipse Canvas.Left="120" Canvas.Top="300" Width="4" Height="4"
                         Fill="#300077B6" Opacity="0.3"/>
            </Canvas>

            <!-- Rotating Ring (subtle background) -->
            <Ellipse Width="300" Height="300" StrokeThickness="1"
                     Stroke="#1500B4D8" HorizontalAlignment="Center"
                     VerticalAlignment="Center" StrokeDashArray="2,4"
                     RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="RingRotate" Angle="0"/>
                </Ellipse.RenderTransform>
            </Ellipse>

            <!-- Content -->
            <StackPanel x:Name="ContentPanel" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Opacity="0">
                <StackPanel.RenderTransform>
                    <TranslateTransform x:Name="ContentTranslate" Y="30"/>
                </StackPanel.RenderTransform>

                <!-- Logo Container -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,28"
                      RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <ScaleTransform x:Name="LogoScale"/>
                    </Grid.RenderTransform>

                    <!-- Outer Glow - Teal -->
                    <Ellipse x:Name="LogoGlow" Width="140" Height="140" Opacity="0.4">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#00B4D8" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Logo Ring -->
                    <Ellipse Width="105" Height="105" StrokeThickness="2"
                             Stroke="#4000B4D8"/>

                    <!-- Logo Circle - Ocean Gradient -->
                    <Border Width="95" Height="95" CornerRadius="48">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#0077B6" Offset="0"/>
                                <GradientStop Color="#00B4D8" Offset="0.5"/>
                                <GradientStop Color="#48CAE4" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="25" ShadowDepth="0"
                                              Color="#00B4D8" Opacity="0.5"/>
                        </Border.Effect>
                        <TextBlock Text="Y" FontSize="48" FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Title with Ocean Gradient -->
                <TextBlock FontSize="42" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,6">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#F0F4F8" Offset="0"/>
                            <GradientStop Color="#48CAE4" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0"
                                          Color="#00B4D8" Opacity="0.4"/>
                    </TextBlock.Effect>
                    YURT CORD
                </TextBlock>

                <!-- Tagline -->
                <TextBlock Text="Your Community  •  Your Way" FontSize="14"
                           Foreground="#64748B" HorizontalAlignment="Center"
                           FontWeight="Medium" Margin="0,0,0,40"/>

                <!-- Loading Status -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock x:Name="LoadingText" Text="Initializing..."
                               FontSize="13" Foreground="#A1A1AA"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Loading Dots - Teal Theme -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                    <Ellipse x:Name="Dot1" Width="10" Height="10" Fill="#00B4D8"
                             Margin="0,0,8,0" Opacity="0.3">
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="Dot1Transform"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse x:Name="Dot2" Width="10" Height="10" Fill="#48CAE4"
                             Margin="0,0,8,0" Opacity="0.3">
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="Dot2Transform"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse x:Name="Dot3" Width="10" Height="10" Fill="#90E0EF"
                             Opacity="0.3">
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="Dot3Transform"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                </StackPanel>

                <!-- Progress Bar with Shimmer - Ocean Gradient -->
                <Border Width="420" Height="6" CornerRadius="3"
                        Background="#151820" Margin="0,0,0,12">
                    <Grid ClipToBounds="True">
                        <Border x:Name="LoadingProgress" Width="0" Height="6"
                                CornerRadius="3" HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#0077B6" Offset="0"/>
                                    <GradientStop Color="#00B4D8" Offset="0.5"/>
                                    <GradientStop Color="#48CAE4" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <!-- Shimmer Effect -->
                        <Border Width="100" Height="6" HorizontalAlignment="Left"
                                Opacity="0.3">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="White" Offset="0.5"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="ShimmerTranslate" X="-100"/>
                            </Border.RenderTransform>
                        </Border>
                    </Grid>
                </Border>

                <!-- Version and Status -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="v2.6.0" FontSize="11" Foreground="#64748B"/>
                    <TextBlock Text=" • " FontSize="11" Foreground="#2D3340"/>
                    <TextBlock x:Name="StatusDetail" Text="Loading modules..."
                               FontSize="11" Foreground="#64748B"/>
                </StackPanel>
            </StackPanel>

            <!-- Copyright -->
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center"
                        Margin="0,0,0,16">
                <TextBlock Text="© 2024 The404Studios • Yurt Cord"
                           FontSize="10" Foreground="#2D3340" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
