<Window x:Class="VeaMarketplace.Client.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls"
        Title="OVERSEER"
        Height="550" Width="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Neon Gradient Animation -->
        <Storyboard x:Key="GradientPulse" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="GradientStop1"
                            Storyboard.TargetProperty="Color"
                            From="#00FF88" To="#00CCFF" Duration="0:0:3"
                            AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="GradientStop2"
                            Storyboard.TargetProperty="Color"
                            From="#050510" To="#101020" Duration="0:0:4"
                            AutoReverse="True"/>
        </Storyboard>

        <!-- Logo Pulse Animation -->
        <Storyboard x:Key="LogoPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="1" To="1.08" Duration="0:0:1.5"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LogoScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="1" To="1.08" Duration="0:0:1.5"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Neon Glow Pulse Animation -->
        <Storyboard x:Key="GlowPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoGlow"
                             Storyboard.TargetProperty="Opacity"
                             From="0.4" To="0.9" Duration="0:0:1.2"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ColorAnimation Storyboard.TargetName="GlowColor"
                            Storyboard.TargetProperty="Color"
                            From="#00FF88" To="#FF00FF" Duration="0:0:2"
                            AutoReverse="True"/>
        </Storyboard>

        <!-- Loading Dots Animation -->
        <Storyboard x:Key="LoadingDotsAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Dot1"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="1" Duration="0:0:0.4"
                             BeginTime="0:0:0" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot1Transform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-8" Duration="0:0:0.4"
                             BeginTime="0:0:0" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot2"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="1" Duration="0:0:0.4"
                             BeginTime="0:0:0.15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot2Transform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-8" Duration="0:0:0.4"
                             BeginTime="0:0:0.15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot3"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="1" Duration="0:0:0.4"
                             BeginTime="0:0:0.3" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Dot3Transform"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-8" Duration="0:0:0.4"
                             BeginTime="0:0:0.3" AutoReverse="True"/>
        </Storyboard>

        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInContent">
            <DoubleAnimation Storyboard.TargetName="ContentPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ContentTranslate"
                             Storyboard.TargetProperty="Y"
                             From="40" To="0" Duration="0:0:1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Particle Floating Animation -->
        <Storyboard x:Key="ParticleFloat" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Particle1Translate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-30" Duration="0:0:3.5" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Particle2Translate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-20" Duration="0:0:2.5" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Particle3Translate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-35" Duration="0:0:4" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Particle4Translate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-25" Duration="0:0:3" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Ring Rotation Animation -->
        <Storyboard x:Key="RingRotation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="RingRotate"
                             Storyboard.TargetProperty="Angle"
                             From="0" To="360" Duration="0:0:10"/>
        </Storyboard>

        <!-- Reverse Ring Rotation -->
        <Storyboard x:Key="RingRotation2" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="RingRotate2"
                             Storyboard.TargetProperty="Angle"
                             From="360" To="0" Duration="0:0:15"/>
        </Storyboard>

        <!-- Progress Shimmer Animation -->
        <Storyboard x:Key="ProgressShimmer" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ShimmerTranslate"
                             Storyboard.TargetProperty="X"
                             From="-100" To="500" Duration="0:0:1.2"/>
        </Storyboard>

        <!-- Border Color Cycle -->
        <Storyboard x:Key="BorderCycle" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="BorderColor1"
                            Storyboard.TargetProperty="Color"
                            From="#00FF88" To="#FF00FF" Duration="0:0:3"
                            AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="BorderColor2"
                            Storyboard.TargetProperty="Color"
                            From="#00CCFF" To="#00FF88" Duration="0:0:3"
                            AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="BorderColor3"
                            Storyboard.TargetProperty="Color"
                            From="#FF00FF" To="#00CCFF" Duration="0:0:3"
                            AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource GradientPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource LogoPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource GlowPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource LoadingDotsAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource FadeInContent}"/>
            <BeginStoryboard Storyboard="{StaticResource ParticleFloat}"/>
            <BeginStoryboard Storyboard="{StaticResource RingRotation}"/>
            <BeginStoryboard Storyboard="{StaticResource RingRotation2}"/>
            <BeginStoryboard Storyboard="{StaticResource ProgressShimmer}"/>
            <BeginStoryboard Storyboard="{StaticResource BorderCycle}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Circular Container -->
    <Grid>
        <!-- Outer Glow -->
        <Ellipse Margin="-30" Opacity="0.4">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#00FF88" Offset="0.7"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <Border CornerRadius="40" BorderThickness="3" ClipToBounds="True">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="BorderColor1" Color="#00FF88" Offset="0"/>
                    <GradientStop x:Name="BorderColor2" Color="#00CCFF" Offset="0.5"/>
                    <GradientStop x:Name="BorderColor3" Color="#FF00FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="GradientStop1" Color="#050510" Offset="0"/>
                    <GradientStop x:Name="GradientStop2" Color="#101020" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="60" ShadowDepth="0" Opacity="0.8" Color="#00FF88"/>
            </Border.Effect>

            <Grid>
                <!-- Mini Matrix Background -->
                <controls:MatrixBackground Opacity="0.3" Density="0.5" Speed="0.8"/>

                <!-- Background Neon Particles -->
                <Canvas ClipToBounds="True">
                    <Ellipse Canvas.Left="100" Canvas.Top="80" Width="10" Height="10"
                             Fill="#4000FF88" Opacity="0.8">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#00FF88" BlurRadius="15" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="Particle1Translate"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Canvas.Left="550" Canvas.Top="70" Width="8" Height="8"
                             Fill="#4000CCFF" Opacity="0.7">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#00CCFF" BlurRadius="12" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="Particle2Translate"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Canvas.Left="580" Canvas.Top="420" Width="12" Height="12"
                             Fill="#40FF00FF" Opacity="0.6">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FF00FF" BlurRadius="18" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="Particle3Translate"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Canvas.Left="60" Canvas.Top="430" Width="9" Height="9"
                             Fill="#4000FF88" Opacity="0.7">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#00FF88" BlurRadius="14" ShadowDepth="0"/>
                        </Ellipse.Effect>
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="Particle4Translate"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                </Canvas>

                <!-- Rotating Rings -->
                <Ellipse Width="340" Height="340" StrokeThickness="1"
                         Stroke="#2000FF88" HorizontalAlignment="Center"
                         VerticalAlignment="Center" StrokeDashArray="3,6"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="RingRotate" Angle="0"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse Width="380" Height="380" StrokeThickness="1"
                         Stroke="#1500CCFF" HorizontalAlignment="Center"
                         VerticalAlignment="Center" StrokeDashArray="5,10"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="RingRotate2" Angle="0"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <!-- Content -->
                <StackPanel x:Name="ContentPanel" VerticalAlignment="Center" HorizontalAlignment="Center"
                            Opacity="0">
                    <StackPanel.RenderTransform>
                        <TranslateTransform x:Name="ContentTranslate" Y="40"/>
                    </StackPanel.RenderTransform>

                    <!-- Logo Container -->
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,30"
                          RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="LogoScale"/>
                        </Grid.RenderTransform>

                        <!-- Outer Glow -->
                        <Ellipse x:Name="LogoGlow" Width="160" Height="160" Opacity="0.5">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop x:Name="GlowColor" Color="#00FF88" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Logo Rings -->
                        <Ellipse Width="120" Height="120" StrokeThickness="2"
                                 Stroke="#3000FF88"/>
                        <Ellipse Width="110" Height="110" StrokeThickness="1"
                                 Stroke="#2000CCFF"/>

                        <!-- Logo Circle -->
                        <Border Width="100" Height="100" CornerRadius="50">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#00FF88" Offset="0"/>
                                    <GradientStop Color="#00CCFF" Offset="0.5"/>
                                    <GradientStop Color="#FF00FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="30" ShadowDepth="0"
                                                  Color="#00FF88" Opacity="0.8"/>
                            </Border.Effect>
                            <TextBlock Text="O" FontSize="52" FontWeight="Bold"
                                       Foreground="#050510"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- Title with Rainbow Gradient -->
                    <TextBlock FontSize="48" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#00FF88" Offset="0"/>
                                <GradientStop Color="#00CCFF" Offset="0.3"/>
                                <GradientStop Color="#FF00FF" Offset="0.6"/>
                                <GradientStop Color="#00FF88" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="25" ShadowDepth="0"
                                              Color="#00FF88" Opacity="0.6"/>
                        </TextBlock.Effect>
                        OVERSEER
                    </TextBlock>

                    <!-- Tagline -->
                    <TextBlock Text="OBSERVE  •  CONNECT  •  CONTROL" FontSize="13"
                               Foreground="#8080A0" HorizontalAlignment="Center"
                               FontWeight="Medium" Margin="0,0,0,45"/>

                    <!-- Loading Status -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,14">
                        <TextBlock x:Name="LoadingText" Text="INITIALIZING SYSTEMS..."
                                   FontSize="12" Foreground="#00FF88"
                                   HorizontalAlignment="Center" FontWeight="SemiBold">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00FF88" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <!-- Loading Dots -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                Margin="0,0,0,22">
                        <Ellipse x:Name="Dot1" Width="12" Height="12" Fill="#00FF88"
                                 Margin="0,0,10,0" Opacity="0.3">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#00FF88" BlurRadius="8" ShadowDepth="0"/>
                            </Ellipse.Effect>
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot1Transform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse x:Name="Dot2" Width="12" Height="12" Fill="#00CCFF"
                                 Margin="0,0,10,0" Opacity="0.3">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#00CCFF" BlurRadius="8" ShadowDepth="0"/>
                            </Ellipse.Effect>
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot2Transform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse x:Name="Dot3" Width="12" Height="12" Fill="#FF00FF"
                                 Opacity="0.3">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#FF00FF" BlurRadius="8" ShadowDepth="0"/>
                            </Ellipse.Effect>
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Dot3Transform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </StackPanel>

                    <!-- Progress Bar with Neon Gradient -->
                    <Border Width="450" Height="8" CornerRadius="4"
                            Background="#151520" Margin="0,0,0,14">
                        <Border.Effect>
                            <DropShadowEffect Color="#00FF88" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid ClipToBounds="True">
                            <Border x:Name="LoadingProgress" Width="0" Height="8"
                                    CornerRadius="4" HorizontalAlignment="Left">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00FF88" Offset="0"/>
                                        <GradientStop Color="#00CCFF" Offset="0.5"/>
                                        <GradientStop Color="#FF00FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#00FF88" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                </Border.Effect>
                            </Border>
                            <!-- Shimmer Effect -->
                            <Border Width="120" Height="8" HorizontalAlignment="Left"
                                    Opacity="0.4">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Transparent" Offset="0"/>
                                        <GradientStop Color="White" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="ShimmerTranslate" X="-100"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Version and Status -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="v3.0.0" FontSize="11" Foreground="#00FF88" FontWeight="SemiBold"/>
                        <TextBlock Text=" :: " FontSize="11" Foreground="#303040"/>
                        <TextBlock x:Name="StatusDetail" Text="Loading neural modules..."
                                   FontSize="11" Foreground="#6060A0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Copyright -->
                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center"
                            Margin="0,0,0,18">
                    <TextBlock FontSize="10" Foreground="#404060" HorizontalAlignment="Center">
                        <Run Text="© 2024 The404Studios"/>
                        <Run Text=" :: "/>
                        <Run Text="OVERSEER" Foreground="#00FF88"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
