<UserControl x:Class="VeaMarketplace.Client.Views.ProductDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200"
             Background="#36393F">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Back Button -->
                <Button Grid.Row="0" Content="&#xE72B; Back to Marketplace"
                        Command="{Binding GoBackCommand}"
                        Background="Transparent" Foreground="#B9BBBE"
                        BorderThickness="0" FontSize="14" Cursor="Hand"
                        HorizontalAlignment="Left" Margin="0,0,0,24"/>

                <!-- Main Product Section -->
                <Grid Grid.Row="1" Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Image Gallery -->
                    <Grid Grid.Column="0" Margin="0,0,32,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="400"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Main Image -->
                        <Border Grid.Row="0" Background="#2F3136" CornerRadius="12">
                            <Grid>
                                <Image Source="{Binding SelectedImageUrl}" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <!-- Navigation Arrows -->
                                <Button Content="&#xE76B;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding PreviousImageCommand}"
                                        HorizontalAlignment="Left" VerticalAlignment="Center"
                                        Background="#80000000" Foreground="White"
                                        BorderThickness="0" Padding="12" Margin="8"
                                        Cursor="Hand" FontSize="20"
                                        Visibility="{Binding Product.ImageUrls.Count, Converter={StaticResource GreaterThanOneToVisibility}}"/>

                                <Button Content="&#xE76C;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding NextImageCommand}"
                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Background="#80000000" Foreground="White"
                                        BorderThickness="0" Padding="12" Margin="8"
                                        Cursor="Hand" FontSize="20"
                                        Visibility="{Binding Product.ImageUrls.Count, Converter={StaticResource GreaterThanOneToVisibility}}"/>

                                <!-- Featured Badge -->
                                <Border Background="#5865F2" CornerRadius="4"
                                        HorizontalAlignment="Left" VerticalAlignment="Top"
                                        Margin="16" Padding="12,6"
                                        Visibility="{Binding Product.IsFeatured, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="FEATURED" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Thumbnail Gallery -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Product.ImageUrls}" Margin="0,12,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="64" Height="64" CornerRadius="8" Margin="4"
                                            Background="#202225" Cursor="Hand"
                                            BorderThickness="2"
                                            MouseLeftButtonUp="Thumbnail_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="BorderBrush" Value="#5865F2"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Image Source="{Binding}" Stretch="UniformToFill"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <!-- Product Info -->
                    <StackPanel Grid.Column="1">
                        <!-- Category & Tags -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="#5865F220" CornerRadius="4" Padding="8,4">
                                <TextBlock Text="{Binding Product.Category}" Foreground="#5865F2" FontSize="12"/>
                            </Border>
                        </StackPanel>

                        <!-- Title -->
                        <TextBlock Text="{Binding Product.Title}" Foreground="White"
                                   FontSize="28" FontWeight="Bold" TextWrapping="Wrap"
                                   Margin="0,0,0,16"/>

                        <!-- Price -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Foreground="#5865F2" FontSize="36" FontWeight="Bold">
                                <Run Text="$"/><Run Text="{Binding Product.Price, StringFormat=N2}"/>
                            </TextBlock>

                            <!-- Original price if discounted -->
                            <TextBlock Foreground="#72767D" FontSize="18"
                                       TextDecorations="Strikethrough"
                                       VerticalAlignment="Center" Margin="12,0,0,0"
                                       Visibility="{Binding Product.DiscountedPrice, Converter={StaticResource NullToVisibility}}">
                                <Run Text="$"/><Run Text="{Binding Product.DiscountedPrice, StringFormat=N2}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Rating -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <ItemsControl>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <!-- Stars would be rendered here based on rating -->
                            </ItemsControl>
                            <TextBlock Text="&#xE735;" FontFamily="Segoe MDL2 Assets"
                                       Foreground="#FAA61A" FontSize="18"/>
                            <TextBlock Text="{Binding Product.AverageRating, StringFormat=N1}"
                                       Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="8,0"/>
                            <TextBlock Foreground="#72767D" FontSize="14" VerticalAlignment="Center">
                                <Run Text="("/>
                                <Run Text="{Binding Product.ReviewCount}"/>
                                <Run Text=" reviews)"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Seller Info -->
                        <Border Background="#2F3136" CornerRadius="8" Padding="16" Margin="0,0,0,24"
                                Cursor="Hand" MouseLeftButtonUp="SellerCard_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0" Width="48" Height="48" Margin="0,0,12,0">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="#5865F2"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Product.SellerUsername}"
                                                   Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                                   Foreground="#3BA55C" FontSize="14" Margin="8,0,0,0"
                                                   ToolTip="Verified Seller"/>
                                    </StackPanel>
                                    <TextBlock Foreground="#72767D" FontSize="13" Margin="0,2,0,0">
                                        <Run Text="{Binding Product.SellerRank}"/>
                                        <Run Text=" Seller"/>
                                    </TextBlock>
                                </StackPanel>

                                <Button Grid.Column="2" Content="View Profile"
                                        Command="{Binding ViewSellerProfileCommand}"
                                        Style="{StaticResource SecondaryButton}" Padding="16,8"/>
                            </Grid>
                        </Border>

                        <!-- Quantity & Actions -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Quantity Selector -->
                            <Border Grid.Column="0" Background="#202225" CornerRadius="8" Padding="4" Margin="0,0,16,0">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="-" Width="36" Height="36"
                                            Background="Transparent" Foreground="White"
                                            BorderThickness="0" FontSize="18" Cursor="Hand"
                                            Click="DecreaseQuantity_Click"/>
                                    <TextBlock Text="{Binding Quantity}" Foreground="White"
                                               FontSize="16" FontWeight="SemiBold"
                                               VerticalAlignment="Center" Margin="16,0"/>
                                    <Button Content="+" Width="36" Height="36"
                                            Background="Transparent" Foreground="White"
                                            BorderThickness="0" FontSize="18" Cursor="Hand"
                                            Click="IncreaseQuantity_Click"/>
                                </StackPanel>
                            </Border>

                            <!-- Stock Info -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                           Foreground="#00D166" FontSize="14"/>
                                <TextBlock Foreground="#00D166" FontSize="14" Margin="8,0,0,0">
                                    <Run Text="In Stock"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <!-- Action Buttons -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Command="{Binding BuyNowCommand}"
                                    Style="{StaticResource PrimaryButton}" Margin="0,0,8,0" Padding="0,16">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                    <TextBlock Text="Buy Now" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1" Command="{Binding AddToCartCommand}"
                                    Style="{StaticResource SecondaryButton}" Margin="8,0" Padding="0,16">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IsInCart, Converter={StaticResource BoolToText}, ConverterParameter='&#xE73E;|&#xE7BF;'}"
                                               FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding IsInCart, Converter={StaticResource BoolToText}, ConverterParameter='In Cart|Add to Cart'}"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2" Command="{Binding ToggleWishlistCommand}"
                                    Background="#202225" BorderThickness="0" Width="48" Height="48"
                                    Cursor="Hand">
                                <TextBlock Text="{Binding IsInWishlist, Converter={StaticResource BoolToText}, ConverterParameter='&#xEB52;|&#xEB51;'}"
                                           FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="{Binding IsInWishlist, Converter={StaticResource BoolToColor}, ConverterParameter='#ED4245|#B9BBBE'}"/>
                            </Button>
                        </Grid>

                        <!-- Share & Report -->
                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding ShareProductCommand}"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,16,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72D;" FontFamily="Segoe MDL2 Assets"
                                               Foreground="#72767D" FontSize="14"/>
                                    <TextBlock Text="Share" Foreground="#72767D" FontSize="14" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding ReportProductCommand}"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7C1;" FontFamily="Segoe MDL2 Assets"
                                               Foreground="#72767D" FontSize="14"/>
                                    <TextBlock Text="Report" Foreground="#72767D" FontSize="14" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Description Section -->
                <Border Grid.Row="2" Background="#2F3136" CornerRadius="12" Padding="24" Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Description" Foreground="White" FontSize="18"
                                   FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <TextBlock Text="{Binding Product.Description}" Foreground="#B9BBBE"
                                   FontSize="14" TextWrapping="Wrap" LineHeight="24"/>

                        <!-- Tags -->
                        <ItemsControl ItemsSource="{Binding Product.Tags}" Margin="0,16,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#202225" CornerRadius="4" Padding="8,4" Margin="0,0,8,8">
                                        <TextBlock Text="{Binding}" Foreground="#72767D" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Reviews Section -->
                <Border Grid.Row="3" Background="#2F3136" CornerRadius="12" Padding="24">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Foreground="White" FontSize="18" FontWeight="SemiBold">
                                <Run Text="Reviews ("/>
                                <Run Text="{Binding Reviews.TotalReviews}"/>
                                <Run Text=")"/>
                            </TextBlock>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Write a Review"
                                        Command="{Binding WriteReviewCommand}"
                                        Style="{StaticResource SecondaryButton}" Padding="16,8" Margin="0,0,8,0"/>
                                <Button Content="View All"
                                        Command="{Binding ViewAllReviewsCommand}"
                                        Style="{StaticResource GhostButton}" Padding="16,8"/>
                            </StackPanel>
                        </Grid>

                        <!-- Rating Summary -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,32,0">
                                <TextBlock Foreground="White" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center">
                                    <Run Text="{Binding Reviews.AverageRating, StringFormat=N1}"/>
                                </TextBlock>
                                <TextBlock Foreground="#72767D" FontSize="14" HorizontalAlignment="Center">
                                    <Run Text="out of 5"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Rating Bars -->
                            <StackPanel Grid.Column="1">
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="5 stars" Foreground="#B9BBBE" FontSize="12"/>
                                    <Border Grid.Column="1" Background="#202225" CornerRadius="2" Height="8" Margin="8,0">
                                        <Border Background="#FAA61A" CornerRadius="2" HorizontalAlignment="Left"
                                                Width="{Binding Reviews.FiveStarCount, Converter={StaticResource PercentageToWidth}}"/>
                                    </Border>
                                    <TextBlock Grid.Column="2" Text="{Binding Reviews.FiveStarCount}" Foreground="#72767D" FontSize="12"/>
                                </Grid>
                                <!-- Similar bars for 4,3,2,1 stars -->
                            </StackPanel>
                        </Grid>

                        <!-- Review List -->
                        <ItemsControl ItemsSource="{Binding Reviews.Reviews}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#202225" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0" Width="40" Height="40" Margin="0,0,12,0"
                                                     VerticalAlignment="Top">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding UserAvatarUrl}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Username}" Foreground="White"
                                                                       FontSize="14" FontWeight="SemiBold"/>
                                                            <Border Background="#00D16620" CornerRadius="4" Padding="6,2"
                                                                    Margin="8,0,0,0"
                                                                    Visibility="{Binding IsVerifiedPurchase, Converter={StaticResource BoolToVisibility}}">
                                                                <TextBlock Text="Verified Purchase" Foreground="#00D166" FontSize="10"/>
                                                            </Border>
                                                        </StackPanel>

                                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                            <TextBlock Text="&#xE735;" FontFamily="Segoe MDL2 Assets"
                                                                       Foreground="#FAA61A" FontSize="12"/>
                                                            <TextBlock Text="{Binding Rating}" Foreground="#FAA61A"
                                                                       FontSize="12" Margin="4,0"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" Text="{Binding CreatedAt, StringFormat='{}{0:MMM d, yyyy}'}"
                                                               Foreground="#72767D" FontSize="12"/>
                                                </Grid>

                                                <TextBlock Text="{Binding Title}" Foreground="White"
                                                           FontSize="14" FontWeight="SemiBold" Margin="0,12,0,4"/>

                                                <TextBlock Text="{Binding Content}" Foreground="#B9BBBE"
                                                           FontSize="13" TextWrapping="Wrap"/>

                                                <!-- Helpful buttons -->
                                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                                    <TextBlock Text="Was this helpful?" Foreground="#72767D" FontSize="12" Margin="0,0,12,0"/>
                                                    <Button Content="Yes" Background="Transparent" Foreground="#72767D"
                                                            BorderThickness="0" FontSize="12" Cursor="Hand"/>
                                                    <TextBlock Text="|" Foreground="#40444B" Margin="8,0"/>
                                                    <Button Content="No" Background="Transparent" Foreground="#72767D"
                                                            BorderThickness="0" FontSize="12" Cursor="Hand"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Loading product..." Foreground="White" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- Error State -->
        <Border Background="#36393F"
                Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets"
                           FontSize="48" Foreground="#ED4245" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="White" FontSize="18"
                           HorizontalAlignment="Center" Margin="0,16,0,8"/>
                <Button Content="Go Back" Command="{Binding GoBackCommand}"
                        Style="{StaticResource PrimaryButton}" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
