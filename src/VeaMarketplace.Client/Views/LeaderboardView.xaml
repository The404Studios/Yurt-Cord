<UserControl x:Class="VeaMarketplace.Client.Views.LeaderboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource TertiaryDarkBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryDarkBrush}" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Leaderboards" FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="See who's topping the charts this week" FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Style="{StaticResource IconButton}" Width="36" Height="36"
                        Command="{Binding RefreshCommand}" ToolTip="Refresh">
                    <TextBlock Text="ðŸ”„" FontSize="16"/>
                </Button>
            </Grid>
        </Border>

        <!-- Category Tabs -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryDarkBrush}"
                BorderBrush="{StaticResource QuaternaryDarkBrush}" BorderThickness="0,0,0,1"
                Padding="16,8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    <Button Content="ðŸ† Top Sellers" Style="{StaticResource FilterTabButton}"
                            Command="{Binding SwitchCategoryCommand}" CommandParameter="TopSellers"/>
                    <Button Content="ðŸ’¬ Most Messages" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                            Command="{Binding SwitchCategoryCommand}" CommandParameter="TopMessagers"/>
                    <Button Content="ðŸ›’ Top Buyers" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                            Command="{Binding SwitchCategoryCommand}" CommandParameter="TopBuyers"/>
                    <Button Content="âš¡ Most Active" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                            Command="{Binding SwitchCategoryCommand}" CommandParameter="MostActive"/>
                    <Button Content="â­ Top Rated" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                            Command="{Binding SwitchCategoryCommand}" CommandParameter="TopRated"/>
                    <Button Content="ðŸŒŸ Weekly Stars" Style="{StaticResource FilterTabButton}" Margin="8,0,0,0"
                            Command="{Binding SwitchCategoryCommand}" CommandParameter="WeeklyStars"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Main Leaderboard List -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>
                    <!-- Category Title -->
                    <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,0,16"
                               Foreground="{StaticResource TextPrimaryBrush}">
                        <Run Text="{Binding CurrentCategoryIcon}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding CurrentCategoryName}"/>
                    </TextBlock>

                    <!-- Leaderboard Entries -->
                    <ItemsControl ItemsSource="{Binding CurrentLeaderboard}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SecondaryDarkBrush}"
                                        CornerRadius="8" Margin="0,0,0,8" Padding="16"
                                        Cursor="Hand"
                                        BorderThickness="2"
                                        BorderBrush="Transparent">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Rank}" Value="1">
                                                    <Setter Property="BorderBrush" Value="#FFD700"/>
                                                    <Setter Property="Background" Value="#2D2A1A"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Rank}" Value="2">
                                                    <Setter Property="BorderBrush" Value="#C0C0C0"/>
                                                    <Setter Property="Background" Value="#2A2A2D"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Rank}" Value="3">
                                                    <Setter Property="BorderBrush" Value="#CD7F32"/>
                                                    <Setter Property="Background" Value="#2D2521"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsCurrentUser}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Rank -->
                                        <TextBlock Grid.Column="0" Text="{Binding RankDisplay}"
                                                   FontSize="24" FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>

                                        <!-- Avatar -->
                                        <Grid Grid.Column="1" Width="48" Height="48" Margin="0,0,12,0">
                                            <Ellipse Width="48" Height="48">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding AvatarUrl, TargetNullValue='/Assets/default-avatar.png'}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <!-- Verified Badge -->
                                            <Border Background="#5865F2" CornerRadius="8"
                                                    Width="16" Height="16"
                                                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                    Visibility="{Binding IsVerified, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="âœ“" FontSize="10" Foreground="White"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>

                                        <!-- User Info -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Username}" FontWeight="SemiBold" FontSize="15"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <TextBlock Text=" (You)" FontSize="13"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           Visibility="{Binding IsCurrentUser, Converter={StaticResource BoolToVis}}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding ScoreDisplay}" FontSize="13"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>

                                        <!-- Rank Change -->
                                        <TextBlock Grid.Column="3" Text="{Binding RankChangeDisplay}"
                                                   FontSize="14" FontWeight="SemiBold"
                                                   VerticalAlignment="Center" Margin="12,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RankChange}" Value="1">
                                                            <Setter Property="Foreground" Value="#43B581"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Score Value -->
                                        <Border Grid.Column="4" Background="{StaticResource QuaternaryDarkBrush}"
                                                CornerRadius="4" Padding="12,6">
                                            <TextBlock Text="{Binding Score}" FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <Border Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVis}}"
                            Padding="40">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ†" FontSize="48" HorizontalAlignment="Center"/>
                            <TextBlock Text="No entries yet" FontSize="16"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Sidebar: Your Stats & Achievements -->
            <Border Grid.Column="1" Background="{StaticResource SecondaryDarkBrush}"
                    BorderBrush="{StaticResource QuaternaryDarkBrush}" BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Padding="16">
                        <!-- Your Stats Card -->
                        <TextBlock Text="YOUR STATS" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,12"/>

                        <Border Background="{StaticResource PrimaryDarkBrush}" CornerRadius="8" Padding="16"
                                Visibility="{Binding CurrentUserStats, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel>
                                <!-- Reputation -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="â­" FontSize="20"/>
                                    <StackPanel Margin="8,0,0,0">
                                        <TextBlock Text="{Binding CurrentUserStats.ReputationLevel}"
                                                   FontWeight="Bold" FontSize="16"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock FontSize="12" Foreground="{StaticResource TextMutedBrush}">
                                            <Run Text="{Binding CurrentUserStats.PositiveRatingPercentage, StringFormat='{}{0:F0}%'}"/>
                                            <Run Text=" positive"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Stats Grid -->
                                <UniformGrid Columns="2" Rows="3">
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding CurrentUserStats.TotalItemsSold}"
                                                   FontSize="20" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Items Sold" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding CurrentUserStats.TotalOrders}"
                                                   FontSize="20" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Orders" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding CurrentUserStats.TotalMessagesSent}"
                                                   FontSize="20" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Messages" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding CurrentUserStats.TotalFriends}"
                                                   FontSize="20" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Friends" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="{Binding CurrentUserStats.TotalLikesReceived}"
                                                   FontSize="20" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Likes" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="{Binding CurrentUserStats.LoginStreak}"
                                                   FontSize="20" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Day Streak" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!-- Weekly Progress -->
                        <TextBlock Text="WEEKLY PROGRESS" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,20,0,12"/>

                        <Border Background="{StaticResource PrimaryDarkBrush}" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Sales" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentUserStats.WeeklySales}"
                                               FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}"/>
                                </Grid>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Purchases" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentUserStats.WeeklyPurchases}"
                                               FontWeight="Bold" Foreground="{StaticResource AccentBlueBrush}"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Messages" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentUserStats.WeeklyMessages}"
                                               FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Achievements -->
                        <TextBlock Text="ACHIEVEMENTS" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,20,0,12"/>

                        <ItemsControl ItemsSource="{Binding CurrentUserStats.Achievements}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource PrimaryDarkBrush}"
                                            CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Icon}" FontSize="24" VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <TextBlock Text="{Binding Description}" FontSize="11"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- No Achievements -->
                        <TextBlock Text="Complete activities to earn achievements!"
                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding HasNoAchievements, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
