<UserControl x:Class="VeaMarketplace.Client.Views.ServerAdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Styles/Animations.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Stat Card Style -->
            <Style x:Key="StatCard" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource SecondaryDark}"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1.02" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1.02" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1" Duration="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Nav Button Style -->
            <Style x:Key="AdminNavButton" TargetType="RadioButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="Bd" Background="Transparent" CornerRadius="8"
                                    Padding="16,12" Cursor="Hand">
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource TertiaryDark}"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource Accent}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="0,4"/>
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Foreground" Value="White"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource PrimaryDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="{StaticResource SecondaryDark}"
                BorderBrush="{StaticResource TertiaryDark}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="20,24,20,20">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,12,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#00B4D8" Offset="0"/>
                                    <GradientStop Color="#0077B6" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="YC" FontSize="18" FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Yurt Cord" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Server Admin" FontSize="12" Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="12" Margin="0,20,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#43B581" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Server Online" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ServerUptime, StringFormat='Uptime: {0}'}" FontSize="11"
                                       Foreground="{StaticResource TextMuted}" Margin="18,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Grid.Row="1" Margin="12,0">
                    <TextBlock Text="NAVIGATION" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextMuted}" Margin="16,0,0,8"/>

                    <RadioButton Content="Dashboard" Style="{StaticResource AdminNavButton}" IsChecked="True"
                                 Command="{Binding NavigateCommand}" CommandParameter="Dashboard"/>
                    <RadioButton Content="User Management" Style="{StaticResource AdminNavButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Users"/>
                    <RadioButton Content="Ranks" Style="{StaticResource AdminNavButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Ranks"/>
                    <RadioButton Content="Online Users" Style="{StaticResource AdminNavButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Online"/>
                    <RadioButton Content="Broadcast Message" Style="{StaticResource AdminNavButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Broadcast"/>

                    <Rectangle Height="1" Fill="{StaticResource TertiaryDark}" Margin="16,16"/>

                    <TextBlock Text="QUICK ACTIONS" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextMuted}" Margin="16,0,0,8"/>

                    <Button Content="Force GC" Style="{StaticResource SecondaryButton}"
                            Command="{Binding ForceGarbageCollectionCommand}"
                            HorizontalAlignment="Stretch" Margin="4"/>
                    <Button Content="Refresh Stats" Style="{StaticResource SecondaryButton}"
                            Command="{Binding RefreshCurrentSectionCommand}"
                            HorizontalAlignment="Stretch" Margin="4"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="20">
                    <Border Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Auto-Refresh" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="{Binding LastRefreshTime, StringFormat='Last: {0:HH:mm:ss}'}"
                                           FontSize="10" Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" IsChecked="{Binding AutoRefreshEnabled}"
                                      Command="{Binding ToggleAutoRefreshCommand}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" Background="{StaticResource SecondaryDark}"
                    BorderBrush="{StaticResource TertiaryDark}" BorderThickness="0,0,0,1"
                    Padding="24,16">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Server Administration" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <Border Background="{StaticResource Accent}" CornerRadius="4" Padding="8,4"
                                Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="ADMIN" FontSize="10" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Memory:" FontSize="12" Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding MemoryUsageMb, StringFormat='{}{0} MB'}" FontSize="12"
                                   Foreground="{StaticResource Cyan}" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="0,0,20,0"/>
                        <TextBlock Text="Threads:" FontSize="12" Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ThreadCount}" FontSize="12"
                                   Foreground="{StaticResource Cyan}" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
                <Grid>
                    <!-- Dashboard View -->
                    <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Dashboard'}">
                        <!-- Server Stats Row -->
                        <TextBlock Text="Server Status" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="UPTIME" FontSize="11" Foreground="{StaticResource TextMuted}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ServerUptime}" FontSize="28" FontWeight="Bold"
                                               Foreground="{StaticResource Cyan}" Margin="0,8,0,0"/>
                                    <TextBlock Text="Server running" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="4,0">
                                <StackPanel>
                                    <TextBlock Text="MEMORY" FontSize="11" Foreground="{StaticResource TextMuted}" FontWeight="SemiBold"/>
                                    <TextBlock FontSize="28" FontWeight="Bold" Foreground="#43B581" Margin="0,8,0,0">
                                        <Run Text="{Binding MemoryUsageMb}"/><Run Text=" MB"/>
                                    </TextBlock>
                                    <TextBlock Text="Working set" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="4,0">
                                <StackPanel>
                                    <TextBlock Text="THREADS" FontSize="11" Foreground="{StaticResource TextMuted}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ThreadCount}" FontSize="28" FontWeight="Bold"
                                               Foreground="#FAA61A" Margin="0,8,0,0"/>
                                    <TextBlock Text="Active threads" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="8,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="ONLINE" FontSize="11" Foreground="{StaticResource TextMuted}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding OnlineUsers}" FontSize="28" FontWeight="Bold"
                                               Foreground="#EB459E" Margin="0,8,0,0"/>
                                    <TextBlock Text="Users connected" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Database Stats Row -->
                        <TextBlock Text="Database Statistics" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalUsers}" FontSize="24" FontWeight="Bold"
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Users" FontSize="12" Foreground="{StaticResource TextMuted}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalProducts}" FontSize="24" FontWeight="Bold"
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Products" FontSize="12" Foreground="{StaticResource TextMuted}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalMessages}" FontSize="24" FontWeight="Bold"
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Messages" FontSize="12" Foreground="{StaticResource TextMuted}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalRooms}" FontSize="24" FontWeight="Bold"
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Rooms" FontSize="12" Foreground="{StaticResource TextMuted}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="4" Style="{StaticResource StatCard}" Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TotalOrders}" FontSize="24" FontWeight="Bold"
                                               Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Orders" FontSize="12" Foreground="{StaticResource TextMuted}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="5" Style="{StaticResource StatCard}" Margin="4,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding OnlineUsers}" FontSize="24" FontWeight="Bold"
                                               Foreground="#43B581" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Online" FontSize="12" Foreground="{StaticResource TextMuted}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Moderation Stats Row -->
                        <TextBlock Text="Moderation Overview" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="ACTIVE BANS" FontSize="11" Foreground="{StaticResource TextMuted}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ActiveBans}" FontSize="36" FontWeight="Bold"
                                                   Foreground="#ED4245" Margin="0,8,0,0"/>
                                    </StackPanel>
                                    <Border Width="60" Height="60" CornerRadius="30"
                                            Background="#33ED4245" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-8,-8,0">
                                        <TextBlock Text="X" FontSize="24" Foreground="#ED4245"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="4,0">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="ACTIVE MUTES" FontSize="11" Foreground="{StaticResource TextMuted}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ActiveMutes}" FontSize="36" FontWeight="Bold"
                                                   Foreground="#FAA61A" Margin="0,8,0,0"/>
                                    </StackPanel>
                                    <Border Width="60" Height="60" CornerRadius="30"
                                            Background="#33FAA61A" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-8,-8,0">
                                        <TextBlock Text="M" FontSize="24" Foreground="#FAA61A"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="8,0,0,0">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="PENDING REPORTS" FontSize="11" Foreground="{StaticResource TextMuted}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding PendingReports}" FontSize="36" FontWeight="Bold"
                                                   Foreground="#5865F2" Margin="0,8,0,0"/>
                                    </StackPanel>
                                    <Border Width="60" Height="60" CornerRadius="30"
                                            Background="#335865F2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-8,-8,0">
                                        <TextBlock Text="!" FontSize="24" Foreground="#5865F2"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Users View -->
                    <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Users'}">
                        <TextBlock Text="User Management" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,16"/>

                        <!-- Search Bar -->
                        <Border Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="16" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding UserSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                         Background="{StaticResource TertiaryDark}" Foreground="White"
                                         BorderThickness="0" Padding="16,12" FontSize="14"
                                         VerticalContentAlignment="Center">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <Button Grid.Column="1" Content="Search" Style="{StaticResource AccentButton}"
                                        Command="{Binding SearchUsersCommand}" Padding="24,12" Margin="12,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Search Results -->
                        <ItemsControl ItemsSource="{Binding UserSearchResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SecondaryDark}" CornerRadius="10"
                                            Padding="16" Margin="0,0,0,8" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.SelectUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0" Width="48" Height="48" Margin="0,0,16,0">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#00B4D8" Offset="0"/>
                                                        <GradientStop Color="#0077B6" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Username}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" FontSize="12" Foreground="{StaticResource TextMuted}"/>
                                            </StackPanel>

                                            <Button Grid.Column="2" Content="Manage" Style="{StaticResource SecondaryButton}"
                                                    Command="{Binding DataContext.SelectUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Padding="16,8"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Recent Users -->
                        <TextBlock Text="Recent Users" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,24,0,12"/>
                        <ItemsControl ItemsSource="{Binding RecentUsers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SecondaryDark}" CornerRadius="8"
                                            Padding="12" Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0" Width="36" Height="36" Margin="0,0,12,0">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="#00B4D8"/>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Username}" FontSize="14" Foreground="White"/>
                                                <TextBlock Text="{Binding Role}" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                                            </StackPanel>

                                            <Border Grid.Column="2" Padding="8,4" Margin="8,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#43B581"/>
                                                        <Setter Property="CornerRadius" Value="4"/>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Online|Offline'}"
                                                           FontSize="10" Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="3" Text="{Binding CreatedAt, StringFormat='Joined {0:MMM dd}'}"
                                                       FontSize="11" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Online Users View -->
                    <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Online'}">
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Online Users" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Ellipse Width="12" Height="12" Fill="#43B581" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding OnlineUsers, StringFormat='{}{0} users online'}"
                                           FontSize="14" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <Border Background="{StaticResource SecondaryDark}" CornerRadius="12" Padding="24">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Real-time Connection" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Online users tracking requires real-time SignalR connection"
                                           FontSize="14" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Connect to server to view live user activity"
                                           FontSize="12" Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Ranks View -->
                    <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Ranks'}">
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Server Ranks" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            <Button Content="+ Create Rank" Style="{StaticResource AccentButton}"
                                    HorizontalAlignment="Right" Padding="16,8"
                                    Command="{Binding CreateRankCommand}"/>
                        </Grid>

                        <!-- Default Ranks -->
                        <Border Background="{StaticResource SecondaryDark}" CornerRadius="12" Padding="24" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Default Ranks" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>

                                <!-- Owner Rank -->
                                <Border Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="12" Height="12" Fill="#FFD700" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Owner" FontSize="14" FontWeight="SemiBold" Foreground="#FFD700"/>
                                            <TextBlock Text="Full server control - cannot be modified" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="All Permissions" FontSize="11" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Admin Rank -->
                                <Border Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="12" Height="12" Fill="#ED4245" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Admin" FontSize="14" FontWeight="SemiBold" Foreground="#ED4245"/>
                                            <TextBlock Text="Manage channels, ranks, and members" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                                        </StackPanel>
                                        <Button Content="Edit" Style="{StaticResource SecondaryButton}" Padding="12,6"/>
                                    </Grid>
                                </Border>

                                <!-- Moderator Rank -->
                                <Border Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="12" Height="12" Fill="#5865F2" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Moderator" FontSize="14" FontWeight="SemiBold" Foreground="#5865F2"/>
                                            <TextBlock Text="Kick/mute users, manage messages" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                                        </StackPanel>
                                        <Button Content="Edit" Style="{StaticResource SecondaryButton}" Padding="12,6"/>
                                    </Grid>
                                </Border>

                                <!-- Member Rank -->
                                <Border Background="{StaticResource TertiaryDark}" CornerRadius="8" Padding="16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="12" Height="12" Fill="#8090B0" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="@everyone" FontSize="14" FontWeight="SemiBold" Foreground="#8090B0"/>
                                            <TextBlock Text="Default rank for all members" FontSize="11" Foreground="{StaticResource TextMuted}"/>
                                        </StackPanel>
                                        <Button Content="Edit" Style="{StaticResource SecondaryButton}" Padding="12,6"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Permissions Info -->
                        <Border Background="{StaticResource SecondaryDark}" CornerRadius="12" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Permissions" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                                <TextBlock Text="Available permissions that can be assigned to ranks:" FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,12"/>

                                <UniformGrid Columns="2" Rows="4">
                                    <TextBlock Text="• Manage Channels" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4"/>
                                    <TextBlock Text="• Manage Ranks" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4"/>
                                    <TextBlock Text="• Kick Members" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4"/>
                                    <TextBlock Text="• Ban Members" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4"/>
                                    <TextBlock Text="• Manage Messages" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4"/>
                                    <TextBlock Text="• Mute Members" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4"/>
                                    <TextBlock Text="• Send Messages" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4"/>
                                    <TextBlock Text="• Connect to Voice" FontSize="12" Foreground="{StaticResource TextMuted}" Margin="0,4"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Broadcast View -->
                    <StackPanel Visibility="{Binding CurrentSection, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Broadcast'}">
                        <TextBlock Text="System Broadcast" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,16"/>

                        <Border Background="{StaticResource SecondaryDark}" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Send Announcement" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                                <TextBlock Text="This message will be sent to all connected users as a system notification."
                                           FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,16"/>

                                <TextBox Text="{Binding BroadcastMessage, UpdateSourceTrigger=PropertyChanged}"
                                         Background="{StaticResource TertiaryDark}" Foreground="White"
                                         BorderThickness="0" Padding="16" FontSize="14"
                                         AcceptsReturn="True" TextWrapping="Wrap" Height="120"
                                         VerticalContentAlignment="Top">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <Grid Margin="0,16,0,0">
                                    <Button Content="Send Broadcast" Style="{StaticResource AccentButton}"
                                            Command="{Binding SendBroadcastCommand}"
                                            HorizontalAlignment="Right" Padding="24,12"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Success Message -->
                        <Border Background="#1A43B581" BorderBrush="#43B581" BorderThickness="1"
                                CornerRadius="8" Padding="16"
                                Visibility="{Binding IsBroadcastSent, Converter={StaticResource BoolToVis}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Success" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Broadcast sent to all connected users" FontSize="14"
                                           Foreground="#43B581" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- User Action Dialog Overlay -->
        <Grid Grid.ColumnSpan="2" Visibility="{Binding IsUserActionDialogOpen, Converter={StaticResource BoolToVis}}"
              Background="#80000000">
            <Border Background="{StaticResource SecondaryDark}" CornerRadius="16" Padding="32"
                    VerticalAlignment="Center" HorizontalAlignment="Center" Width="480">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="User Actions" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding SelectedUser.Username, StringFormat='Managing: {0}'}"
                               FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,24"/>

                    <!-- Action Reason -->
                    <TextBlock Text="Reason (optional)" FontSize="13" Foreground="{StaticResource TextMuted}" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding ActionReason, UpdateSourceTrigger=PropertyChanged}"
                             Background="{StaticResource TertiaryDark}" Foreground="White"
                             BorderThickness="0" Padding="12" FontSize="14" Height="80"
                             AcceptsReturn="True" TextWrapping="Wrap" VerticalContentAlignment="Top"
                             Margin="0,0,0,20">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Action Buttons -->
                    <UniformGrid Columns="2" Rows="2" Margin="0,0,0,20">
                        <Button Content="Kick User" Style="{StaticResource SecondaryButton}"
                                Command="{Binding KickUserCommand}" Padding="12,14" Margin="0,0,4,4"/>
                        <Button Content="Warn User" Style="{StaticResource SecondaryButton}"
                                Command="{Binding WarnUserCommand}" Padding="12,14" Margin="4,0,0,4"/>
                        <Button Content="Ban User" Style="{StaticResource DangerButton}"
                                Command="{Binding BanUserCommand}" Padding="12,14" Margin="0,4,4,0"/>
                        <Button Content="Promote" Style="{StaticResource AccentButton}"
                                Command="{Binding PromoteUserCommand}" Padding="12,14" Margin="4,4,0,0"/>
                    </UniformGrid>

                    <!-- Rank Selection for Promote -->
                    <TextBlock Text="Rank (for promotion)" FontSize="13" Foreground="{StaticResource TextMuted}" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding AvailableRoles}" SelectedItem="{Binding SelectedRole}"
                              Background="{StaticResource TertiaryDark}" Foreground="White"
                              Padding="12,10" Margin="0,0,0,20"/>

                    <!-- Cancel Button -->
                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}"
                            Command="{Binding CloseUserActionDialogCommand}"
                            HorizontalAlignment="Center" Padding="32,12"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.ColumnSpan="2" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
              Background="#80000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="48" Height="48" CornerRadius="24" Background="{StaticResource Accent}">
                    <Border.RenderTransform>
                        <RotateTransform x:Name="SpinTransform"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="SpinTransform"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                </Border>
                <TextBlock Text="Loading..." FontSize="14" Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Status/Error Messages -->
        <Border Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"
                Background="#43B581" CornerRadius="8" Padding="16,12" Margin="24">
            <TextBlock Text="{Binding StatusMessage}" FontSize="13" Foreground="White"/>
        </Border>

        <Border Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}"
                Background="#ED4245" CornerRadius="8" Padding="16,12" Margin="24">
            <TextBlock Text="{Binding ErrorMessage}" FontSize="13" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>
