<UserControl x:Class="VeaMarketplace.Client.Views.ModerationPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:VeaMarketplace.Client.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:TimeAgoConverter x:Key="TimeAgoConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource PrimaryDark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryDark}" Padding="24" BorderBrush="{StaticResource TertiaryDark}" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel>
                    <TextBlock Text="ðŸ›¡ï¸ Moderation Panel" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Manage users, content, and platform safety" FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" Background="{StaticResource SecondaryDark}" BorderBrush="{StaticResource TertiaryDark}" BorderThickness="0,0,1,0">
                <StackPanel Margin="16">
                    <RadioButton Content="ðŸ“Š Dashboard" Style="{StaticResource NavRadioButton}" IsChecked="True"
                                 Command="{Binding NavigateCommand}" CommandParameter="Dashboard" Margin="0,0,0,8"/>
                    <RadioButton Content="ðŸš« Bans" Style="{StaticResource NavRadioButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Bans" Margin="0,0,0,8"/>
                    <RadioButton Content="ðŸ”‡ Mutes" Style="{StaticResource NavRadioButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Mutes" Margin="0,0,0,8"/>
                    <RadioButton Content="âš ï¸ Warnings" Style="{StaticResource NavRadioButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Warnings" Margin="0,0,0,8"/>
                    <RadioButton Content="ðŸš¨ Reports" Style="{StaticResource NavRadioButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Reports" Margin="0,0,0,8"/>
                    <RadioButton Content="ðŸ¤– Auto-Mod" Style="{StaticResource NavRadioButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="AutoMod" Margin="0,0,0,8"/>
                    <RadioButton Content="ðŸ“ Mod Logs" Style="{StaticResource NavRadioButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Logs" Margin="0,0,0,8"/>
                    <RadioButton Content="âš™ï¸ Settings" Style="{StaticResource NavRadioButton}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Settings"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="24">
                <Grid>
                    <!-- Dashboard View -->
                    <Grid Visibility="{Binding CurrentSection, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Dashboard'}">
                                <StackPanel>
                                    <TextBlock Text="Moderation Dashboard" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                                    <!-- Stats Grid -->
                                    <Grid Margin="0,0,0,24">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="20" Margin="0,0,8,0">
                                            <StackPanel>
                                                <TextBlock Text="Active Bans" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                                                <TextBlock Text="{Binding ActiveBans}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource Red}" Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Grid.Column="1" Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="20" Margin="4,0">
                                            <StackPanel>
                                                <TextBlock Text="Pending Reports" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                                                <TextBlock Text="{Binding PendingReports}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource Orange}" Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Grid.Column="2" Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="20" Margin="4,0">
                                            <StackPanel>
                                                <TextBlock Text="Auto-Mod Actions (24h)" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                                                <TextBlock Text="{Binding AutoModActions24h}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource Cyan}" Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Grid.Column="3" Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="20" Margin="8,0,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Total Mod Actions" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                                                <TextBlock Text="{Binding TotalModActions}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource Blurple}" Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <!-- Recent Activity -->
                                    <Border Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="20">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,16">
                                                <TextBlock Text="Recent Moderation Activity" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                                <Button Content="View All Logs" Style="{StaticResource SecondaryButton}"
                                                        HorizontalAlignment="Right" Padding="12,6" FontSize="12"/>
                                            </Grid>

                                            <ItemsControl ItemsSource="{Binding RecentModActions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{StaticResource TertiaryDark}" CornerRadius="6" Padding="16" Margin="0,0,0,8">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,12,0">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Type}" Value="Ban">
                                                                                    <Setter Property="Background" Value="{StaticResource Red}"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding Type}" Value="Mute">
                                                                                    <Setter Property="Background" Value="{StaticResource Orange}"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding Type}" Value="Warning">
                                                                                    <Setter Property="Background" Value="{StaticResource Yellow}"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding Type}" Value="Kick">
                                                                                    <Setter Property="Background" Value="{StaticResource Pink}"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                    <TextBlock Text="{Binding Icon}" FontSize="18" Foreground="White"
                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>

                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                    <TextBlock FontSize="14" Foreground="White">
                                                                        <Run Text="{Binding ModeratorUsername}" FontWeight="SemiBold"/>
                                                                        <Run Text="{Binding ActionDescription}" Foreground="{StaticResource TextSecondary}"/>
                                                                        <Run Text="{Binding TargetUsername}" FontWeight="SemiBold"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="{Binding Reason, StringFormat='Reason: {0}'}"
                                                                               FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                                                                </StackPanel>

                                                                <TextBlock Grid.Column="2" Text="{Binding CreatedAt, Converter={StaticResource TimeAgoConverter}}"
                                                                           FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Bans View -->
                    <Grid Visibility="{Binding CurrentSection, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Bans'}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Banned Users" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" Content="+ Ban User" Style="{StaticResource AccentButton}"
                                                Command="{Binding OpenBanDialogCommand}" Padding="16,10"/>
                                    </Grid>

                                    <ItemsControl ItemsSource="{Binding BannedUsers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="20" Margin="0,0,0,12">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Ellipse Grid.Column="0" Width="50" Height="50" Margin="0,0,16,0">
                                                            <Ellipse.Fill>
                                                                <ImageBrush ImageSource="{Binding UserAvatarUrl}"/>
                                                            </Ellipse.Fill>
                                                        </Ellipse>

                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Username}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                                            <TextBlock Text="{Binding Reason, StringFormat='Reason: {0}'}" FontSize="13"
                                                                       Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                                <TextBlock Text="Banned by" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                                                <TextBlock Text="{Binding BannedBy}" FontSize="12" Foreground="White" FontWeight="SemiBold" Margin="6,0"/>
                                                                <TextBlock Text="â€¢" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,6,0"/>
                                                                <TextBlock Text="{Binding BannedAt, Converter={StaticResource TimeAgoConverter}}"
                                                                           FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                                            </StackPanel>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0">
                                                            <Border Background="{StaticResource Red}" CornerRadius="6" Padding="12,6">
                                                                <TextBlock Text="{Binding IsPermanent, Converter={StaticResource BanTypeConverter}}"
                                                                           FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                                                            </Border>
                                                            <TextBlock Text="{Binding ExpiresAt, StringFormat='Expires: {0:MMM dd, yyyy}'}"
                                                                       FontSize="11" Foreground="{StaticResource TextSecondary}"
                                                                       HorizontalAlignment="Center" Margin="0,4,0,0"
                                                                       Visibility="{Binding IsPermanent, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                        </StackPanel>

                                                        <Button Grid.Column="3" Content="Unban" Style="{StaticResource DangerButton}"
                                                                Command="{Binding DataContext.UnbanUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}" Padding="20,10"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                        </StackPanel>
                    </Grid>

                    <!-- Reports View -->
                    <Grid Visibility="{Binding CurrentSection, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Reports'}">
                                <StackPanel>
                                    <TextBlock Text="User Reports" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                                    <ItemsControl ItemsSource="{Binding PendingReportsList}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="20" Margin="0,0,0,12">
                                                    <StackPanel>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0">
                                                                <TextBlock FontSize="14" Foreground="White">
                                                                    <Run Text="{Binding ReporterUsername}" FontWeight="SemiBold"/>
                                                                    <Run Text="reported" Foreground="{StaticResource TextSecondary}"/>
                                                                    <Run Text="{Binding ReportedUsername}" FontWeight="SemiBold" Foreground="{StaticResource Red}"/>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding CreatedAt, StringFormat='Reported {0:MMM dd, yyyy at h:mm tt}'}"
                                                                           FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                                                            </StackPanel>

                                                            <Border Grid.Column="1" Background="{StaticResource Orange}" CornerRadius="6" Padding="12,6">
                                                                <TextBlock Text="{Binding Reason}" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                                                            </Border>
                                                        </Grid>

                                                        <Border Background="{StaticResource TertiaryDark}" CornerRadius="6" Padding="16" Margin="0,16,0,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Reported Message:" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,8"/>
                                                                <TextBlock Text="{Binding MessageContent}" FontSize="14" Foreground="White" TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <Grid Margin="0,16,0,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Button Grid.Column="0" Content="Take Action" Style="{StaticResource AccentButton}"
                                                                    Command="{Binding DataContext.OpenActionDialogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}" Padding="16,8" Margin="0,0,8,0"/>
                                                            <Button Grid.Column="1" Content="Dismiss" Style="{StaticResource SecondaryButton}"
                                                                    Command="{Binding DataContext.DismissReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}" Padding="16,8"/>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>

            <!-- Ban Dialog Overlay -->
            <Grid Grid.Column="1" Visibility="{Binding IsBanDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                  Background="#80000000">
                <Border Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="24"
                        VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                    <StackPanel>
                        <TextBlock Text="Ban User" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                        <TextBlock Text="User ID" FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding BanUserId, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{StaticResource TertiaryDark}" Foreground="White"
                                 BorderBrush="{StaticResource Blurple}" Padding="12,10"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="Reason" FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding BanReason, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{StaticResource TertiaryDark}" Foreground="White"
                                 BorderBrush="{StaticResource Blurple}" Padding="12,10"
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                                 Margin="0,0,0,16"/>

                        <CheckBox IsChecked="{Binding IsPermanentBan}" Foreground="White" Margin="0,0,0,12">
                            <TextBlock Text="Permanent Ban" FontSize="14"/>
                        </CheckBox>

                        <StackPanel Visibility="{Binding IsPermanentBan, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    Margin="0,0,0,16">
                            <TextBlock Text="Expires On" FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,6"/>
                            <DatePicker SelectedDate="{Binding BanExpiryDate}"
                                        Background="{StaticResource TertiaryDark}" Foreground="White"/>
                        </StackPanel>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1" Content="Cancel" Style="{StaticResource SecondaryButton}"
                                    Command="{Binding CloseBanDialogCommand}" Padding="20,10" Margin="0,0,8,0"/>
                            <Button Grid.Column="2" Content="Ban User" Style="{StaticResource DangerButton}"
                                    Command="{Binding SubmitBanCommand}" Padding="20,10"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Dialog Overlay -->
            <Grid Grid.Column="1" Visibility="{Binding IsActionDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                  Background="#80000000">
                <Border Background="{StaticResource SecondaryDark}" CornerRadius="10" Padding="24"
                        VerticalAlignment="Center" HorizontalAlignment="Center" Width="450">
                    <StackPanel>
                        <TextBlock Text="Take Moderation Action" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,16"/>

                        <Border Background="{StaticResource TertiaryDark}" CornerRadius="6" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Reported User" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="{Binding SelectedReport.ReportedUsername}" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource Red}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Reason (Optional)" FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding ActionReason, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{StaticResource TertiaryDark}" Foreground="White"
                                 BorderBrush="{StaticResource Blurple}" Padding="12,10"
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="60"
                                 Margin="0,0,0,20"/>

                        <TextBlock Text="Select Action" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>

                        <UniformGrid Columns="2" Rows="2" Margin="0,0,0,16">
                            <Button Content="ðŸ—‘ï¸ Delete Message" Style="{StaticResource SecondaryButton}"
                                    Command="{Binding TakeActionCommand}" CommandParameter="delete"
                                    Padding="12,16" Margin="0,0,4,4"/>
                            <Button Content="âš ï¸ Warn User" Style="{StaticResource SecondaryButton}"
                                    Command="{Binding TakeActionCommand}" CommandParameter="warn"
                                    Padding="12,16" Margin="4,0,0,4"/>
                            <Button Content="ðŸ”‡ Mute User (1h)" Style="{StaticResource SecondaryButton}"
                                    Command="{Binding TakeActionCommand}" CommandParameter="mute"
                                    Padding="12,16" Margin="0,4,4,0"/>
                            <Button Content="ðŸš« Ban User" Style="{StaticResource DangerButton}"
                                    Command="{Binding TakeActionCommand}" CommandParameter="ban"
                                    Padding="12,16" Margin="4,4,0,0"/>
                        </UniformGrid>

                        <Button Content="Cancel" Style="{StaticResource SecondaryButton}"
                                Command="{Binding CloseActionDialogCommand}" Padding="20,10"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="#80000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="â³" FontSize="40" HorizontalAlignment="Center"/>
                <TextBlock Text="Loading..." FontSize="16" Foreground="White" Margin="0,12,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="0" VerticalAlignment="Bottom"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                Background="{StaticResource Red}" Padding="16,10" Margin="24,0">
            <TextBlock Text="{Binding ErrorMessage}" FontSize="14" Foreground="White" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
