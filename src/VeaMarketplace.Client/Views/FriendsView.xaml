<UserControl x:Class="VeaMarketplace.Client.Views.FriendsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls"
             xmlns:converters="clr-namespace:VeaMarketplace.Client.Converters"
             Background="#313338">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Colors.xaml"/>
                <ResourceDictionary Source="../Styles/Buttons.xaml"/>
                <ResourceDictionary Source="../Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:NullToVisibilityInverseConverter x:Key="NullToVisibilityInverseConverter"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <converters:TimeAgoConverter x:Key="TimeAgoConverter"/>

            <!-- Discord-style DM Item -->
            <Style x:Key="DMItemButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="Margin" Value="8,1"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#35373C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3F4248"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Discord-style Tab Button -->
            <Style x:Key="TabButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#B5BAC1"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3F4248"/>
                                    <Setter Property="Foreground" Value="#DCDDDE"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Discord-style Active Tab -->
            <Style x:Key="ActiveTabButton" TargetType="Button" BasedOn="{StaticResource TabButton}">
                <Setter Property="Background" Value="#4F545C"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar: DM List -->
        <Border Grid.Column="0" Background="#2B2D31">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <Border Grid.Row="0" Margin="10,10,10,4">
                    <Border Background="#1E1F22" CornerRadius="4" Padding="8,6">
                        <Grid>
                            <TextBlock Text="Find or start a conversation"
                                       Foreground="#949BA4" FontSize="13"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding SearchQuery, Converter={StaticResource NullToVisibilityInverseConverter}}"/>
                            <TextBox Background="Transparent" BorderThickness="0"
                                     Foreground="#DCDDDE" FontSize="13"
                                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Border>

                <!-- Friends Button -->
                <Button Grid.Row="1" Style="{StaticResource DMItemButton}" Margin="8,4,8,8"
                        Command="{Binding SwitchViewCommand}" CommandParameter="Friends">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" CornerRadius="16" Background="#5865F2"
                                Margin="0,0,12,0">
                            <TextBlock Text="ðŸ‘¥" FontSize="16" HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Friends" FontSize="15" FontWeight="Medium"
                                   Foreground="#DCDDDE" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- DM List -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Header -->
                    <Grid Margin="16,16,8,4">
                        <TextBlock Text="DIRECT MESSAGES" FontSize="11" FontWeight="SemiBold"
                                   Foreground="#949BA4" VerticalAlignment="Center"/>
                        <Button HorizontalAlignment="Right" Background="Transparent"
                                BorderThickness="0" Cursor="Hand" ToolTip="Create DM"
                                Command="{Binding CreateDMCommand}">
                            <TextBlock Text="+" FontSize="18" Foreground="#B5BAC1"/>
                        </Button>
                    </Grid>

                    <!-- Conversation List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Conversations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource DMItemButton}"
                                            Command="{Binding DataContext.OpenConversationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Avatar with status -->
                                            <Grid Width="32" Height="32" Margin="0,0,12,0">
                                                <Ellipse>
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding AvatarUrl}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <!-- Online Status Dot -->
                                                <Ellipse Width="10" Height="10"
                                                         HorizontalAlignment="Right"
                                                         VerticalAlignment="Bottom"
                                                         Stroke="#2B2D31" StrokeThickness="2">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="#80848E"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                    <Setter Property="Fill" Value="#23A559"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </Grid>

                                            <!-- Name and Preview -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Username}" FontSize="15"
                                                           Foreground="#F2F3F5" FontWeight="Medium"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding LastMessage}" FontSize="13"
                                                           Foreground="#949BA4"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="120"
                                                           Visibility="{Binding LastMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            </StackPanel>

                                            <!-- Unread Badge -->
                                            <Border Grid.Column="2" Background="#F23F43"
                                                    CornerRadius="8" Padding="6,2" MinWidth="18"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding UnreadCount, Converter={StaticResource CountToVisibilityConverter}}">
                                                <TextBlock Text="{Binding UnreadCount}" FontSize="11"
                                                           Foreground="White" FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <!-- User Panel (Bottom) -->
                <Border Grid.Row="3" Background="#232428" Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Grid Width="32" Height="32" Margin="0,0,8,0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding CurrentUserAvatar}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse Width="10" Height="10"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Bottom"
                                     Fill="#23A559" Stroke="#232428" StrokeThickness="2"/>
                        </Grid>

                        <!-- Username -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentUsername}" FontSize="13"
                                       Foreground="#F2F3F5" FontWeight="Medium"/>
                            <TextBlock Text="Online" FontSize="11" Foreground="#23A559"/>
                        </StackPanel>

                        <!-- Settings -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Style="{StaticResource IconButton}" Width="28" Height="28"
                                    ToolTip="Mute" Margin="2,0">
                                <TextBlock Text="ðŸŽ¤" FontSize="14"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Width="28" Height="28"
                                    ToolTip="Deafen" Margin="2,0">
                                <TextBlock Text="ðŸ”Š" FontSize="14"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Width="28" Height="28"
                                    ToolTip="Settings" Margin="2,0">
                                <TextBlock Text="âš™" FontSize="14"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Friends View (default) -->
            <Grid Visibility="{Binding IsInDMView, Converter={StaticResource InverseBoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#313338" BorderBrush="#26282C"
                        BorderThickness="0,0,0,1">
                    <Grid Margin="16,0">
                        <!-- Friends Icon and Title -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¥" FontSize="20" VerticalAlignment="Center"
                                       Foreground="#80848E" Margin="0,0,8,0"/>
                            <TextBlock Text="Friends" FontSize="15" FontWeight="SemiBold"
                                       Foreground="#F2F3F5" VerticalAlignment="Center"/>
                            <Border Width="1" Background="#3F4147" Margin="16,12"/>

                            <!-- Tab Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <Button Content="Online" Style="{StaticResource TabButton}"
                                        Margin="0,0,4,0"
                                        Command="{Binding SwitchViewCommand}" CommandParameter="Friends"/>
                                <Button Content="All" Style="{StaticResource TabButton}"
                                        Margin="0,0,4,0"
                                        Command="{Binding SwitchViewCommand}" CommandParameter="Friends"/>
                                <Button Content="Pending" Margin="0,0,4,0"
                                        Command="{Binding SwitchViewCommand}" CommandParameter="Pending">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasPendingRequests}" Value="True">
                                                    <Setter Property="Foreground" Value="#23A559"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Blocked" Style="{StaticResource TabButton}"
                                        Margin="0,0,4,0"
                                        Command="{Binding SwitchViewCommand}" CommandParameter="Blocked"/>
                                <Button Background="#23A559" Foreground="White" FontWeight="SemiBold"
                                        Padding="8,4" FontSize="13" Cursor="Hand" Margin="4,0,0,0"
                                        Command="{Binding SwitchViewCommand}" CommandParameter="Add">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    Add Friend
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Right side icons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                    ToolTip="Start Group Call"
                                    Command="{Binding StartGroupCallCommand}">
                                <TextBlock Text="ðŸ“ž" FontSize="18"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                    ToolTip="Create Group DM"
                                    Command="{Binding CreateGroupDMCommand}">
                                <TextBlock Text="âž•" FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20,20">
                        <!-- Add Friend View -->
                        <StackPanel Visibility="{Binding CurrentView, Converter={StaticResource StringToVisConverter}, ConverterParameter=Add}">
                            <TextBlock Text="ADD FRIEND" FontSize="14" FontWeight="Bold"
                                       Foreground="#F2F3F5" Margin="0,0,0,8"/>
                            <TextBlock Text="You can add friends with their Yurt Cord username."
                                       FontSize="13" Foreground="#B5BAC1" Margin="0,0,0,16"/>

                            <Border Background="#1E1F22" CornerRadius="8" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Style="{StaticResource ModernTextBox}"
                                             Text="{Binding FriendRequestUsername, UpdateSourceTrigger=PropertyChanged}"
                                             Tag="Enter a username"
                                             Background="Transparent" BorderThickness="0"/>
                                    <Button Grid.Column="1" Content="Send Friend Request"
                                            Background="#5865F2" Foreground="White"
                                            FontWeight="Medium" Padding="16,10" Margin="12,0,0,0"
                                            IsEnabled="{Binding CanSendFriendRequest}"
                                            Command="{Binding SendFriendRequestCommand}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}"
                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#4752C4"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Search Result -->
                            <Border Background="#2B2D31" CornerRadius="8" Margin="0,16,0,0"
                                    Padding="16"
                                    Visibility="{Binding SearchedUser, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Width="48" Height="48" Margin="0,0,16,0">
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding SearchedUser.AvatarUrl}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Ellipse Width="14" Height="14"
                                                 HorizontalAlignment="Right"
                                                 VerticalAlignment="Bottom"
                                                 Stroke="#2B2D31" StrokeThickness="3">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#80848E"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SearchedUser.IsOnline}" Value="True">
                                                            <Setter Property="Fill" Value="#23A559"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </Grid>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SearchedUser.Username}"
                                                   FontSize="16" FontWeight="SemiBold"
                                                   Foreground="#F2F3F5"/>
                                        <TextBlock Text="{Binding SearchedUser.DisplayName}"
                                                   FontSize="13" Foreground="#B5BAC1"
                                                   Visibility="{Binding SearchedUser.DisplayName, Converter={StaticResource NullToVisibilityConverter}}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Border Background="#23A559" CornerRadius="4"
                                                Padding="8,4"
                                                Visibility="{Binding SearchedUser.IsFriend, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="Already Friends" FontSize="11"
                                                       Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                        <Button Content="View Profile" Style="{StaticResource SecondaryButton}"
                                                Padding="12,6"
                                                Command="{Binding ViewSearchedUserProfileCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Pending Requests -->
                        <StackPanel Visibility="{Binding CurrentView, Converter={StaticResource StringToVisConverter}, ConverterParameter=Pending}">
                            <TextBlock FontSize="11" FontWeight="SemiBold"
                                       Foreground="#B5BAC1" Margin="0,0,0,12">
                                <Run Text="PENDING â€” "/>
                                <Run Text="{Binding PendingRequests.Count, Mode=OneWay}"/>
                            </TextBlock>

                            <ItemsControl ItemsSource="{Binding PendingRequests}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2B2D31" CornerRadius="8"
                                                Margin="0,0,0,8" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Width="40" Height="40" Margin="0,0,12,0">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding RequesterAvatarUrl}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding RequesterUsername}"
                                                               FontSize="15" FontWeight="Medium"
                                                               Foreground="#F2F3F5"/>
                                                    <TextBlock Text="Incoming Friend Request"
                                                               FontSize="12" Foreground="#B5BAC1"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                    <Button Width="36" Height="36" Margin="0,0,8,0"
                                                            ToolTip="Accept"
                                                            Command="{Binding DataContext.AcceptFriendRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" Background="#3C3F44"
                                                                        CornerRadius="18">
                                                                    <TextBlock Text="âœ“" FontSize="16"
                                                                               Foreground="#B5BAC1"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#23A559"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                    <Button Width="36" Height="36"
                                                            ToolTip="Decline"
                                                            Command="{Binding DataContext.DeclineFriendRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" Background="#3C3F44"
                                                                        CornerRadius="18">
                                                                    <TextBlock Text="âœ•" FontSize="16"
                                                                               Foreground="#B5BAC1"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#F23F43"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Friends List -->
                        <StackPanel Visibility="{Binding CurrentView, Converter={StaticResource StringToVisConverter}, ConverterParameter=Friends}">
                            <!-- Search -->
                            <Border Background="#1E1F22" CornerRadius="4" Padding="8" Margin="0,0,0,16">
                                <Grid>
                                    <TextBlock Text="Search" Foreground="#72767D" FontSize="13"
                                               Visibility="{Binding SearchQuery, Converter={StaticResource NullToVisibilityInverseConverter}}"/>
                                    <TextBox Background="Transparent" BorderThickness="0"
                                             Foreground="#DCDDDE" FontSize="13"
                                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </Border>

                            <TextBlock FontSize="11" FontWeight="SemiBold"
                                       Foreground="#B5BAC1" Margin="0,0,0,8">
                                <Run Text="ALL FRIENDS â€” "/>
                                <Run Text="{Binding FilteredFriends.Count, Mode=OneWay}"/>
                            </TextBlock>

                            <ItemsControl ItemsSource="{Binding FilteredFriends}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="friendItem" Background="Transparent"
                                                CornerRadius="8" Margin="0,1" Padding="12,10"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#393C43"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick"
                                                              Command="{Binding DataContext.OpenDMCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              CommandParameter="{Binding}"/>
                                            </Border.InputBindings>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Avatar -->
                                                <Grid Width="40" Height="40" Margin="0,0,12,0">
                                                    <Ellipse>
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding AvatarUrl}"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <Ellipse Width="12" Height="12"
                                                             HorizontalAlignment="Right"
                                                             VerticalAlignment="Bottom"
                                                             Stroke="#313338" StrokeThickness="2">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="#80848E"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                        <Setter Property="Fill" Value="#23A559"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                </Grid>

                                                <!-- Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Username}"
                                                               FontSize="15" FontWeight="Medium"
                                                               Foreground="#F2F3F5"/>
                                                    <TextBlock FontSize="13">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="Offline"/>
                                                                <Setter Property="Foreground" Value="#B5BAC1"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                        <Setter Property="Text" Value="Online"/>
                                                                        <Setter Property="Foreground" Value="#23A559"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding CustomStatus}" Value="{x:Null}">
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding CustomStatus}" Value="">
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Column="2" Orientation="Horizontal"
                                                            Visibility="{Binding IsMouseOver, ElementName=friendItem, Converter={StaticResource BoolToVis}}">
                                                    <Button Width="36" Height="36" Margin="0,0,8,0"
                                                            ToolTip="Message"
                                                            Command="{Binding DataContext.OpenDMCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" Background="#3C3F44"
                                                                        CornerRadius="18">
                                                                    <TextBlock Text="ðŸ’¬" FontSize="16"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#5865F2"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                    <Button Width="36" Height="36"
                                                            ToolTip="Start Voice Call"
                                                            Command="{Binding DataContext.StartCallCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Visibility="{Binding IsOnline, Converter={StaticResource BoolToVis}}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" Background="#3C3F44"
                                                                        CornerRadius="18">
                                                                    <TextBlock Text="ðŸ“ž" FontSize="16"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#23A559"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State -->
                            <StackPanel HorizontalAlignment="Center" Margin="0,60,0,0"
                                        Visibility="{Binding HasNoFriends, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="ðŸ‘‹" FontSize="64" HorizontalAlignment="Center"/>
                                <TextBlock Text="Wumpus is waiting on friends. You don't have to though!"
                                           FontSize="14" Foreground="#B5BAC1"
                                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Blocked Users -->
                        <StackPanel Visibility="{Binding CurrentView, Converter={StaticResource StringToVisConverter}, ConverterParameter=Blocked}">
                            <TextBlock FontSize="11" FontWeight="SemiBold"
                                       Foreground="#B5BAC1" Margin="0,0,0,8">
                                <Run Text="BLOCKED â€” "/>
                                <Run Text="{Binding BlockedUsers.Count, Mode=OneWay}"/>
                            </TextBlock>

                            <ItemsControl ItemsSource="{Binding BlockedUsers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2B2D31" CornerRadius="8"
                                                Margin="0,0,0,8" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Width="40" Height="40" Margin="0,0,12,0">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding AvatarUrl}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Username}"
                                                               FontSize="15" FontWeight="Medium"
                                                               Foreground="#F2F3F5"/>
                                                    <TextBlock FontSize="12" Foreground="#B5BAC1">
                                                        <Run Text="Blocked"/>
                                                        <Run Text="{Binding BlockedAt, StringFormat=' {0:MMM d, yyyy}'}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <Button Grid.Column="2" Content="Unblock"
                                                        Style="{StaticResource SecondaryButton}"
                                                        Padding="12,6"
                                                        Command="{Binding DataContext.UnblockUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- DM Chat View -->
            <Grid Visibility="{Binding IsInDMView, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- DM Header -->
                <Border Grid.Row="0" Background="#313338" BorderBrush="#26282C"
                        BorderThickness="0,0,0,1">
                    <Grid Margin="16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="@" FontSize="20" Foreground="#80848E"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding SelectedFriend.Username}"
                                       FontSize="15" FontWeight="SemiBold"
                                       Foreground="#F2F3F5" VerticalAlignment="Center"/>
                            <Ellipse Width="8" Height="8" Margin="8,0,0,0"
                                     VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#80848E"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedFriend.IsOnline}" Value="True">
                                                <Setter Property="Fill" Value="#23A559"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </StackPanel>

                        <!-- Right side actions -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                    ToolTip="Start Voice Call" Margin="0,0,4,0"
                                    Command="{Binding StartCallCommand}"
                                    CommandParameter="{Binding SelectedFriend}">
                                <TextBlock Text="ðŸ“ž" FontSize="18"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                    ToolTip="Start Video Call" Margin="0,0,4,0"
                                    Command="{Binding StartVideoCallCommand}"
                                    CommandParameter="{Binding SelectedFriend}">
                                <TextBlock Text="ðŸ“¹" FontSize="18"/>
                            </Button>
                            <Border Width="1" Background="#3F4147" Margin="8,12"/>
                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                    ToolTip="Pinned Messages" Margin="0,0,4,0"
                                    Command="{Binding ShowPinnedMessagesCommand}">
                                <TextBlock Text="ðŸ“Œ" FontSize="16"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                    ToolTip="Add Friends to DM" Margin="0,0,4,0"
                                    Command="{Binding AddToDMCommand}">
                                <TextBlock Text="ðŸ‘¤+" FontSize="14"/>
                            </Button>
                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                    ToolTip="Show User Profile"
                                    Command="{Binding ViewFriendProfileCommand}"
                                    CommandParameter="{Binding SelectedFriend}">
                                <TextBlock Text="ðŸ‘¤" FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Messages -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                              x:Name="MessagesScrollViewer">
                    <StackPanel Margin="16,16,16,0">
                        <!-- Welcome Message -->
                        <StackPanel Margin="0,0,0,24">
                            <Ellipse Width="80" Height="80" Margin="0,0,0,12">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding SelectedFriend.AvatarUrl}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="{Binding SelectedFriend.Username}"
                                       FontSize="28" FontWeight="Bold"
                                       Foreground="#F2F3F5"/>
                            <TextBlock FontSize="14" Foreground="#B5BAC1" Margin="0,4,0,0">
                                <Run Text="This is the beginning of your direct message history with"/>
                                <Run Text="{Binding SelectedFriend.Username}" FontWeight="SemiBold"/>
                                <Run Text="."/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Message List -->
                        <ItemsControl ItemsSource="{Binding CurrentDMHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid x:Name="messageRoot" Margin="0,0,0,4">
                                        <!-- Full message with avatar (first in group) -->
                                        <Grid Visibility="{Binding IsFirstInGroup, Converter={StaticResource BoolToVis}, FallbackValue=Visible}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="56"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Width="40" Height="40" Margin="0,4,0,0"
                                                     VerticalAlignment="Top">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding SenderAvatarUrl}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                    <TextBlock Text="{Binding SenderUsername}"
                                                               FontWeight="Medium" FontSize="15"
                                                               Foreground="#F2F3F5"/>
                                                    <TextBlock Text="{Binding Timestamp, StringFormat=' {0:MM/dd/yyyy h:mm tt}'}"
                                                               FontSize="12" Foreground="#949BA4"
                                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Content}"
                                                           FontSize="15" Foreground="#DCDDDE"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Condensed message (continuation) -->
                                        <Grid Visibility="{Binding IsFirstInGroup, Converter={StaticResource InverseBoolToVis}, FallbackValue=Collapsed}"
                                              Margin="56,0,0,0">
                                            <TextBlock Text="{Binding Content}"
                                                       FontSize="15" Foreground="#DCDDDE"
                                                       TextWrapping="Wrap"/>
                                        </Grid>

                                        <!-- Hover timestamp -->
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:h:mm tt}'}"
                                                   FontSize="10" Foreground="#72767D"
                                                   Margin="4,4,0,0"
                                                   Visibility="{Binding IsMouseOver, ElementName=messageRoot, Converter={StaticResource BoolToVis}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- Message Input -->
                <Border Grid.Row="2" Margin="16,0,16,24">
                    <!-- Typing Indicator -->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8"
                                    Visibility="{Binding IsPartnerTyping, Converter={StaticResource BoolToVis}}">
                            <TextBlock FontSize="12" Foreground="#B5BAC1">
                                <Run Text="{Binding TypingUsername}" FontWeight="Medium"/>
                                <Run Text=" is typing..."/>
                            </TextBlock>
                        </StackPanel>

                        <Border Background="#383A40" CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Attachment button -->
                                <Button Grid.Column="0" Width="44" Height="44"
                                        Style="{StaticResource IconButton}"
                                        ToolTip="Upload a file">
                                    <TextBlock Text="+" FontSize="24" Foreground="#B5BAC1"/>
                                </Button>

                                <!-- Input -->
                                <TextBox Grid.Column="1" Background="Transparent"
                                         BorderThickness="0" Foreground="#DCDDDE"
                                         FontSize="15" VerticalAlignment="Center"
                                         Padding="0,12"
                                         Text="{Binding DmMessageInput, UpdateSourceTrigger=PropertyChanged}"
                                         TextChanged="DmInput_TextChanged">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Return" Command="{Binding SendDMCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>

                                <!-- Right side buttons -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,8,0">
                                    <Button Width="32" Height="32" Style="{StaticResource IconButton}"
                                            ToolTip="Gift Nitro">
                                        <TextBlock Text="ðŸŽ" FontSize="18"/>
                                    </Button>
                                    <Button Width="32" Height="32" Style="{StaticResource IconButton}"
                                            ToolTip="Select GIF">
                                        <TextBlock Text="GIF" FontSize="11" Foreground="#B5BAC1"
                                                   FontWeight="Bold"/>
                                    </Button>
                                    <Button Width="32" Height="32" Style="{StaticResource IconButton}"
                                            ToolTip="Select Sticker">
                                        <TextBlock Text="ðŸ“‹" FontSize="16"/>
                                    </Button>
                                    <Button Width="32" Height="32" Style="{StaticResource IconButton}"
                                            ToolTip="Select Emoji">
                                        <TextBlock Text="ðŸ˜€" FontSize="18"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Call Overlay -->
        <Grid Grid.ColumnSpan="2" Background="#E0000000"
              Visibility="{Binding IsInCall, Converter={StaticResource BoolToVis}}">
            <Border Background="#1E1F22" CornerRadius="8"
                    Width="460" Height="560"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Main call area -->
                    <Grid Background="#111214" Margin="0,0,0,0">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Avatar with speaking ring -->
                            <Grid Width="120" Height="120" Margin="0,0,0,16">
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding SelectedFriend.AvatarUrl}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Ellipse Stroke="#23A559" StrokeThickness="4"
                                         Visibility="{Binding IsCallUserSpeaking, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <TextBlock Text="{Binding SelectedFriend.Username}"
                                       FontSize="24" FontWeight="SemiBold"
                                       Foreground="#F2F3F5" HorizontalAlignment="Center"/>

                            <TextBlock FontSize="14" Foreground="#B5BAC1"
                                       HorizontalAlignment="Center" Margin="0,8,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="In call"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCallUserSpeaking}" Value="True">
                                                <Setter Property="Text" Value="Speaking..."/>
                                                <Setter Property="Foreground" Value="#23A559"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Text="{Binding CallDuration}"
                                       FontSize="16" Foreground="#72767D"
                                       HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Controls -->
                    <Border Grid.Row="1" Background="#232428" Padding="24,16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Width="48" Height="48" Margin="0,0,16,0"
                                    ToolTip="Screen Share"
                                    Command="{Binding ToggleScreenShareCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="24"
                                                Background="#3C3F44">
                                            <TextBlock Text="ðŸ–¥" FontSize="20"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsScreenSharing}" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#23A559"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#4F545C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Width="48" Height="48" Margin="0,0,16,0"
                                    ToolTip="Toggle Video"
                                    Command="{Binding ToggleVideoCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="24"
                                                Background="#3C3F44">
                                            <TextBlock Text="ðŸ“¹" FontSize="20"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsVideoEnabled}" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#5865F2"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#4F545C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Width="48" Height="48" Margin="0,0,16,0"
                                    ToolTip="Toggle Mute"
                                    Command="{Binding ToggleMuteCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="24"
                                                Background="#3C3F44">
                                            <TextBlock x:Name="icon" Text="ðŸŽ¤" FontSize="20"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F23F43"/>
                                                <Setter TargetName="icon" Property="Text" Value="ðŸ”‡"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#4F545C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Width="48" Height="48"
                                    ToolTip="End Call"
                                    Command="{Binding EndCallCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="24" Background="#F23F43">
                                            <TextBlock Text="ðŸ“ž" FontSize="20"
                                                       RenderTransformOrigin="0.5,0.5"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <TextBlock.RenderTransform>
                                                    <RotateTransform Angle="135"/>
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Incoming Call Overlay -->
        <Grid Grid.ColumnSpan="2" Background="#E0000000"
              Visibility="{Binding HasIncomingCall, Converter={StaticResource BoolToVis}}">
            <Border Background="#1E1F22" CornerRadius="8"
                    Width="340" Height="380"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Ellipse Width="96" Height="96" Margin="0,0,0,20">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding CurrentCall.CallerAvatarUrl}"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <TextBlock Text="{Binding CurrentCall.CallerUsername}"
                               FontSize="22" FontWeight="SemiBold"
                               Foreground="#F2F3F5" HorizontalAlignment="Center"/>

                    <TextBlock Text="Incoming call..." FontSize="14"
                               Foreground="#B5BAC1" HorizontalAlignment="Center"
                               Margin="0,8,0,32"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Width="56" Height="56" Margin="0,0,32,0"
                                ToolTip="Decline"
                                Command="{Binding DeclineCallCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="28" Background="#F23F43">
                                        <TextBlock Text="ðŸ“µ" FontSize="24"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Width="56" Height="56"
                                ToolTip="Accept"
                                Command="{Binding AcceptCallCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="28" Background="#23A559">
                                        <TextBlock Text="ðŸ“ž" FontSize="24"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Block Dialog -->
        <Grid Grid.ColumnSpan="2" Background="#E0000000"
              Visibility="{Binding IsBlockDialogOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#313338" CornerRadius="8"
                    Width="440" Padding="24"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Block User" FontSize="20" FontWeight="SemiBold"
                               Foreground="#F2F3F5" Margin="0,0,0,12"/>

                    <TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#B5BAC1"
                               Margin="0,0,0,20">
                        <Run Text="Are you sure you want to block"/>
                        <Run Text="{Binding UserToBlock.Username}" FontWeight="SemiBold" Foreground="#F2F3F5"/>
                        <Run Text="? They won't be able to send you messages or friend requests."/>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource SecondaryButton}"
                                Padding="20,10" Margin="0,0,8,0"
                                Command="{Binding CloseBlockDialogCommand}"/>
                        <Button Content="Block" Padding="20,10"
                                Background="#F23F43" Foreground="White"
                                FontWeight="Medium"
                                Command="{Binding ConfirmBlockCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
