<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Discord-like Dark Theme Colors -->
    <Color x:Key="PrimaryDark">#202225</Color>
    <Color x:Key="SecondaryDark">#2F3136</Color>
    <Color x:Key="TertiaryDark">#36393F</Color>
    <Color x:Key="QuaternaryDark">#40444B</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentBlurple">#5865F2</Color>
    <Color x:Key="AccentGreen">#57F287</Color>
    <Color x:Key="AccentYellow">#FEE75C</Color>
    <Color x:Key="AccentRed">#ED4245</Color>
    <Color x:Key="AccentPink">#EB459E</Color>
    <Color x:Key="AccentOrange">#F47B67</Color>
    <Color x:Key="AccentCyan">#00AFF4</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B9BBBE</Color>
    <Color x:Key="TextMuted">#72767D</Color>
    <Color x:Key="TextLink">#00AFF4</Color>

    <!-- Role Colors -->
    <Color x:Key="RoleOwner">#FFD700</Color>
    <Color x:Key="RoleAdmin">#E74C3C</Color>
    <Color x:Key="RoleModerator">#9B59B6</Color>
    <Color x:Key="RoleVIP">#00FF88</Color>
    <Color x:Key="RoleVerified">#3498DB</Color>
    <Color x:Key="RoleMember">#95A5A6</Color>

    <!-- Rank Colors -->
    <Color x:Key="RankLegend">#FFD700</Color>
    <Color x:Key="RankElite">#E74C3C</Color>
    <Color x:Key="RankDiamond">#00FFFF</Color>
    <Color x:Key="RankPlatinum">#E5E4E2</Color>
    <Color x:Key="RankGold">#FFD700</Color>
    <Color x:Key="RankSilver">#C0C0C0</Color>
    <Color x:Key="RankBronze">#CD7F32</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDark}"/>
    <SolidColorBrush x:Key="TertiaryDarkBrush" Color="{StaticResource TertiaryDark}"/>
    <SolidColorBrush x:Key="QuaternaryDarkBrush" Color="{StaticResource QuaternaryDark}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentBlurple}"/>
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="AccentPinkBrush" Color="{StaticResource AccentPink}"/>
    <SolidColorBrush x:Key="AccentCyanBrush" Color="{StaticResource AccentCyan}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    <SolidColorBrush x:Key="TextLinkBrush" Color="{StaticResource TextLink}"/>

    <!-- Gradient Backgrounds -->
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentBlurple}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentPink}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="VoiceActiveGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentGreen}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentCyan}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Effects -->
    <DropShadowEffect x:Key="DropShadow" BlurRadius="20" ShadowDepth="0"
                      Color="Black" Opacity="0.5"/>

    <DropShadowEffect x:Key="CardShadow" BlurRadius="15" ShadowDepth="2"
                      Color="Black" Opacity="0.3" Direction="270"/>

    <DropShadowEffect x:Key="GlowEffect" BlurRadius="15" ShadowDepth="0"
                      Color="{StaticResource AccentBlurple}" Opacity="0.6"/>

</ResourceDictionary>
