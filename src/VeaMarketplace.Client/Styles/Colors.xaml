<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Discord-like Dark Theme Colors -->
    <Color x:Key="PrimaryDarkColor">#202225</Color>
    <Color x:Key="SecondaryDarkColor">#2F3136</Color>
    <Color x:Key="TertiaryDarkColor">#36393F</Color>
    <Color x:Key="QuaternaryDarkColor">#40444B</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentBlurpleColor">#5865F2</Color>
    <Color x:Key="AccentGreenColor">#57F287</Color>
    <Color x:Key="AccentYellowColor">#FEE75C</Color>
    <Color x:Key="AccentRedColor">#ED4245</Color>
    <Color x:Key="AccentPinkColor">#EB459E</Color>
    <Color x:Key="AccentOrangeColor">#F47B67</Color>
    <Color x:Key="AccentCyanColor">#00AFF4</Color>

    <!-- Accent Color Aliases (short names for GradientStops) -->
    <Color x:Key="AccentBlurple">#5865F2</Color>
    <Color x:Key="AccentPink">#EB459E</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#B9BBBE</Color>
    <Color x:Key="TextMutedColor">#72767D</Color>
    <Color x:Key="TextLinkColor">#00AFF4</Color>

    <!-- Role Colors -->
    <Color x:Key="RoleOwner">#FFD700</Color>
    <Color x:Key="RoleAdmin">#E74C3C</Color>
    <Color x:Key="RoleModerator">#9B59B6</Color>
    <Color x:Key="RoleVIP">#00FF88</Color>
    <Color x:Key="RoleVerified">#3498DB</Color>
    <Color x:Key="RoleMember">#95A5A6</Color>

    <!-- Rank Colors -->
    <Color x:Key="RankLegend">#FFD700</Color>
    <Color x:Key="RankElite">#E74C3C</Color>
    <Color x:Key="RankDiamond">#00FFFF</Color>
    <Color x:Key="RankPlatinum">#E5E4E2</Color>
    <Color x:Key="RankGold">#FFD700</Color>
    <Color x:Key="RankSilver">#C0C0C0</Color>
    <Color x:Key="RankBronze">#CD7F32</Color>

    <!-- Dark Theme Brushes (simple names for XAML usage) -->
    <SolidColorBrush x:Key="PrimaryDark" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryDark" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="TertiaryDark" Color="{StaticResource TertiaryDarkColor}"/>
    <SolidColorBrush x:Key="QuaternaryDark" Color="{StaticResource QuaternaryDarkColor}"/>

    <!-- Legacy Brush Names (for backwards compatibility) -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="TertiaryDarkBrush" Color="{StaticResource TertiaryDarkColor}"/>
    <SolidColorBrush x:Key="QuaternaryDarkBrush" Color="{StaticResource QuaternaryDarkColor}"/>

    <!-- Accent Brushes (simple names) -->
    <SolidColorBrush x:Key="Blurple" Color="{StaticResource AccentBlurpleColor}"/>
    <SolidColorBrush x:Key="Green" Color="{StaticResource AccentGreenColor}"/>
    <SolidColorBrush x:Key="Yellow" Color="{StaticResource AccentYellowColor}"/>
    <SolidColorBrush x:Key="Red" Color="{StaticResource AccentRedColor}"/>
    <SolidColorBrush x:Key="Pink" Color="{StaticResource AccentPinkColor}"/>
    <SolidColorBrush x:Key="Orange" Color="{StaticResource AccentOrangeColor}"/>
    <SolidColorBrush x:Key="Cyan" Color="{StaticResource AccentCyanColor}"/>

    <!-- Legacy Accent Brush Names -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentBlurpleColor}"/>
    <SolidColorBrush x:Key="AccentBlurpleBrush" Color="{StaticResource AccentBlurpleColor}"/>
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreenColor}"/>
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellowColor}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRedColor}"/>
    <SolidColorBrush x:Key="AccentPinkBrush" Color="{StaticResource AccentPinkColor}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrangeColor}"/>
    <SolidColorBrush x:Key="AccentCyanBrush" Color="{StaticResource AccentCyanColor}"/>

    <!-- Text Brushes (simple names) -->
    <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMuted" Color="{StaticResource TextMutedColor}"/>
    <SolidColorBrush x:Key="TextLink" Color="{StaticResource TextLinkColor}"/>

    <!-- Legacy Text Brush Names -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
    <SolidColorBrush x:Key="TextLinkBrush" Color="{StaticResource TextLinkColor}"/>

    <!-- Additional Text Aliases -->
    <SolidColorBrush x:Key="MutedText" Color="{StaticResource TextMutedColor}"/>

    <!-- Gradient Backgrounds -->
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentBlurpleColor}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentPinkColor}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="VoiceActiveGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentGreenColor}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentCyanColor}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Effects -->
    <DropShadowEffect x:Key="DropShadow" BlurRadius="20" ShadowDepth="0"
                      Color="Black" Opacity="0.5"/>

    <DropShadowEffect x:Key="CardShadow" BlurRadius="15" ShadowDepth="2"
                      Color="Black" Opacity="0.3" Direction="270"/>

    <DropShadowEffect x:Key="GlowEffect" BlurRadius="15" ShadowDepth="0"
                      Color="{StaticResource AccentBlurpleColor}" Opacity="0.6"/>

    <DropShadowEffect x:Key="SubtleShadow" BlurRadius="8" ShadowDepth="1"
                      Color="Black" Opacity="0.2" Direction="270"/>

    <DropShadowEffect x:Key="PopupShadow" BlurRadius="16" ShadowDepth="4"
                      Color="Black" Opacity="0.4" Direction="270"/>

    <DropShadowEffect x:Key="WindowShadow" BlurRadius="24" ShadowDepth="8"
                      Color="Black" Opacity="0.5" Direction="270"/>

</ResourceDictionary>
