<UserControl x:Class="VeaMarketplace.Client.Controls.SharedPostEmbed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MaxWidth="400">

    <UserControl.Resources>
        <!-- Hover Animation -->
        <Storyboard x:Key="HoverEnter">
            <DoubleAnimation Storyboard.TargetName="CardScale"
                             Storyboard.TargetProperty="ScaleX"
                             To="1.01" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="CardScale"
                             Storyboard.TargetProperty="ScaleY"
                             To="1.01" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ActionBar"
                             Storyboard.TargetProperty="Opacity"
                             To="1" Duration="0:0:0.15"/>
        </Storyboard>
        <Storyboard x:Key="HoverLeave">
            <DoubleAnimation Storyboard.TargetName="CardScale"
                             Storyboard.TargetProperty="ScaleX"
                             To="1" Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetName="CardScale"
                             Storyboard.TargetProperty="ScaleY"
                             To="1" Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetName="ActionBar"
                             Storyboard.TargetProperty="Opacity"
                             To="0.7" Duration="0:0:0.15"/>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="MainCard" CornerRadius="8" Cursor="Hand"
            Background="#2B2D31" BorderThickness="1" BorderBrush="#3F4147"
            RenderTransformOrigin="0.5,0.5"
            MouseEnter="Card_MouseEnter" MouseLeave="Card_MouseLeave"
            MouseLeftButtonDown="Card_Click">
        <Border.RenderTransform>
            <ScaleTransform x:Name="CardScale"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Accent Strip -->
            <Border Grid.Row="0" Height="4" CornerRadius="8,8,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#5865F2" Offset="0"/>
                        <GradientStop Color="#EB459E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="12,8,12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Image -->
                <Border Grid.Column="0" Width="80" Height="80" CornerRadius="6"
                        Background="#1E1F22" Margin="0,0,12,0">
                    <Grid>
                        <Image x:Name="PostImage" Stretch="UniformToFill"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <!-- Placeholder -->
                        <TextBlock x:Name="ImagePlaceholder" Text="ðŸ“¦" FontSize="32"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="#72767D"/>
                    </Grid>
                </Border>

                <!-- Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <!-- Type Badge -->
                    <Border x:Name="TypeBadge" Background="#5865F2" CornerRadius="3"
                            Padding="6,2" HorizontalAlignment="Left" Margin="0,0,0,6">
                        <TextBlock x:Name="TypeText" Text="PRODUCT" FontSize="9"
                                   Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock x:Name="TitleText" Text="Product Title"
                               FontSize="14" FontWeight="SemiBold" Foreground="White"
                               TextTrimming="CharacterEllipsis" MaxWidth="250"/>

                    <!-- Price / Subtitle -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock x:Name="PriceText" Text="$0.00"
                                   FontSize="16" FontWeight="Bold" Foreground="#43B581"/>
                        <TextBlock x:Name="OriginalPriceText" Text="" FontSize="12"
                                   Foreground="#72767D" TextDecorations="Strikethrough"
                                   Margin="8,2,0,0" VerticalAlignment="Center"/>
                        <Border x:Name="SaleBadge" Background="#ED4245" CornerRadius="3"
                                Padding="4,1" Margin="8,0,0,0" Visibility="Collapsed">
                            <TextBlock x:Name="SaleText" Text="-20%" FontSize="10"
                                       Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <!-- Seller -->
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <Border Width="18" Height="18" CornerRadius="9" Background="#36393F">
                            <Image x:Name="SellerAvatar" Stretch="UniformToFill"/>
                        </Border>
                        <TextBlock x:Name="SellerName" Text="Seller" FontSize="11"
                                   Foreground="#B5BAC1" Margin="6,0,0,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="SellerBadge" Text="" FontSize="10"
                                   Margin="4,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Reactions Row -->
            <StackPanel x:Name="ReactionsPanel" Grid.Row="2" Orientation="Horizontal"
                        Margin="12,10,12,0">
                <!-- Reactions will be added dynamically -->
            </StackPanel>

            <!-- Action Bar -->
            <Border x:Name="ActionBar" Grid.Row="3" Background="#232428"
                    CornerRadius="0,0,8,8" Padding="8,6" Margin="0,10,0,0"
                    Opacity="0.7">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Actions -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <!-- React Button -->
                        <Button x:Name="ReactButton" Style="{StaticResource IconButton}"
                                ToolTip="Add Reaction" Click="ReactButton_Click"
                                Width="28" Height="28">
                            <TextBlock Text="ðŸ˜Š" FontSize="14"/>
                        </Button>

                        <!-- Copy Link Button -->
                        <Button x:Name="CopyLinkButton" Style="{StaticResource IconButton}"
                                ToolTip="Copy Link" Click="CopyLinkButton_Click"
                                Width="28" Height="28" Margin="4,0,0,0">
                            <TextBlock Text="ðŸ”—" FontSize="14"/>
                        </Button>

                        <!-- Share Button -->
                        <Button x:Name="ShareButton" Style="{StaticResource IconButton}"
                                ToolTip="Share" Click="ShareButton_Click"
                                Width="28" Height="28" Margin="4,0,0,0">
                            <TextBlock Text="â†—" FontSize="14"/>
                        </Button>
                    </StackPanel>

                    <!-- Right Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Bid Button (for auctions) -->
                        <Button x:Name="BidButton" Visibility="Collapsed"
                                Click="BidButton_Click" Margin="0,0,8,0"
                                Height="26" Padding="10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FAA61A" Offset="0"/>
                                                <GradientStop Color="#F57F17" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”¨" FontSize="11" Margin="0,0,4,0"/>
                                <TextBlock x:Name="BidButtonText" Text="Bid" FontSize="11" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <!-- View Button -->
                        <Button x:Name="ViewButton" Click="ViewButton_Click"
                                Height="26" Padding="12,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#5865F2"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}"
                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#4752C4"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="View" FontSize="11" FontWeight="SemiBold"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Copy Success Overlay -->
            <Border x:Name="CopySuccessOverlay" Grid.RowSpan="4" Background="#E043B581"
                    CornerRadius="8" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="âœ“" FontSize="32" Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Link Copied!" FontSize="14" Foreground="White"
                               FontWeight="SemiBold" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
