<UserControl x:Class="VeaMarketplace.Client.Controls.OnlineStatusSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border x:Name="RootBorder" Background="{StaticResource SecondaryDarkBrush}"
            CornerRadius="8" Padding="4"
            Effect="{StaticResource PopupShadow}">
        <StackPanel>
            <!-- Online -->
            <Border x:Name="OnlineOption" Background="Transparent"
                    CornerRadius="4" Padding="12,10" Cursor="Hand"
                    MouseLeftButtonDown="StatusOption_Click" Tag="Online">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource TertiaryDarkBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Width="10" Height="10"
                             Fill="{StaticResource AccentGreenBrush}" Margin="0,0,12,0"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Online" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Show that you're available" FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="OnlineCheck" Grid.Column="2" Text="âœ“"
                               FontSize="14" Foreground="{StaticResource AccentGreenBrush}"
                               VerticalAlignment="Center" Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Idle -->
            <Border x:Name="IdleOption" Background="Transparent"
                    CornerRadius="4" Padding="12,10" Cursor="Hand"
                    MouseLeftButtonDown="StatusOption_Click" Tag="Idle">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource TertiaryDarkBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="10" Height="10" Margin="0,0,12,0">
                        <Ellipse Fill="{StaticResource AccentYellowBrush}"/>
                        <Ellipse Width="6" Height="6" Fill="{StaticResource SecondaryDarkBrush}"
                                 HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-1,-1,0"/>
                    </Grid>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Idle" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="You may not be at your keyboard" FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="IdleCheck" Grid.Column="2" Text="âœ“"
                               FontSize="14" Foreground="{StaticResource AccentGreenBrush}"
                               VerticalAlignment="Center" Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Do Not Disturb -->
            <Border x:Name="DndOption" Background="Transparent"
                    CornerRadius="4" Padding="12,10" Cursor="Hand"
                    MouseLeftButtonDown="StatusOption_Click" Tag="DoNotDisturb">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource TertiaryDarkBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="10" Height="10" Margin="0,0,12,0">
                        <Ellipse Fill="{StaticResource AccentRedBrush}"/>
                        <Rectangle Width="6" Height="2" Fill="{StaticResource SecondaryDarkBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Do Not Disturb" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Mute all notifications" FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="DndCheck" Grid.Column="2" Text="âœ“"
                               FontSize="14" Foreground="{StaticResource AccentGreenBrush}"
                               VerticalAlignment="Center" Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Invisible -->
            <Border x:Name="InvisibleOption" Background="Transparent"
                    CornerRadius="4" Padding="12,10" Cursor="Hand"
                    MouseLeftButtonDown="StatusOption_Click" Tag="Invisible">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource TertiaryDarkBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="10" Height="10" Margin="0,0,12,0">
                        <Ellipse Stroke="{StaticResource TextMutedBrush}" StrokeThickness="2"
                                 Fill="Transparent"/>
                    </Grid>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Invisible" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Appear offline but stay connected" FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="InvisibleCheck" Grid.Column="2" Text="âœ“"
                               FontSize="14" Foreground="{StaticResource AccentGreenBrush}"
                               VerticalAlignment="Center" Visibility="Collapsed"/>
                </Grid>
            </Border>

            <Separator Background="{StaticResource QuaternaryDarkBrush}" Margin="8,4"/>

            <!-- Custom Status -->
            <Border Background="Transparent"
                    CornerRadius="4" Padding="12,10" Cursor="Hand"
                    MouseLeftButtonDown="SetCustomStatus_Click">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource TertiaryDarkBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="ðŸ˜Š" FontSize="14" Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="1" Text="Set a custom status"
                               FontSize="14" Foreground="{StaticResource TextPrimaryBrush}"/>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
