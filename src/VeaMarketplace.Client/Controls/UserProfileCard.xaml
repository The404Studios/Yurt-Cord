<UserControl x:Class="VeaMarketplace.Client.Controls.UserProfileCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="300" MaxWidth="340">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource SecondaryDarkBrush}"
            CornerRadius="8"
            Effect="{StaticResource CardShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Banner/Header with accent color -->
            <Border x:Name="BannerBorder" Grid.Row="0" Height="60" CornerRadius="8,8,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop x:Name="BannerColor1" Color="{StaticResource AccentBlurple}" Offset="0"/>
                        <GradientStop x:Name="BannerColor2" Color="{StaticResource AccentPink}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Avatar overlapping banner -->
            <Border Grid.Row="0" Grid.RowSpan="2"
                    Width="84" Height="84"
                    CornerRadius="42"
                    BorderThickness="5"
                    BorderBrush="{StaticResource SecondaryDarkBrush}"
                    Margin="16,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                <Ellipse x:Name="AvatarEllipse" Width="74" Height="74">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="AvatarBrush" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Border>

            <!-- Online status indicator -->
            <Border x:Name="StatusIndicator" Grid.Row="0" Grid.RowSpan="2"
                    Width="24" Height="24"
                    CornerRadius="12"
                    BorderThickness="4"
                    BorderBrush="{StaticResource SecondaryDarkBrush}"
                    Background="{StaticResource AccentGreenBrush}"
                    Margin="70,74,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"/>

            <!-- User Info Section -->
            <StackPanel Grid.Row="1" Margin="16,36,16,0">
                <!-- Username and badges row -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="DisplayNameText"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>

                    <!-- Role Badge -->
                    <Border x:Name="RoleBadge"
                            CornerRadius="3"
                            Padding="6,2"
                            Margin="8,0,0,0"
                            Background="{StaticResource AccentBrush}"
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                        <TextBlock x:Name="RoleBadgeText"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Username/handle -->
                <TextBlock x:Name="UsernameText"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Content Section -->
            <StackPanel Grid.Row="2" Margin="16,16,16,16">
                <!-- Divider -->
                <Border Height="1" Background="{StaticResource QuaternaryDarkBrush}" Margin="0,0,0,12"/>

                <!-- Status Section -->
                <StackPanel x:Name="StatusSection" Visibility="Collapsed">
                    <TextBlock Text="STATUS"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="StatusText"
                               FontSize="13"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                </StackPanel>

                <!-- About Me Section -->
                <StackPanel x:Name="AboutSection" Visibility="Collapsed">
                    <TextBlock Text="ABOUT ME"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="BioText"
                               FontSize="13"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               MaxHeight="80"
                               Margin="0,0,0,12"/>
                </StackPanel>

                <!-- Member Since Section -->
                <TextBlock Text="MEMBER SINCE"
                           FontSize="11"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBlock x:Name="MemberSinceText"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,12"/>

                <!-- Roles Section -->
                <StackPanel x:Name="RolesSection" Visibility="Collapsed">
                    <TextBlock Text="ROLES"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <ItemsControl x:Name="RolesItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="3"
                                        Padding="8,4"
                                        Margin="0,0,4,4"
                                        Background="{StaticResource QuaternaryDarkBrush}">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10"
                                                 Fill="{Binding Color}"
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel x:Name="ActionsPanel" Orientation="Horizontal" Margin="0,8,0,0" Visibility="Collapsed">
                    <Button x:Name="SendMessageBtn"
                            Content="Message"
                            Style="{StaticResource PrimaryButton}"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Click="SendMessage_Click"/>
                    <Button x:Name="AddFriendBtn"
                            Content="Add Friend"
                            Style="{StaticResource SecondaryButton}"
                            Padding="16,8"
                            Click="AddFriend_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
