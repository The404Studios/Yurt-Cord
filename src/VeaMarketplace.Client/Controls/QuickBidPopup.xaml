<UserControl x:Class="VeaMarketplace.Client.Controls.QuickBidPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="320">

    <UserControl.Resources>
        <Storyboard x:Key="ShowAnimation">
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="0.95" To="1" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="0.95" To="1" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource ShowAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Border x:Name="MainBorder" Background="#2B2D31" CornerRadius="8"
            BorderThickness="1" BorderBrush="#3F4147" Opacity="0"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform x:Name="MainScale"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#232428" CornerRadius="8,8,0,0"
                    Padding="16,12">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”¨" FontSize="18" Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Place a Bid" FontSize="16" FontWeight="SemiBold"
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button x:Name="CloseButton" Content="âœ•" HorizontalAlignment="Right"
                            Style="{StaticResource IconButton}" Width="24" Height="24"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Item Info -->
            <StackPanel Grid.Row="1" Margin="16,12,16,0">
                <TextBlock x:Name="ItemTitle" Text="Item Name" FontSize="14"
                           FontWeight="Medium" Foreground="White"
                           TextTrimming="CharacterEllipsis"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Current Bid:" FontSize="12" Foreground="#72767D"/>
                    <TextBlock x:Name="CurrentBidText" Text="$0.00" FontSize="12"
                               Foreground="#43B581" FontWeight="SemiBold" Margin="6,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                    <TextBlock Text="Time Left:" FontSize="12" Foreground="#72767D"/>
                    <TextBlock x:Name="TimeLeftText" Text="2h 30m" FontSize="12"
                               Foreground="#FAA61A" FontWeight="Medium" Margin="6,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Bid Amount -->
            <StackPanel Grid.Row="2" Margin="16,16,16,0">
                <TextBlock Text="YOUR BID" FontSize="11" FontWeight="Bold"
                           Foreground="#72767D" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Decrease Button -->
                    <Button Grid.Column="0" Content="-" Width="36" Height="36"
                            Style="{StaticResource SecondaryButton}"
                            Click="DecreaseButton_Click" FontSize="18"/>

                    <!-- Bid Input -->
                    <Border Grid.Column="1" Background="#1E1F22" CornerRadius="4"
                            Margin="8,0">
                        <Grid>
                            <TextBlock Text="$" FontSize="16" Foreground="#72767D"
                                       Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <TextBox x:Name="BidInput" Text="0.00" FontSize="18"
                                     FontWeight="SemiBold" Foreground="White"
                                     Background="Transparent" BorderThickness="0"
                                     TextAlignment="Center" VerticalContentAlignment="Center"
                                     Height="36" Padding="24,0,8,0"
                                     TextChanged="BidInput_TextChanged"/>
                        </Grid>
                    </Border>

                    <!-- Increase Button -->
                    <Button Grid.Column="2" Content="+" Width="36" Height="36"
                            Style="{StaticResource SecondaryButton}"
                            Click="IncreaseButton_Click" FontSize="18"/>
                </Grid>

                <!-- Quick Bid Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"
                            HorizontalAlignment="Center">
                    <Button x:Name="Bid1Button" Content="+$1" Padding="12,6"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,6,0"
                            Click="QuickBidButton_Click" Tag="1"/>
                    <Button x:Name="Bid5Button" Content="+$5" Padding="12,6"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,6,0"
                            Click="QuickBidButton_Click" Tag="5"/>
                    <Button x:Name="Bid10Button" Content="+$10" Padding="12,6"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,6,0"
                            Click="QuickBidButton_Click" Tag="10"/>
                    <Button x:Name="Bid25Button" Content="+$25" Padding="12,6"
                            Style="{StaticResource SecondaryButton}"
                            Click="QuickBidButton_Click" Tag="25"/>
                </StackPanel>
            </StackPanel>

            <!-- Error Message -->
            <Border x:Name="ErrorBorder" Grid.Row="3" Background="#40ED4245"
                    CornerRadius="4" Margin="16,12,16,0" Padding="10,8"
                    Visibility="Collapsed">
                <TextBlock x:Name="ErrorText" Text="" FontSize="12"
                           Foreground="#ED4245" TextWrapping="Wrap"/>
            </Border>

            <!-- Action Buttons -->
            <Grid Grid.Row="4" Margin="16,16,16,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Cancel" Height="40"
                        Style="{StaticResource SecondaryButton}"
                        Click="CancelButton_Click"/>

                <Button x:Name="PlaceBidButton" Grid.Column="2" Height="40"
                        Click="PlaceBidButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="4"
                                                Padding="16,10">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#FAA61A" Offset="0"/>
                                                    <GradientStop Color="#F57F17" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center">
                                                <TextBlock Text="ðŸ”¨" FontSize="14"
                                                           Margin="0,0,8,0"/>
                                                <TextBlock x:Name="BidText" Text="Place Bid"
                                                           FontSize="14" FontWeight="SemiBold"
                                                           Foreground="White"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#F57F17" Offset="0"/>
                                                            <GradientStop Color="#E65100" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background"
                                                        Value="#404249"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
