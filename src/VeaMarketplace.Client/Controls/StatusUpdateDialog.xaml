<UserControl x:Class="VeaMarketplace.Client.Controls.StatusUpdateDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Status Option Style -->
        <Style x:Key="StatusOption" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="Transparent"
                                CornerRadius="8" Padding="12,10" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0" Width="12" Height="12"
                                         Fill="{TemplateBinding Tag}" Margin="0,0,12,0"/>

                                <TextBlock Grid.Column="1" Text="{TemplateBinding Content}"
                                           Foreground="White" FontSize="14"
                                           VerticalAlignment="Center"/>

                                <Ellipse x:Name="checkmark" Grid.Column="2"
                                         Width="20" Height="20"
                                         Stroke="#5865F2" StrokeThickness="2"
                                         Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#36393F"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#36393F"/>
                                <Setter TargetName="checkmark" Property="Fill" Value="#5865F2"/>
                                <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Emoji Button Style -->
        <Style x:Key="EmojiButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#40444B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#2B2D31" CornerRadius="12">
        <StackPanel>
            <!-- Header -->
            <Border Padding="16" BorderBrush="#1E1F22" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="Set Status" FontSize="18" FontWeight="Bold"
                               Foreground="White"/>
                    <Button Content="X" Style="{StaticResource IconButton}"
                            Width="28" Height="28" HorizontalAlignment="Right"
                            Click="Close_Click"/>
                </Grid>
            </Border>

            <!-- Status Options -->
            <StackPanel Margin="16,12,16,0">
                <TextBlock Text="STATUS" FontSize="11" FontWeight="Bold"
                           Foreground="#72767D" Margin="0,0,0,8"/>

                <RadioButton x:Name="OnlineOption" Style="{StaticResource StatusOption}"
                             Content="Online" Tag="#43B581" GroupName="Status"
                             IsChecked="True" Checked="StatusOption_Checked"/>
                <RadioButton x:Name="IdleOption" Style="{StaticResource StatusOption}"
                             Content="Idle" Tag="#FAA61A" GroupName="Status"
                             Checked="StatusOption_Checked"/>
                <RadioButton x:Name="DndOption" Style="{StaticResource StatusOption}"
                             Content="Do Not Disturb" Tag="#ED4245" GroupName="Status"
                             Checked="StatusOption_Checked"/>
                <RadioButton x:Name="InvisibleOption" Style="{StaticResource StatusOption}"
                             Content="Invisible" Tag="#747F8D" GroupName="Status"
                             Checked="StatusOption_Checked"/>
            </StackPanel>

            <!-- Custom Status -->
            <StackPanel Margin="16,16,16,0">
                <TextBlock Text="CUSTOM STATUS" FontSize="11" FontWeight="Bold"
                           Foreground="#72767D" Margin="0,0,0,8"/>

                <Border Background="#1E1F22" CornerRadius="8" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Emoji Selector -->
                        <Button x:Name="EmojiButton" Grid.Column="0" Style="{StaticResource EmojiButton}"
                                Click="SelectEmoji_Click" Margin="0,0,8,0">
                            <TextBlock x:Name="SelectedEmoji" Text="ðŸ˜Š" FontSize="24"/>
                        </Button>

                        <TextBox x:Name="StatusTextBox" Grid.Column="1"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="White" FontSize="14"
                                 CaretBrush="White" MaxLength="128"
                                 TextChanged="StatusText_Changed"/>
                    </Grid>
                </Border>

                <!-- Placeholder -->
                <TextBlock Text="What's on your mind?" Foreground="#72767D"
                           FontSize="14" Margin="60,-30,0,0" IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=StatusTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Character Counter -->
                <TextBlock x:Name="CharCountText" Text="0/128" FontSize="11"
                           Foreground="#5D6269" HorizontalAlignment="Right"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Quick Emoji Grid -->
            <Border x:Name="EmojiPicker" Visibility="Collapsed" Margin="16,8,16,0"
                    Background="#1E1F22" CornerRadius="8" Padding="8">
                <WrapPanel x:Name="QuickEmojis">
                    <!-- Populated in code-behind -->
                </WrapPanel>
            </Border>

            <!-- Clear After Option -->
            <StackPanel Margin="16,16,16,0">
                <TextBlock Text="CLEAR AFTER" FontSize="11" FontWeight="Bold"
                           Foreground="#72767D" Margin="0,0,0,8"/>

                <ComboBox x:Name="ClearAfterCombo" Style="{StaticResource ModernComboBox}"
                          SelectionChanged="ClearAfter_Changed">
                    <ComboBoxItem Content="Don't clear" Tag="0" IsSelected="True"/>
                    <ComboBoxItem Content="30 minutes" Tag="30"/>
                    <ComboBoxItem Content="1 hour" Tag="60"/>
                    <ComboBoxItem Content="4 hours" Tag="240"/>
                    <ComboBoxItem Content="Today" Tag="-1"/>
                </ComboBox>
            </StackPanel>

            <!-- Activity Section -->
            <StackPanel Margin="16,16,16,0">
                <TextBlock Text="ACTIVITY" FontSize="11" FontWeight="Bold"
                           Foreground="#72767D" Margin="0,0,0,8"/>

                <Border Background="#1E1F22" CornerRadius="8" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="ActivityTypeCombo" Grid.Column="0"
                                  Width="100" Margin="0,0,8,0">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Background" Value="#36393F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content="Playing" IsSelected="True"/>
                            <ComboBoxItem Content="Listening to"/>
                            <ComboBoxItem Content="Watching"/>
                            <ComboBoxItem Content="Streaming"/>
                        </ComboBox>

                        <TextBox x:Name="ActivityTextBox" Grid.Column="1"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="White" FontSize="14"
                                 CaretBrush="White"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Clear Status"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,8,0" Click="ClearStatus_Click"/>

                <Button Grid.Column="1" Content="Save"
                        Style="{StaticResource PrimaryButton}"
                        Margin="8,0,0,0" Click="Save_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
