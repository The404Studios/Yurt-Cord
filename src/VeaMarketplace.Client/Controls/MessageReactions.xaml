<UserControl x:Class="VeaMarketplace.Client.Controls.MessageReactions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls">

    <ItemsControl x:Name="ReactionsItemsControl">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Button Style="{StaticResource ReactionButton}"
                        Click="ReactionButton_Click"
                        ToolTip="{Binding Tooltip}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Emoji}" FontSize="14" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding Count}" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Button>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
