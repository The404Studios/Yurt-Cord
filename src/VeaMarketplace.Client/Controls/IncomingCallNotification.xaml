<UserControl x:Class="VeaMarketplace.Client.Controls.IncomingCallNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="380">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Ringing Animation -->
        <Storyboard x:Key="RingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="RingIcon"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="-15" To="15" Duration="0:0:0.1" AutoReverse="True"/>
        </Storyboard>

        <!-- Pulse Animation -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="PulseRing1"
                             Storyboard.TargetProperty="Opacity"
                             From="0.8" To="0" Duration="0:0:1.5"/>
            <DoubleAnimation Storyboard.TargetName="PulseRing1"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1" To="1.5" Duration="0:0:1.5"/>
            <DoubleAnimation Storyboard.TargetName="PulseRing1"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1" To="1.5" Duration="0:0:1.5"/>

            <DoubleAnimation Storyboard.TargetName="PulseRing2"
                             Storyboard.TargetProperty="Opacity"
                             From="0.8" To="0" Duration="0:0:1.5" BeginTime="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="PulseRing2"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1" To="1.5" Duration="0:0:1.5" BeginTime="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="PulseRing2"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1" To="1.5" Duration="0:0:1.5" BeginTime="0:0:0.5"/>
        </Storyboard>

        <!-- Call Button Style -->
        <Style x:Key="CallActionButton" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource RingAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Border Background="#2B2D31" CornerRadius="16" Padding="24">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="8" BlurRadius="24"
                              Color="Black" Opacity="0.6"/>
        </Border.Effect>

        <StackPanel>
            <!-- Call Type Header -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <TextBlock x:Name="RingIcon" Text="ðŸ””" FontSize="18"
                           RenderTransformOrigin="0.5,0.5" Margin="0,0,8,0">
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="CallTypeText" Text="Incoming Call" FontSize="14"
                           Foreground="#B5BAC1" FontWeight="Medium"/>
            </StackPanel>

            <!-- Caller Info -->
            <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
                <!-- Pulse Rings -->
                <Ellipse x:Name="PulseRing1" Width="100" Height="100"
                         Stroke="#43B581" StrokeThickness="2"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse x:Name="PulseRing2" Width="100" Height="100"
                         Stroke="#43B581" StrokeThickness="2"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <!-- Avatar(s) -->
                <Grid x:Name="SingleAvatarContainer">
                    <Ellipse Width="100" Height="100">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="CallerAvatar" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>

                <!-- Group Call Avatars (shown for group calls) -->
                <Grid x:Name="GroupAvatarsContainer" Visibility="Collapsed">
                    <Ellipse Width="60" Height="60" Margin="-30,0,0,0"
                             HorizontalAlignment="Left">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="GroupAvatar1" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Width="60" Height="60" Stroke="#2B2D31" StrokeThickness="3">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="GroupAvatar2" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Border Width="30" Height="30" CornerRadius="15"
                            Background="#4F545C" Margin="30,0,0,0"
                            HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Visibility="Collapsed" x:Name="MoreParticipantsBadge">
                        <TextBlock x:Name="MoreParticipantsText" Text="+2"
                                   FontSize="11" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>

            <!-- Caller Name -->
            <TextBlock x:Name="CallerNameText" FontSize="20" FontWeight="Bold"
                       Foreground="White" HorizontalAlignment="Center"
                       Margin="0,0,0,4"/>

            <!-- Call Name (for group calls) -->
            <TextBlock x:Name="CallNameText" FontSize="14" Foreground="#72767D"
                       HorizontalAlignment="Center" Margin="0,0,0,8"
                       Visibility="Collapsed"/>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText" Text="Incoming voice call..."
                       FontSize="13" Foreground="#B5BAC1"
                       HorizontalAlignment="Center" Margin="0,0,0,4"/>

            <!-- Participants Count (for group calls) -->
            <TextBlock x:Name="ParticipantsText" FontSize="12"
                       Foreground="#72767D" HorizontalAlignment="Center"
                       Visibility="Collapsed"/>

            <!-- Auto-decline timer -->
            <TextBlock x:Name="TimerText" FontSize="11" Foreground="#5D6269"
                       HorizontalAlignment="Center" Margin="0,8,0,0"/>

            <!-- Action Buttons -->
            <Grid Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Decline Button -->
                <Button Grid.Column="0" Style="{StaticResource CallActionButton}"
                        Background="#ED4245" HorizontalAlignment="Right"
                        Margin="0,0,16,0" Click="Decline_Click">
                    <TextBlock Text="ðŸ“µ" FontSize="26"/>
                </Button>

                <!-- Video Call Toggle (optional) -->
                <Button x:Name="VideoCallButton" Grid.Column="1"
                        Style="{StaticResource CallActionButton}"
                        Background="#4F545C" Width="48" Height="48"
                        Click="VideoAccept_Click" ToolTip="Accept with Video">
                    <TextBlock Text="ðŸ“¹" FontSize="20"/>
                </Button>

                <!-- Accept Button -->
                <Button Grid.Column="2" Style="{StaticResource CallActionButton}"
                        Background="#43B581" HorizontalAlignment="Left"
                        Margin="16,0,0,0" Click="Accept_Click">
                    <TextBlock Text="ðŸ“ž" FontSize="26"/>
                </Button>
            </Grid>

            <!-- Quick Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        Margin="0,16,0,0">
                <Button Click="DeclineWithMessage_Click" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="#72767D"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="8,4">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="Reply with message" FontSize="12"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
