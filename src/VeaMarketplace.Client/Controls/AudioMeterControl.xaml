<UserControl x:Class="VeaMarketplace.Client.Controls.AudioMeterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="100" Width="24">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- Background track -->
        <Border Background="{StaticResource PrimaryDarkBrush}" CornerRadius="4"/>

        <!-- Level segments -->
        <StackPanel x:Name="LevelSegments" VerticalAlignment="Bottom" Margin="2">
            <!-- Segments will be added programmatically -->
        </StackPanel>

        <!-- Peak indicator -->
        <Border x:Name="PeakIndicator" Height="4" CornerRadius="2"
                Background="{StaticResource AccentPinkBrush}"
                VerticalAlignment="Bottom" Margin="2"
                Visibility="Collapsed"/>
    </Grid>
</UserControl>
