<UserControl x:Class="VeaMarketplace.Client.Controls.VolumeSliderPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="280">

    <UserControl.Resources>
        <!-- Custom Slider Thumb -->
        <Style x:Key="SliderThumb" TargetType="Thumb">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse Fill="White" Width="18" Height="18">
                            <Ellipse.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="4"
                                                  Color="Black" Opacity="0.3"/>
                            </Ellipse.Effect>
                        </Ellipse>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Slider Style -->
        <Style x:Key="VolumeSlider" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="TrackBackground" Grid.Row="1"
                                    Height="6" CornerRadius="3"
                                    Background="#40444B" Margin="9,0"/>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="#5865F2" CornerRadius="3"
                                                        Height="6" Margin="9,0,-4,0"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#1E1F22" CornerRadius="12" Padding="16">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="4" BlurRadius="16"
                              Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- User Avatar -->
                <Ellipse Grid.Column="0" Width="40" Height="40" Margin="0,0,12,0">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="UserAvatarBrush" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- User Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="UsernameText" FontSize="14" FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock x:Name="StatusText" FontSize="11" Foreground="#72767D"/>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="2" Content="X" Style="{StaticResource IconButton}"
                        Width="28" Height="28" Click="Close_Click"/>
            </Grid>

            <!-- Volume Section -->
            <Border Background="#2B2D31" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="User Volume" FontSize="12" FontWeight="SemiBold"
                                   Foreground="#B5BAC1"/>
                        <TextBlock x:Name="VolumePercentText" Text="100%"
                                   FontSize="12" Foreground="White"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <Slider x:Name="VolumeSlider" Style="{StaticResource VolumeSlider}"
                            Minimum="0" Maximum="200" Value="100"
                            ValueChanged="VolumeSlider_ValueChanged"/>

                    <Grid Margin="0,8,0,0">
                        <TextBlock Text="0%" FontSize="10" Foreground="#72767D"/>
                        <TextBlock Text="200%" FontSize="10" Foreground="#72767D"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Quick Actions -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Click="Mute_Click" Margin="0,0,4,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#36393F"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#40444B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="MuteIcon" Text="ðŸ”Š" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock x:Name="MuteText" Text="Mute" FontSize="12"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" Click="Reset_Click" Margin="4,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#36393F"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#40444B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â†º" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Reset" FontSize="12"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Audio Level Preview -->
            <Border Background="#2B2D31" CornerRadius="8" Padding="12" Margin="0,12,0,0">
                <StackPanel>
                    <TextBlock Text="Audio Level Preview" FontSize="11" FontWeight="SemiBold"
                               Foreground="#72767D" Margin="0,0,0,8"/>
                    <Grid>
                        <Border Background="#40444B" CornerRadius="3" Height="8"/>
                        <Border x:Name="AudioLevelPreview" Background="#43B581"
                                CornerRadius="3" Height="8"
                                HorizontalAlignment="Left" Width="0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
