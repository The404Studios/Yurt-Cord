    </UserControl.Resources>

    <UserControl.RenderTransform>
        <TranslateTransform/>
    </UserControl.RenderTransform>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.2"/>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                     From="10" To="0" Duration="0:0:0.2">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid x:Name="MessageContainer" Margin="0,2"
          ContextMenu="{StaticResource MessageContextMenu}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Avatar -->
        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20"
                Margin="0,0,12,0" VerticalAlignment="Top"
                x:Name="AvatarBorder" Cursor="Hand"
                ContextMenu="{StaticResource UserContextMenu}"
                MouseLeftButtonDown="Avatar_MouseLeftButtonDown">
            <Border.Background>
                <ImageBrush x:Name="AvatarImage" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <!-- Message Content -->
        <StackPanel Grid.Column="1">
            <!-- Header: Username, Role Badge, Timestamp -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock x:Name="UsernameText"
                           FontWeight="Medium"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Cursor="Hand"
                           ContextMenu="{StaticResource UserContextMenu}"
                           MouseLeftButtonDown="Username_MouseLeftButtonDown"/>
                <Border x:Name="RoleBadge" CornerRadius="3"
                        Padding="6,1" Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                    <TextBlock x:Name="RoleText" FontSize="10" FontWeight="Bold"
                               Foreground="White"/>
                </Border>
                <Border x:Name="RankBadge" CornerRadius="3"
                        Padding="6,1" Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                    <TextBlock x:Name="RankText" FontSize="10" FontWeight="Bold"
                               Foreground="White"/>
                </Border>
                <TextBlock x:Name="TimestampText"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="11"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message Text -->
            <TextBlock x:Name="MessageText"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       MaxWidth="600"
                       HorizontalAlignment="Left"/>

            <!-- Attachments Area -->
            <ItemsControl x:Name="AttachmentsContainer" Margin="0,8,0,0"
                          Visibility="Collapsed">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!-- Embeds Area (Shared Posts, Products, Auctions) -->
            <StackPanel x:Name="EmbedsContainer" Margin="0,8,0,0"
                        Visibility="Collapsed">
                <!-- Embeds will be added dynamically -->
            </StackPanel>

            <!-- Reactions Area -->
            <StackPanel x:Name="ReactionsContainer" Orientation="Horizontal"
                        Margin="0,8,0,0" Visibility="Collapsed">
                <!-- Reactions will be added dynamically -->
            </StackPanel>
        </StackPanel>

        <!-- Hover Actions -->
        <Border x:Name="ActionsPanel" Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Background="{StaticResource SecondaryDarkBrush}"
                CornerRadius="4" Padding="4"
                Visibility="Collapsed" Margin="0,-8,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource IconButton}" Width="28" Height="28" ToolTip="React">
                    <TextBlock Text="ðŸ˜Š" FontSize="14"/>
                </Button>
                <Button Style="{StaticResource IconButton}" Width="28" Height="28" ToolTip="Reply">
                    <TextBlock Text="â†©" FontSize="14"/>
                </Button>
                <Button Style="{StaticResource IconButton}" Width="28" Height="28" ToolTip="More">
                    <TextBlock Text="â‹®" FontSize="14"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- User Profile Popup -->
        <Popup x:Name="UserProfilePopup"
               PlacementTarget="{Binding ElementName=AvatarBorder}"
               Placement="Right"
               HorizontalOffset="8"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">
            <Border Background="Transparent" Padding="4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.5"/>
                </Border.Effect>
                <controls:UserProfileCard x:Name="ProfileCard"
                                          ShowActions="True"
                                          SendMessageClicked="ProfileCard_SendMessageClicked"
                                          AddFriendClicked="ProfileCard_AddFriendClicked"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
