<UserControl x:Class="VeaMarketplace.Client.Controls.ChatMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:VeaMarketplace.Client.Converters">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:RoleToColorConverter x:Key="RoleToColor"/>
            <converters:RankToBadgeConverter x:Key="RankToBadge"/>
            <converters:TimestampConverter x:Key="TimestampConverter"/>

            <!-- User Context Menu -->
            <ContextMenu x:Key="UserContextMenu" Style="{StaticResource ModernContextMenu}">
                <MenuItem Header="View Profile" Style="{StaticResource ModernMenuItem}"
                          Click="ViewProfile_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ‘¤" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Send Message" Style="{StaticResource ModernMenuItem}"
                          Click="SendMessage_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ’¬" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Add Friend" Style="{StaticResource ModernMenuItem}"
                          Click="AddFriend_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ‘¥" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Mention" Style="{StaticResource ModernMenuItem}"
                          Click="Mention_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="@" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Mute" Style="{StaticResource ModernMenuItem}"
                          Click="MuteUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”‡" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Block" Style="{StaticResource DangerMenuItem}"
                          Click="BlockUser_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸš«" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Copy User ID" Style="{StaticResource ModernMenuItem}"
                          Click="CopyUserId_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>

            <!-- Message Context Menu -->
            <ContextMenu x:Key="MessageContextMenu" Style="{StaticResource ModernContextMenu}">
                <MenuItem Header="Reply" Style="{StaticResource ModernMenuItem}"
                          Click="Reply_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="â†©" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="React" Style="{StaticResource ModernMenuItem}"
                          Click="React_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ˜Š" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Copy Text" Style="{StaticResource ModernMenuItem}"
                          Click="CopyText_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“„" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Copy Message Link" Style="{StaticResource ModernMenuItem}"
                          Click="CopyMessageLink_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”—" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Pin Message" Style="{StaticResource ModernMenuItem}"
                          Click="PinMessage_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“Œ" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Style="{StaticResource MenuSeparator}"/>
                <MenuItem Header="Edit" Style="{StaticResource ModernMenuItem}"
                          x:Name="EditMenuItem" Click="EditMessage_Click"
                          Visibility="Collapsed">
                    <MenuItem.Icon>
                        <TextBlock Text="âœ" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Delete Message" Style="{StaticResource DangerMenuItem}"
                          x:Name="DeleteMenuItem" Click="DeleteMessage_Click"
                          Visibility="Collapsed">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ—‘" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator x:Name="DeleteSeparator" Style="{StaticResource MenuSeparator}" Visibility="Collapsed"/>
                <MenuItem Header="Copy Message ID" Style="{StaticResource ModernMenuItem}"
                          Click="CopyMessageId_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“‹" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.RenderTransform>
        <TranslateTransform/>
    </UserControl.RenderTransform>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.2"/>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                     From="10" To="0" Duration="0:0:0.2">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid x:Name="MessageContainer" Margin="0,2"
          ContextMenu="{StaticResource MessageContextMenu}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Avatar -->
        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20"
                Margin="0,0,12,0" VerticalAlignment="Top"
                x:Name="AvatarBorder" Cursor="Hand"
                ContextMenu="{StaticResource UserContextMenu}"
                MouseLeftButtonDown="Avatar_MouseLeftButtonDown">
            <Border.Background>
                <ImageBrush x:Name="AvatarImage" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <!-- Message Content -->
        <StackPanel Grid.Column="1">
            <!-- Header: Username, Role Badge, Timestamp -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock x:Name="UsernameText"
                           FontWeight="Medium"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Cursor="Hand"
                           ContextMenu="{StaticResource UserContextMenu}"
                           MouseLeftButtonDown="Username_MouseLeftButtonDown"/>
                <Border x:Name="RoleBadge" CornerRadius="3"
                        Padding="6,1" Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                    <TextBlock x:Name="RoleText" FontSize="10" FontWeight="Bold"
                               Foreground="White"/>
                </Border>
                <Border x:Name="RankBadge" CornerRadius="3"
                        Padding="6,1" Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                    <TextBlock x:Name="RankText" FontSize="10" FontWeight="Bold"
                               Foreground="White"/>
                </Border>
                <TextBlock x:Name="TimestampText"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="11"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message Text -->
            <TextBlock x:Name="MessageText"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       MaxWidth="600"
                       HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Hover Actions -->
        <Border x:Name="ActionsPanel" Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Background="{StaticResource SecondaryDarkBrush}"
                CornerRadius="4" Padding="4"
                Visibility="Collapsed" Margin="0,-8,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource IconButton}" Width="28" Height="28" ToolTip="React">
                    <TextBlock Text="ðŸ˜Š" FontSize="14"/>
                </Button>
                <Button Style="{StaticResource IconButton}" Width="28" Height="28" ToolTip="Reply">
                    <TextBlock Text="â†©" FontSize="14"/>
                </Button>
                <Button Style="{StaticResource IconButton}" Width="28" Height="28" ToolTip="More">
                    <TextBlock Text="â‹®" FontSize="14"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
