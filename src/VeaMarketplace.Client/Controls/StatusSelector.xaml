<UserControl x:Class="VeaMarketplace.Client.Controls.StatusSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource SecondaryDarkBrush}"
            CornerRadius="8"
            Padding="8">
        <StackPanel>
            <!-- Online -->
            <Border x:Name="StatusOnline"
                    Background="Transparent"
                    CornerRadius="4"
                    Padding="10,8"
                    Cursor="Hand"
                    MouseLeftButtonDown="StatusOnline_Click"
                    MouseEnter="Status_MouseEnter"
                    MouseLeave="Status_MouseLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Width="12" Height="12"
                             Fill="{StaticResource AccentGreenBrush}"
                             Margin="0,0,12,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Online"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <Ellipse x:Name="OnlineCheck" Grid.Column="2"
                             Width="16" Height="16"
                             Fill="{StaticResource AccentBrush}"
                             Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Idle -->
            <Border x:Name="StatusIdle"
                    Background="Transparent"
                    CornerRadius="4"
                    Padding="10,8"
                    Cursor="Hand"
                    MouseLeftButtonDown="StatusIdle_Click"
                    MouseEnter="Status_MouseEnter"
                    MouseLeave="Status_MouseLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Width="12" Height="12"
                             Fill="{StaticResource AccentYellowBrush}"
                             Margin="0,0,12,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Idle"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="You'll appear away"
                                   FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                    <Ellipse x:Name="IdleCheck" Grid.Column="2"
                             Width="16" Height="16"
                             Fill="{StaticResource AccentBrush}"
                             Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Do Not Disturb -->
            <Border x:Name="StatusDnd"
                    Background="Transparent"
                    CornerRadius="4"
                    Padding="10,8"
                    Cursor="Hand"
                    MouseLeftButtonDown="StatusDnd_Click"
                    MouseEnter="Status_MouseEnter"
                    MouseLeave="Status_MouseLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Width="12" Height="12"
                             Fill="{StaticResource AccentRedBrush}"
                             Margin="0,0,12,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Do Not Disturb"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="You won't get notifications"
                                   FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                    <Ellipse x:Name="DndCheck" Grid.Column="2"
                             Width="16" Height="16"
                             Fill="{StaticResource AccentBrush}"
                             Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Invisible -->
            <Border x:Name="StatusInvisible"
                    Background="Transparent"
                    CornerRadius="4"
                    Padding="10,8"
                    Cursor="Hand"
                    MouseLeftButtonDown="StatusInvisible_Click"
                    MouseEnter="Status_MouseEnter"
                    MouseLeave="Status_MouseLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0" Width="12" Height="12"
                             Fill="{StaticResource TextMutedBrush}"
                             Margin="0,0,12,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Invisible"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="You'll appear offline"
                                   FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                    <Ellipse x:Name="InvisibleCheck" Grid.Column="2"
                             Width="16" Height="16"
                             Fill="{StaticResource AccentBrush}"
                             Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Divider -->
            <Separator Background="{StaticResource QuaternaryDarkBrush}"
                       Margin="8,8,8,8"/>

            <!-- Custom Status -->
            <Border Background="Transparent"
                    CornerRadius="4"
                    Padding="10,8"
                    Cursor="Hand"
                    MouseLeftButtonDown="SetCustomStatus_Click"
                    MouseEnter="Status_MouseEnter"
                    MouseLeave="Status_MouseLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="&#xE70F;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="1"
                               Text="Set Custom Status"
                               FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
