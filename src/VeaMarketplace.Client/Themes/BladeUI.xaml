    <!-- Message Card Own (sent by user) -->
    <Style x:Key="FloatingMessageCardOwn" TargetType="Border" BasedOn="{StaticResource FloatingMessageCard}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00B4D815" Offset="0"/>
                    <GradientStop Color="#48CAE410" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
