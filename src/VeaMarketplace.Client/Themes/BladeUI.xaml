<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════════════════════
         BLADE UI - Xbox 360 Guide Menu Inspired Theme with Origami Pop-Out Effects
         A premium, futuristic interface with layered depth and dramatic animations
    ═══════════════════════════════════════════════════════════════════════════════════ -->

    <!-- ══════════════════════════════════════════════════════════════════════════════
         BLADE COLOR PALETTE - Modern Teal Theme with Deep Blacks
    ══════════════════════════════════════════════════════════════════════════════ -->

    <!-- Core Blade Colors -->
    <Color x:Key="BladeBlack">#020408</Color>
    <Color x:Key="BladeDeep">#040810</Color>
    <Color x:Key="BladeDark">#081018</Color>
    <Color x:Key="BladeSurface">#0C1420</Color>
    <Color x:Key="BladePanelColor">#101828</Color>
    <Color x:Key="BladeElevated">#182030</Color>
    <Color x:Key="BladeHighlight">#202840</Color>

    <!-- Accent Colors - Refined Teal Theme -->
    <Color x:Key="BladeNeonGreen">#00B4D8</Color>
    <Color x:Key="BladeNeonCyan">#48CAE4</Color>
    <Color x:Key="BladeNeonBlue">#3B82F6</Color>
    <Color x:Key="BladeNeonPurple">#A855F7</Color>
    <Color x:Key="BladeNeonPink">#EC4899</Color>
    <Color x:Key="BladeNeonOrange">#F5A623</Color>
    <Color x:Key="BladeNeonRed">#EF4444</Color>
    <Color x:Key="BladeNeonYellow">#EAB308</Color>

    <!-- Text Colors -->
    <Color x:Key="BladeTextBright">#FFFFFF</Color>
    <Color x:Key="BladeTextPrimary">#E8F0FF</Color>
    <Color x:Key="BladeTextSecondary">#A0B0C8</Color>
    <Color x:Key="BladeTextDim">#607090</Color>
    <Color x:Key="BladeTextMuted">#405070</Color>

    <!-- Xbox Guide Blade Colors -->
    <Color x:Key="XboxGreen">#107C10</Color>
    <Color x:Key="XboxGreenLight">#5DC21E</Color>
    <Color x:Key="GuideBlade1">#1A4D1A</Color>
    <Color x:Key="GuideBlade2">#264D26</Color>
    <Color x:Key="GuideBlade3">#336633</Color>
    <Color x:Key="GuideBlade4">#408040</Color>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         SOLID COLOR BRUSHES
    ══════════════════════════════════════════════════════════════════════════════ -->

    <SolidColorBrush x:Key="BladeBlackBrush" Color="{StaticResource BladeBlack}"/>
    <SolidColorBrush x:Key="BladeDeepBrush" Color="{StaticResource BladeDeep}"/>
    <SolidColorBrush x:Key="BladeDarkBrush" Color="{StaticResource BladeDark}"/>
    <SolidColorBrush x:Key="BladeSurfaceBrush" Color="{StaticResource BladeSurface}"/>
    <SolidColorBrush x:Key="BladePanelBrush" Color="{StaticResource BladePanelColor}"/>
    <SolidColorBrush x:Key="BladeElevatedBrush" Color="{StaticResource BladeElevated}"/>
    <SolidColorBrush x:Key="BladeHighlightBrush" Color="{StaticResource BladeHighlight}"/>

    <SolidColorBrush x:Key="BladeNeonGreenBrush" Color="{StaticResource BladeNeonGreen}"/>
    <SolidColorBrush x:Key="BladeNeonCyanBrush" Color="{StaticResource BladeNeonCyan}"/>
    <SolidColorBrush x:Key="BladeNeonBlueBrush" Color="{StaticResource BladeNeonBlue}"/>
    <SolidColorBrush x:Key="BladeNeonPurpleBrush" Color="{StaticResource BladeNeonPurple}"/>
    <SolidColorBrush x:Key="BladeNeonPinkBrush" Color="{StaticResource BladeNeonPink}"/>
    <SolidColorBrush x:Key="BladeNeonOrangeBrush" Color="{StaticResource BladeNeonOrange}"/>
    <SolidColorBrush x:Key="BladeNeonRedBrush" Color="{StaticResource BladeNeonRed}"/>
    <SolidColorBrush x:Key="BladeNeonYellowBrush" Color="{StaticResource BladeNeonYellow}"/>

    <SolidColorBrush x:Key="BladeTextBrightBrush" Color="{StaticResource BladeTextBright}"/>
    <SolidColorBrush x:Key="BladeTextPrimaryBrush" Color="{StaticResource BladeTextPrimary}"/>
    <SolidColorBrush x:Key="BladeTextSecondaryBrush" Color="{StaticResource BladeTextSecondary}"/>
    <SolidColorBrush x:Key="BladeTextDimBrush" Color="{StaticResource BladeTextDim}"/>
    <SolidColorBrush x:Key="BladeTextMutedBrush" Color="{StaticResource BladeTextMuted}"/>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         GRADIENT BRUSHES - Holographic and Blade Effects
    ══════════════════════════════════════════════════════════════════════════════ -->

    <!-- Accent Gradient -->
    <LinearGradientBrush x:Key="HolographicGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00B4D8" Offset="0"/>
        <GradientStop Color="#48CAE4" Offset="0.5"/>
        <GradientStop Color="#0096B8" Offset="1"/>
    </LinearGradientBrush>

    <!-- Blade Panel Gradient (Xbox 360 Guide inspired) -->
    <LinearGradientBrush x:Key="BladePanelGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#15202D" Offset="0"/>
        <GradientStop Color="#1A2838" Offset="0.5"/>
        <GradientStop Color="#0F1820" Offset="1"/>
    </LinearGradientBrush>

    <!-- Blade Active Gradient -->
    <LinearGradientBrush x:Key="BladeActiveGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#00B4D815" Offset="0"/>
        <GradientStop Color="#48CAE430" Offset="0.5"/>
        <GradientStop Color="#00B4D815" Offset="1"/>
    </LinearGradientBrush>

    <!-- Origami Fold Gradient (3D depth effect) -->
    <LinearGradientBrush x:Key="OrigamiFoldGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#25303D" Offset="0"/>
        <GradientStop Color="#15202D" Offset="0.3"/>
        <GradientStop Color="#0A1520" Offset="1"/>
    </LinearGradientBrush>

    <!-- Pop-Out Card Gradient -->
    <LinearGradientBrush x:Key="PopOutCardGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#202D3D" Offset="0"/>
        <GradientStop Color="#152028" Offset="0.6"/>
        <GradientStop Color="#101820" Offset="1"/>
    </LinearGradientBrush>

    <!-- Depth Shadow Gradient -->
    <LinearGradientBrush x:Key="DepthShadowGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00000080" Offset="0"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>

    <!-- Accent Edge Gradient -->
    <LinearGradientBrush x:Key="NeonEdgeGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#00B4D800" Offset="0"/>
        <GradientStop Color="#00B4D8" Offset="0.5"/>
        <GradientStop Color="#00B4D800" Offset="1"/>
    </LinearGradientBrush>

    <!-- Selection Glow Gradient -->
    <RadialGradientBrush x:Key="SelectionGlowGradient" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="#48CAE440" Offset="0"/>
        <GradientStop Color="#48CAE420" Offset="0.5"/>
        <GradientStop Color="#48CAE400" Offset="1"/>
    </RadialGradientBrush>

    <!-- Ambient Glow Background -->
    <RadialGradientBrush x:Key="AmbientGlowBrush" Center="0.3,0.3" RadiusX="0.8" RadiusY="0.8">
        <GradientStop Color="#00B4D808" Offset="0"/>
        <GradientStop Color="#48CAE405" Offset="0.5"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </RadialGradientBrush>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         DROP SHADOW EFFECTS - Optimized for 60fps Performance
         BlurRadius kept under 20 for smooth rendering, use CacheMode on containers
    ══════════════════════════════════════════════════════════════════════════════ -->

    <!-- Primary Accent Glow - Optimized -->
    <DropShadowEffect x:Key="NeonGlow" Color="#00B4D8" BlurRadius="12" ShadowDepth="0" Opacity="0.5" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="NeonGlowSubtle" Color="#00B4D8" BlurRadius="8" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="NeonGlowIntense" Color="#00B4D8" BlurRadius="16" ShadowDepth="0" Opacity="0.6" RenderingBias="Performance"/>

    <!-- Cyan Glow - Optimized -->
    <DropShadowEffect x:Key="CyanGlow" Color="#48CAE4" BlurRadius="12" ShadowDepth="0" Opacity="0.5" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="CyanGlowSubtle" Color="#48CAE4" BlurRadius="8" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="CyanGlowIntense" Color="#48CAE4" BlurRadius="16" ShadowDepth="0" Opacity="0.6" RenderingBias="Performance"/>

    <!-- Purple Glow - Optimized -->
    <DropShadowEffect x:Key="PurpleGlow" Color="#A855F7" BlurRadius="12" ShadowDepth="0" Opacity="0.5" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="PurpleGlowSubtle" Color="#A855F7" BlurRadius="8" ShadowDepth="0" Opacity="0.3" RenderingBias="Performance"/>

    <!-- Pink Glow - Optimized -->
    <DropShadowEffect x:Key="PinkGlow" Color="#EC4899" BlurRadius="12" ShadowDepth="0" Opacity="0.5" RenderingBias="Performance"/>

    <!-- Depth Shadow (for pop-out effect) - Optimized -->
    <DropShadowEffect x:Key="PopOutShadow" Color="#000000" BlurRadius="18" ShadowDepth="10" Opacity="0.6" Direction="270" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="PopOutShadowSmall" Color="#000000" BlurRadius="12" ShadowDepth="5" Opacity="0.5" Direction="270" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="PopOutShadowLarge" Color="#000000" BlurRadius="25" ShadowDepth="15" Opacity="0.7" Direction="270" RenderingBias="Performance"/>

    <!-- Card Elevation Shadows - Optimized -->
    <DropShadowEffect x:Key="CardShadow1" Color="#000000" BlurRadius="8" ShadowDepth="3" Opacity="0.35" Direction="270" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="CardShadow2" Color="#000000" BlurRadius="12" ShadowDepth="5" Opacity="0.4" Direction="270" RenderingBias="Performance"/>
    <DropShadowEffect x:Key="CardShadow3" Color="#000000" BlurRadius="18" ShadowDepth="10" Opacity="0.5" Direction="270" RenderingBias="Performance"/>

    <!-- Inner Shadow Effect (simulated) - Optimized -->
    <DropShadowEffect x:Key="InnerShadow" Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.4" Direction="90" RenderingBias="Performance"/>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         BLADE PANEL STYLE - Xbox 360 Guide Menu Inspired
    ══════════════════════════════════════════════════════════════════════════════ -->

    <Style x:Key="BladePanel" TargetType="Border">
        <Setter Property="CornerRadius" Value="0,20,20,0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="{StaticResource BladePanelGradient}"/>
        <Setter Property="BorderThickness" Value="0,1,2,1"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#00B4D830" Offset="0"/>
                    <GradientStop Color="#48CAE420" Offset="0.5"/>
                    <GradientStop Color="#00B4D830" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect" Value="{StaticResource PopOutShadow}"/>
        <Setter Property="RenderTransformOrigin" Value="0,0.5"/>
        <!-- Performance: Cache the rendered bitmap for GPU acceleration -->
        <Setter Property="CacheMode">
            <Setter.Value>
                <BitmapCache EnableClearType="False" RenderAtScale="1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Blade Panel Active State -->
    <Style x:Key="BladePanelActive" TargetType="Border" BasedOn="{StaticResource BladePanel}">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#00B4D8" Offset="0"/>
                    <GradientStop Color="#48CAE4" Offset="0.5"/>
                    <GradientStop Color="#00B4D8" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00B4D8" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         ORIGAMI POP-OUT CARD STYLE
    ══════════════════════════════════════════════════════════════════════════════ -->

    <Style x:Key="OrigamiCard" TargetType="Border">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Background" Value="{StaticResource PopOutCardGradient}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00B4D830" Offset="0"/>
                    <GradientStop Color="#48CAE420" Offset="0.5"/>
                    <GradientStop Color="#00B4D830" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect" Value="{StaticResource PopOutShadowSmall}"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <TranslateTransform X="0" Y="0"/>
                </TransformGroup>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Origami Card Elevated (hover state) -->
    <Style x:Key="OrigamiCardElevated" TargetType="Border" BasedOn="{StaticResource OrigamiCard}">
        <Setter Property="Effect" Value="{StaticResource PopOutShadow}"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00B4D8" Offset="0"/>
                    <GradientStop Color="#48CAE4" Offset="0.5"/>
                    <GradientStop Color="#0096B8" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         BLADE NAVIGATION BUTTON STYLE
    ══════════════════════════════════════════════════════════════════════════════ -->

    <Style x:Key="BladeNavButton" TargetType="Button">
        <Setter Property="Height" Value="56"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BladeTextSecondaryBrush}"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Selection Indicator -->
                        <Border x:Name="SelectionIndicator" Width="4" HorizontalAlignment="Left"
                                Background="{StaticResource BladeNeonGreenBrush}"
                                CornerRadius="0,2,2,0" Opacity="0"/>

                        <!-- Main Content Area -->
                        <Border x:Name="ContentBorder" Background="{TemplateBinding Background}"
                                CornerRadius="0,12,12,0" Margin="4,0,0,0"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="ContentScale" ScaleX="1" ScaleY="1"/>
                                    <TranslateTransform x:Name="ContentSlide" X="0"/>
                                </TransformGroup>
                            </Border.RenderTransform>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <ContentPresenter Grid.Column="0" x:Name="IconPresenter"
                                                  Content="{TemplateBinding Tag}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0"/>

                                <!-- Text -->
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>

                                <!-- Arrow Indicator -->
                                <TextBlock Grid.Column="2" x:Name="Arrow" Text=">" FontSize="16"
                                           Foreground="{StaticResource BladeNeonGreenBrush}"
                                           VerticalAlignment="Center" Opacity="0" Margin="8,0,0,0">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform x:Name="ArrowSlide" X="-10"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Glow Effect Layer -->
                        <Border x:Name="GlowLayer" CornerRadius="0,12,12,0" Margin="4,0,0,0"
                                Opacity="0" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#00B4D815" Offset="0"/>
                                    <GradientStop Color="#00B4D800" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BladeTextPrimaryBrush}"/>
                            <Setter TargetName="ContentBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#20303D" Offset="0"/>
                                        <GradientStop Color="#15202D" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentSlide"
                                                         Storyboard.TargetProperty="X"
                                                         To="8" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="Arrow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="ArrowSlide"
                                                         Storyboard.TargetProperty="X"
                                                         To="0" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="SelectionIndicator"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.6" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="GlowLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentSlide"
                                                         Storyboard.TargetProperty="X"
                                                         To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="Arrow"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="ArrowSlide"
                                                         Storyboard.TargetProperty="X"
                                                         To="-10" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="SelectionIndicator"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="GlowLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BladeNeonGreenBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.98" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="ContentScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.98" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="SelectionIndicator"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ContentScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         BLADE TAB BUTTON STYLE (Xbox 360 Guide Blade Tabs)
    ══════════════════════════════════════════════════════════════════════════════ -->

    <Style x:Key="BladeTabButton" TargetType="RadioButton">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BladeTextDimBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <!-- Tab Shape (Blade-like) -->
                        <Border x:Name="TabBorder" CornerRadius="8,8,0,0"
                                RenderTransformOrigin="0.5,1"
                                Background="{TemplateBinding Background}">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="TabScale" ScaleX="1" ScaleY="1"/>
                                    <TranslateTransform x:Name="TabSlide" Y="0"/>
                                </TransformGroup>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Active Indicator Line -->
                        <Border x:Name="ActiveLine" Height="3" VerticalAlignment="Bottom"
                                CornerRadius="1.5,1.5,0,0" Opacity="0"
                                Background="{StaticResource BladeNeonGreenBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="#00B4D8" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                        </Border>

                        <!-- Glow Overlay -->
                        <Border x:Name="GlowOverlay" CornerRadius="8,8,0,0" Opacity="0"
                                IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                    <GradientStop Color="#00B4D820" Offset="0"/>
                                    <GradientStop Color="#00B4D800" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BladeTextSecondaryBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="TabSlide"
                                                         Storyboard.TargetProperty="Y"
                                                         To="-4" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="TabSlide"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BladeNeonGreenBrush}"/>
                            <Setter TargetName="TabBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                        <GradientStop Color="#15202D" Offset="0"/>
                                        <GradientStop Color="#10181F" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ActiveLine"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="GlowOverlay"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="TabSlide"
                                                         Storyboard.TargetProperty="Y"
                                                         To="-6" Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ActiveLine"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="GlowOverlay"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="TabSlide"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         POP-OUT BUTTON STYLE (Origami Fold Effect)
    ══════════════════════════════════════════════════════════════════════════════ -->

    <Style x:Key="PopOutButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BladePanelBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource BladeTextPrimaryBrush}"/>
        <Setter Property="Padding" Value="24,14"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#00B4D830"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/>
                                <TranslateTransform x:Name="ButtonTranslate" X="0" Y="0"/>
                            </TransformGroup>
                        </Grid.RenderTransform>

                        <!-- Shadow Layer (creates depth) -->
                        <Border x:Name="ShadowLayer" CornerRadius="12" Margin="0,4,0,0"
                                Background="#00000060" Opacity="0.5">
                            <Border.Effect>
                                <BlurEffect Radius="8"/>
                            </Border.Effect>
                        </Border>

                        <!-- Main Button -->
                        <Border x:Name="MainBorder" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Accent Edge Effect -->
                        <Border x:Name="NeonEdge" CornerRadius="12" Opacity="0"
                                BorderThickness="2" IsHitTestVisible="False"
                                BorderBrush="{StaticResource BladeNeonGreenBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="#00B4D8" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BladeNeonGreenBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Pop forward -->
                                        <DoubleAnimation Storyboard.TargetName="ButtonTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="-6" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.03" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.03" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Shadow deepens -->
                                        <DoubleAnimation Storyboard.TargetName="ShadowLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.2"/>
                                        <!-- Neon edge appears -->
                                        <DoubleAnimation Storyboard.TargetName="NeonEdge"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ButtonTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="ShadowLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.5" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="NeonEdge"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ButtonTranslate"
                                                         Storyboard.TargetProperty="Y"
                                                         To="2" Duration="0:0:0.06"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.97" Duration="0:0:0.06"/>
                                        <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.97" Duration="0:0:0.06"/>
                                        <DoubleAnimation Storyboard.TargetName="ShadowLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.3" Duration="0:0:0.06"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Pop-Out Button Accent (Teal) -->
    <Style x:Key="PopOutButtonAccent" TargetType="Button" BasedOn="{StaticResource PopOutButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00B4D8" Offset="0"/>
                    <GradientStop Color="#48CAE4" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#020408"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#00B4D8"/>
    </Style>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         BLADE ICON BUTTON
    ══════════════════════════════════════════════════════════════════════════════ -->

    <Style x:Key="BladeIconButton" TargetType="Button">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BladeTextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1"/>
                                <RotateTransform x:Name="IconRotate" Angle="0"/>
                            </TransformGroup>
                        </Grid.RenderTransform>

                        <!-- Background Circle -->
                        <Ellipse x:Name="BgCircle" Fill="{TemplateBinding Background}" Opacity="0"/>

                        <!-- Glow Ring -->
                        <Ellipse x:Name="GlowRing" Stroke="{StaticResource BladeNeonGreenBrush}"
                                 StrokeThickness="2" Opacity="0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#00B4D8" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <!-- Icon Content -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BladeNeonGreenBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.15" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.15" Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="BgCircle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.15" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="GlowRing"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.6" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="BgCircle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="GlowRing"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.9" Duration="0:0:0.05"/>
                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.9" Duration="0:0:0.05"/>
                                        <DoubleAnimation Storyboard.TargetName="GlowRing"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.15" Duration="0:0:0.12">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="IconScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.15" Duration="0:0:0.12">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         BLADE TEXT INPUT STYLE
    ══════════════════════════════════════════════════════════════════════════════ -->

    <Style x:Key="BladeTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BladeDeepBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource BladeTextPrimaryBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource BladeNeonGreenBrush}"/>
        <Setter Property="SelectionBrush" Value="#00B4D840"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#00B4D830"/>
        <Setter Property="Padding" Value="16,14"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <!-- Shadow Layer -->
                        <Border x:Name="ShadowBorder" CornerRadius="14" Margin="0,2,0,0"
                                Background="#00000040" Opacity="0.5">
                            <Border.Effect>
                                <BlurEffect Radius="6"/>
                            </Border.Effect>
                        </Border>

                        <!-- Main Border -->
                        <Border x:Name="MainBorder" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                <TextBlock x:Name="Placeholder" Text="{TemplateBinding Tag}"
                                           Foreground="{StaticResource BladeTextMutedBrush}"
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed" IsHitTestVisible="False"/>
                            </Grid>
                        </Border>

                        <!-- Accent Glow Border -->
                        <Border x:Name="GlowBorder" CornerRadius="14" Opacity="0"
                                BorderThickness="2" BorderBrush="{StaticResource BladeNeonGreenBrush}"
                                IsHitTestVisible="False">
                            <Border.Effect>
                                <DropShadowEffect Color="#00B4D8" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="{StaticResource BladeNeonGreenBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="ShadowBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.8" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="ShadowBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.5" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ══════════════════════════════════════════════════════════════════════════════
         FLOATING CARD STYLE (Message Bubbles)
    ══════════════════════════════════════════════════════════════════════════════ -->

    <Style x:Key="FloatingMessageCard" TargetType="Border">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#182030" Offset="0"/>
                    <GradientStop Color="#101820" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#00B4D820"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
