<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:VeaMarketplace.Client.Controls">

    <!-- Overseer Color Palette -->
    <Color x:Key="OverseerPrimary">#00FF88</Color>
    <Color x:Key="OverseerSecondary">#00CCFF</Color>
    <Color x:Key="OverseerAccent">#FF00FF</Color>
    <Color x:Key="OverseerWarning">#FFD700</Color>
    <Color x:Key="OverseerDanger">#FF4444</Color>
    <Color x:Key="OverseerBackground">#050510</Color>
    <Color x:Key="OverseerSurface">#101020</Color>
    <Color x:Key="OverseerSurfaceLight">#1A1A30</Color>
    <Color x:Key="OverseerText">#E0E0FF</Color>
    <Color x:Key="OverseerTextDim">#8080A0</Color>

    <SolidColorBrush x:Key="OverseerPrimaryBrush" Color="{StaticResource OverseerPrimary}"/>
    <SolidColorBrush x:Key="OverseerSecondaryBrush" Color="{StaticResource OverseerSecondary}"/>
    <SolidColorBrush x:Key="OverseerAccentBrush" Color="{StaticResource OverseerAccent}"/>
    <SolidColorBrush x:Key="OverseerBackgroundBrush" Color="{StaticResource OverseerBackground}"/>
    <SolidColorBrush x:Key="OverseerSurfaceBrush" Color="{StaticResource OverseerSurface}"/>
    <SolidColorBrush x:Key="OverseerTextBrush" Color="{StaticResource OverseerText}"/>
    <SolidColorBrush x:Key="OverseerTextDimBrush" Color="{StaticResource OverseerTextDim}"/>

    <!-- Rainbow Gradient -->
    <LinearGradientBrush x:Key="RainbowBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF6464" Offset="0"/>
        <GradientStop Color="#FFB464" Offset="0.14"/>
        <GradientStop Color="#FFFF64" Offset="0.28"/>
        <GradientStop Color="#64FF64" Offset="0.42"/>
        <GradientStop Color="#64FFFF" Offset="0.57"/>
        <GradientStop Color="#6496FF" Offset="0.71"/>
        <GradientStop Color="#C864FF" Offset="0.85"/>
        <GradientStop Color="#FF64C8" Offset="1"/>
    </LinearGradientBrush>

    <!-- Neon Glow Effect -->
    <DropShadowEffect x:Key="NeonGlowGreen" Color="#00FF88" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
    <DropShadowEffect x:Key="NeonGlowCyan" Color="#00CCFF" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
    <DropShadowEffect x:Key="NeonGlowPink" Color="#FF00FF" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>

    <!-- Circular Button Style -->
    <Style x:Key="OverseerCircleButton" TargetType="Button">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Background" Value="{StaticResource OverseerSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource OverseerPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource OverseerPrimaryBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse x:Name="bg"
                                 Fill="{TemplateBinding Background}"
                                 Stroke="{TemplateBinding BorderBrush}"
                                 StrokeThickness="{Binding BorderThickness.Left, RelativeSource={RelativeSource TemplatedParent}}"
                                 Effect="{StaticResource NeonGlowGreen}"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bg" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#00FF88" BlurRadius="30" ShadowDepth="0" Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bg" Property="Fill" Value="{StaticResource OverseerPrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource OverseerBackgroundBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Pill Button Style -->
    <Style x:Key="OverseerPillButton" TargetType="Button">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="24,8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource OverseerPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource OverseerPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20"
                            Padding="{TemplateBinding Padding}"
                            Effect="{StaticResource NeonGlowGreen}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#20FF88"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#00FF88" BlurRadius="35" ShadowDepth="0" Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource OverseerPrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource OverseerBackgroundBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Circular TextBox Style -->
    <Style x:Key="OverseerTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource OverseerSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource OverseerTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource OverseerSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CaretBrush" Value="{StaticResource OverseerPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="25"
                            Effect="{StaticResource NeonGlowCyan}">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource OverseerPrimaryBrush}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#00FF88" BlurRadius="25" ShadowDepth="0" Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Circular Card Style -->
    <Style x:Key="OverseerCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource OverseerSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource OverseerSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="30"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00CCFF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Circular Panel Style -->
    <Style x:Key="OverseerPanel" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#15152A" Offset="0"/>
                    <GradientStop Color="#0A0A15" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00FF88" Offset="0"/>
                    <GradientStop Color="#00CCFF" Offset="0.5"/>
                    <GradientStop Color="#FF00FF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="40"/>
        <Setter Property="Padding" Value="24"/>
    </Style>

    <!-- Glowing Label Style -->
    <Style x:Key="OverseerGlowLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource OverseerPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FF88" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Rainbow Label Style -->
    <Style x:Key="OverseerRainbowLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource RainbowBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FFFFFF" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Circular ScrollViewer Style -->
    <Style x:Key="OverseerScrollViewer" TargetType="ScrollViewer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollViewer">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <ScrollContentPresenter Grid.Column="0"/>
                        <ScrollBar x:Name="PART_VerticalScrollBar"
                                   Grid.Column="1"
                                   Orientation="Vertical"
                                   Value="{TemplateBinding VerticalOffset}"
                                   Maximum="{TemplateBinding ScrollableHeight}"
                                   ViewportSize="{TemplateBinding ViewportHeight}"
                                   Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Item Style -->
    <Style x:Key="OverseerNavItem" TargetType="RadioButton">
        <Setter Property="Width" Value="56"/>
        <Setter Property="Height" Value="56"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource OverseerTextDimBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <Ellipse x:Name="bg" Fill="{TemplateBinding Background}" Opacity="0"/>
                        <Ellipse x:Name="ring" Stroke="{StaticResource OverseerPrimaryBrush}"
                                 StrokeThickness="2" Opacity="0"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bg" Property="Fill" Value="{StaticResource OverseerSurfaceBrush}"/>
                            <Setter TargetName="bg" Property="Opacity" Value="0.5"/>
                            <Setter Property="Foreground" Value="{StaticResource OverseerSecondaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="ring" Property="Opacity" Value="1"/>
                            <Setter TargetName="ring" Property="Effect" Value="{StaticResource NeonGlowGreen}"/>
                            <Setter Property="Foreground" Value="{StaticResource OverseerPrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Orb/Avatar Style -->
    <Style x:Key="OverseerAvatar" TargetType="Border">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="BorderBrush" Value="{StaticResource OverseerSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00CCFF" BlurRadius="12" ShadowDepth="0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Online Status Indicator -->
    <Style x:Key="OverseerOnlineIndicator" TargetType="Ellipse">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Fill" Value="{StaticResource OverseerPrimaryBrush}"/>
        <Setter Property="Stroke" Value="{StaticResource OverseerBackgroundBrush}"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FF88" BlurRadius="8" ShadowDepth="0" Opacity="1"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
